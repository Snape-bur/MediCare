@page
@model RegisterModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="min-h-screen flex items-center justify-center bg-secondary/50 px-4 py-12">
    <div class="w-full max-w-5xl bg-white rounded-[2.5rem] shadow-[0_32px_64px_-12px_rgba(0,0,0,0.1)] overflow-hidden grid md:grid-cols-2 border border-white">

        <div class="p-8 sm:p-12 lg:p-16">
            <div class="mb-10">
                <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-accent/10 border border-accent/20 mb-6">
                    <span class="relative flex h-2 w-2">
                        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-accent opacity-75"></span>
                        <span class="relative inline-flex rounded-full h-2 w-2 bg-accent"></span>
                    </span>
                    <span class="text-[10px] font-bold uppercase tracking-[0.15em] text-neutral">New Patient Onboarding</span>
                </div>
                <h1 class="text-4xl font-black text-brand-900 tracking-tight">Join MediCare</h1>
                <p class="mt-3 text-neutral/70 font-medium">Start your journey toward better health management today.</p>
            </div>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-5">
                <div asp-validation-summary="ModelOnly" class="p-4 rounded-2xl bg-red-50 text-red-600 text-xs font-semibold" role="alert"></div>

                <div class="space-y-1.5">
                    <label asp-for="Input.Email" class="text-[11px] font-bold text-neutral/40 uppercase tracking-widest ml-1">Email Address</label>
                    <div class="relative group">
                        <input asp-for="Input.Email"
                               class="w-full rounded-2xl border-2 border-secondary bg-secondary/20 px-5 py-4 text-sm outline-none transition-all placeholder:text-neutral/30 focus:border-accent focus:bg-white focus:ring-4 focus:ring-accent/10"
                               placeholder="e.g. hello@patient.com" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-red-500 text-[10px] italic ml-1"></span>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div class="space-y-1.5">
                        <label asp-for="Input.Password" class="text-[11px] font-bold text-neutral/40 uppercase tracking-widest ml-1">Password</label>
                        <input asp-for="Input.Password"
                               class="w-full rounded-2xl border-2 border-secondary bg-secondary/20 px-5 py-4 text-sm outline-none transition-all focus:border-accent focus:bg-white focus:ring-4 focus:ring-accent/10"
                               placeholder="••••••••" />
                        <span asp-validation-for="Input.Password" class="text-red-500 text-[10px] italic ml-1"></span>
                    </div>

                    <div class="space-y-1.5">
                        <label asp-for="Input.ConfirmPassword" class="text-[11px] font-bold text-neutral/40 uppercase tracking-widest ml-1">Confirm</label>
                        <input asp-for="Input.ConfirmPassword"
                               class="w-full rounded-2xl border-2 border-secondary bg-secondary/20 px-5 py-4 text-sm outline-none transition-all focus:border-accent focus:bg-white focus:ring-4 focus:ring-accent/10"
                               placeholder="••••••••" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-[10px] italic ml-1"></span>
                    </div>
                </div>

                <div class="space-y-1.5">
                    <label class="text-[11px] font-bold text-neutral/40 uppercase tracking-widest ml-1">Security Verification</label>
                    <div class="flex justify-center p-4 bg-secondary/20 border-2 border-secondary rounded-2xl transition-all hover:bg-white focus-within:border-accent">
                        <div class="cf-turnstile"
                             data-sitekey="@Model.TurnstileSiteKey"
                             data-theme="light"
                             data-size="flexible"></div>
                    </div>
                </div>

                <div class="pt-2">
                    <button id="registerSubmit" type="submit"
                            class="w-full rounded-2xl bg-brand-900 py-4 px-6 text-sm font-black text-white shadow-xl shadow-brand-900/20 transition-all hover:bg-neutral hover:-translate-y-0.5 active:scale-95 flex items-center justify-center gap-3">
                        <span>Create My Patient Account</span>
                        <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4" /></svg>
                    </button>
                </div>
            </form>

            <div class="mt-8 text-center">
                <p class="text-sm text-neutral/60 font-medium">
                    Already a member?
                    <a asp-page="./Login" class="text-brand-900 font-extrabold hover:text-accent transition-colors underline decoration-accent/30 underline-offset-4">Sign In here</a>
                </p>
            </div>
        </div>

        <div class="bg-brand-900 p-8 sm:p-12 lg:p-16 flex flex-col justify-between relative overflow-hidden">
            <div class="absolute -right-20 -bottom-20 opacity-5">
                <svg class="w-96 h-96 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm5 11h-4v4h-2v-4H7v-2h4V7h2v4h4v2z" />
                </svg>
            </div>

            <div class="relative z-10">
                <h3 class="text-2xl font-bold text-white tracking-tight">One-Click Signup</h3>
                <p class="mt-2 text-secondary/60 text-sm leading-relaxed">Skip the form and join instantly with your trusted digital identity.</p>

                <div class="mt-8 space-y-4">
                    @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div class="rounded-2xl border border-white/10 bg-white/5 p-6 backdrop-blur-sm text-center">
                            <p class="text-xs text-white/40 italic">External authentication services are currently being updated.</p>
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-3">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" name="provider" value="@provider.Name"
                                        class="w-full flex items-center justify-center gap-3 rounded-2xl bg-white px-6 py-4 text-sm font-bold text-brand-900 transition-all hover:bg-accent hover:text-neutral hover:shadow-2xl active:scale-95">
                                    <span>Continue with @provider.DisplayName</span>
                                </button>
                            }
                        </form>
                    }
                </div>
            </div>

            <div class="relative z-10 pt-12">
                <div class="bg-white/5 border border-white/10 rounded-2xl p-6 backdrop-blur-md">
                    <div class="flex items-center gap-4">
                        <div class="flex-shrink-0 w-10 h-10 rounded-full bg-accent/20 flex items-center justify-center">
                            <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>
                        </div>
                        <div>
                            <p class="text-white text-xs font-bold uppercase tracking-widest">Secure & Private</p>
                            <p class="text-secondary/50 text-[10px] mt-1 leading-relaxed">Your data is protected with 256-bit encryption and HIPAA-compliant storage.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
}