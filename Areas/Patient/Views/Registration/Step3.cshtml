@model MediCare.Areas.Patient.Models.Step3MedicalVM

@{
    ViewData["Title"] = "Medical History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto mt-10">
    @await Html.PartialAsync("_RegistrationProgress", new MediCare.Areas.Patient.Models.RegistrationProgressViewModel { CurrentStep = 3 })
</div>

<div class="max-w-3xl mx-auto px-4 py-8">
    <div class="mb-10 text-center">
        <div class="w-20 h-20 bg-indigo-50 text-indigo-600 rounded-[2rem] flex items-center justify-center mx-auto mb-4 shadow-inner">
            <i data-lucide="activity" class="w-10 h-10"></i>
        </div>
        <h2 class="text-3xl font-black text-slate-900 tracking-tight">Health <span class="text-indigo-600">Declaration</span></h2>
        <p class="text-slate-500 font-medium mt-1">Provide essential health history to help your doctors prepare for your visits.</p>
    </div>

    <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-2xl shadow-slate-900/5 overflow-hidden animate-in fade-in slide-in-from-bottom-4 duration-700">
        <div class="h-2 bg-gradient-to-r from-indigo-500 via-purple-500 to-blue-600"></div>

        <div class="p-10">
            <form asp-action="Step3" method="post" class="space-y-8">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="p-4 bg-red-50 text-red-600 rounded-2xl text-[10px] font-black uppercase tracking-widest mb-6"></div>

                <div class="space-y-4">
                    <div class="flex items-center justify-between ml-1">
                        <label asp-for="MedicalHistory" class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Health History & Allergies <span class="text-red-500">*</span></label>
                        <span class="text-[10px] font-bold text-slate-300 uppercase italic">Confidential</span>
                    </div>

                    <div class="relative group">
                        <i data-lucide="clipboard-list" class="absolute left-5 top-5 w-5 h-5 text-slate-300 group-focus-within:text-indigo-600 transition-colors"></i>
                        <textarea asp-for="MedicalHistory" rows="6"
                                  class="w-full bg-slate-50 border-none rounded-[2rem] focus:ring-2 focus:ring-indigo-600 p-6 pl-14 font-semibold text-slate-900 placeholder-slate-300 transition-all shadow-inner leading-relaxed"
                                  placeholder="Please list any chronic conditions, regular medications, or drug allergies (e.g., Penicillin, Asthma, Diabetes)..."></textarea>
                    </div>
                    <span asp-validation-for="MedicalHistory" class="text-[10px] text-red-500 font-bold ml-1"></span>
                </div>

                <div class="p-8 bg-slate-900 rounded-[2.5rem] text-white relative overflow-hidden">
                    <i data-lucide="lock" class="absolute -right-4 -bottom-4 w-24 h-24 text-white/5 rotate-12"></i>
                    <div class="flex items-center gap-4 relative z-10">
                        <div class="p-3 bg-indigo-500/20 rounded-xl text-indigo-400">
                            <i data-lucide="shield-check" class="w-6 h-6"></i>
                        </div>
                        <div>
                            <p class="text-xs font-black uppercase tracking-widest">Medical Privacy Protocol</p>
                            <p class="text-[11px] text-slate-400 mt-1 leading-relaxed font-medium">This information is protected under healthcare privacy laws. It will only be visible to doctors you explicitly book an appointment with.</p>
                        </div>
                    </div>
                </div>

                <div class="pt-8 flex items-center justify-between gap-6 border-t border-slate-50">
                    <a asp-action="Step2" class="px-8 py-4 bg-white text-slate-400 font-black text-xs rounded-xl border border-slate-200 hover:text-slate-900 hover:bg-slate-50 transition-all uppercase tracking-widest flex items-center gap-2 group">
                        <i data-lucide="chevron-left" class="w-4 h-4 group-hover:-translate-x-1 transition-transform"></i>
                        Back
                    </a>

                    <div class="hidden md:block flex-1 max-w-[150px]">
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] text-center">Step 3 of 3</p>
                        <div class="h-1.5 w-full bg-slate-100 rounded-full mt-2 overflow-hidden">
                            <div class="h-full w-full bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full"></div>
                        </div>
                    </div>

                    <button type="submit"
                            class="px-12 py-4 bg-indigo-600 text-white font-black rounded-2xl shadow-xl shadow-indigo-100 hover:bg-indigo-700 hover:-translate-y-1 transition-all active:scale-[0.98] flex items-center justify-center gap-3 group">
                        Complete Registration
                        <i data-lucide="check" class="w-5 h-5 group-hover:scale-110 transition-transform"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>