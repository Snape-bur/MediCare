@model MediCare.Areas.Patient.Models.Step2ContactVM

@{
    ViewData["Title"] = "Contact Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto mt-10">
    @await Html.PartialAsync("_RegistrationProgress", new MediCare.Areas.Patient.Models.RegistrationProgressViewModel { CurrentStep = 2 })
</div>

<div class="max-w-3xl mx-auto px-4 py-8">
    <div class="mb-10 text-center">
        <div class="w-20 h-20 bg-emerald-50 text-emerald-600 rounded-[2rem] flex items-center justify-center mx-auto mb-4 shadow-inner">
            <i data-lucide="contact" class="w-10 h-10"></i>
        </div>
        <h2 class="text-3xl font-black text-slate-900 tracking-tight">Contact <span class="text-emerald-600">Details</span></h2>
        <p class="text-slate-500 font-medium mt-1">Provide your verified contact information for appointment updates.</p>
    </div>

    <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-2xl shadow-slate-900/5 overflow-hidden animate-in fade-in slide-in-from-bottom-4 duration-700">
        <div class="h-2 bg-gradient-to-r from-emerald-500 to-blue-600"></div>

        <div class="p-10">
            <form asp-action="Step2" method="post" class="space-y-8">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="p-4 bg-red-50 text-red-600 rounded-2xl text-[10px] font-black uppercase tracking-widest mb-6"></div>

                <div class="space-y-2">
                    <label asp-for="PhoneNumber" class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Verified Phone Number <span class="text-red-500">*</span></label>
                    <div class="relative group">
                        <i data-lucide="phone" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300 group-focus-within:text-emerald-600 transition-colors"></i>
                        <input asp-for="PhoneNumber"
                               class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-emerald-600 p-4 pl-12 font-bold text-slate-900 placeholder-slate-300 transition-all shadow-inner"
                               placeholder="e.g. +66 81 234 5678" />
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-[10px] text-red-500 font-bold ml-1"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="Address" class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Residential Address <span class="text-red-500">*</span></label>
                    <div class="relative group">
                        <textarea asp-for="Address" rows="4"
                                  class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-emerald-600 p-4 font-semibold text-slate-900 placeholder-slate-300 transition-all shadow-inner leading-relaxed"
                                  placeholder="Enter your full street address, apartment, or landmark..."></textarea>
                    </div>
                    <span asp-validation-for="Address" class="text-[10px] text-red-500 font-bold ml-1"></span>
                </div>

                <div class="p-6 bg-slate-50 rounded-3xl flex items-start gap-4 border border-slate-100">
                    <div class="mt-1">
                        <i data-lucide="bell-ring" class="w-5 h-5 text-blue-500"></i>
                    </div>
                    <div>
                        <p class="text-xs font-bold text-slate-700">Notification Alerts</p>
                        <p class="text-[11px] text-slate-500 leading-relaxed mt-1">We will send appointment reminders and clinic updates to the number provided above. You can manage these in your profile settings later.</p>
                    </div>
                </div>

                <div class="pt-8 flex items-center justify-between gap-6 border-t border-slate-50">
                    <a asp-action="Step1" class="px-8 py-4 bg-white text-slate-400 font-black text-xs rounded-xl border border-slate-200 hover:text-slate-900 hover:bg-slate-50 transition-all uppercase tracking-widest flex items-center gap-2 group">
                        <i data-lucide="arrow-left" class="w-4 h-4 group-hover:-translate-x-1 transition-transform"></i>
                        Back
                    </a>

                    <div class="hidden md:block flex-1 max-w-[150px]">
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] text-center">Step 2 of 3</p>
                        <div class="h-1.5 w-full bg-slate-100 rounded-full mt-2 overflow-hidden">
                            <div class="h-full w-2/3 bg-emerald-500 rounded-full"></div>
                        </div>
                    </div>

                    <button type="submit"
                            class="px-12 py-4 bg-emerald-600 text-white font-black rounded-2xl shadow-xl shadow-emerald-100 hover:bg-emerald-700 hover:-translate-y-1 transition-all active:scale-[0.98] flex items-center justify-center gap-3 group">
                        Next Phase
                        <i data-lucide="chevron-right" class="w-5 h-5 group-hover:translate-x-1 transition-transform"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>