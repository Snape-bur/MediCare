@model MediCare.Areas.Patient.Models.Step1PersonalInfoVM

@{
    ViewData["Title"] = "Personal Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto mt-10">
    @await Html.PartialAsync("_RegistrationProgress", new MediCare.Areas.Patient.Models.RegistrationProgressViewModel { CurrentStep = 1 })
</div>

<div class="max-w-3xl mx-auto px-4 py-8">
    <div class="mb-10 text-center">
        <div class="w-20 h-20 bg-blue-50 text-blue-600 rounded-[2rem] flex items-center justify-center mx-auto mb-4 shadow-inner">
            <i data-lucide="user-plus" class="w-10 h-10"></i>
        </div>
        <h2 class="text-3xl font-black text-slate-900 tracking-tight">Create <span class="text-blue-600">Profile</span></h2>
        <p class="text-slate-500 font-medium mt-1">Let's start with your basic identification details.</p>
    </div>

    <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-2xl shadow-slate-900/5 overflow-hidden animate-in fade-in slide-in-from-bottom-4 duration-700">
        <div class="h-2 bg-gradient-to-r from-blue-600 to-indigo-600"></div>

        <div class="p-10">
            <form asp-action="Step1" method="post" class="space-y-8">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="p-4 bg-red-50 text-red-600 rounded-2xl text-[10px] font-black uppercase tracking-widest mb-6"></div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="space-y-2">
                        <label asp-for="FirstName" class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">First Name <span class="text-red-500">*</span></label>
                        <div class="relative group">
                            <i data-lucide="user" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300 group-focus-within:text-blue-600 transition-colors"></i>
                            <input asp-for="FirstName"
                                   class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-600 p-4 pl-12 font-bold text-slate-900 placeholder-slate-300 transition-all shadow-inner"
                                   placeholder="e.g. John" />
                        </div>
                        <span asp-validation-for="FirstName" class="text-[10px] text-red-500 font-bold ml-1"></span>
                    </div>

                    <div class="space-y-2">
                        <label asp-for="LastName" class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Last Name <span class="text-red-500">*</span></label>
                        <div class="relative group">
                            <i data-lucide="signature" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300 group-focus-within:text-blue-600 transition-colors"></i>
                            <input asp-for="LastName"
                                   class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-600 p-4 pl-12 font-bold text-slate-900 placeholder-slate-300 transition-all shadow-inner"
                                   placeholder="e.g. Doe" />
                        </div>
                        <span asp-validation-for="LastName" class="text-[10px] text-red-500 font-bold ml-1"></span>
                    </div>

                    <div class="space-y-2">
                        <label asp-for="DateOfBirth" class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Date of Birth <span class="text-red-500">*</span></label>
                        <div class="relative group">
                            <i data-lucide="calendar" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300 group-focus-within:text-blue-600 transition-colors pointer-events-none"></i>
                            <input asp-for="DateOfBirth" type="date"
                                   class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-600 p-4 pl-12 font-bold text-slate-900 transition-all shadow-inner" />
                        </div>
                        <span asp-validation-for="DateOfBirth" class="text-[10px] text-red-500 font-bold ml-1"></span>
                    </div>

                    <div class="space-y-2">
                        <label asp-for="Gender" class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Gender Identity <span class="text-red-500">*</span></label>
                        <div class="relative group">
                            <i data-lucide="users-2" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300 group-focus-within:text-blue-600 transition-colors pointer-events-none"></i>
                            <select asp-for="Gender" class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-600 p-4 pl-12 font-bold text-slate-900 appearance-none shadow-inner transition-all">
                                <option value="">-- Select --</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                            <i data-lucide="chevron-down" class="absolute right-4 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-400 pointer-events-none"></i>
                        </div>
                        <span asp-validation-for="Gender" class="text-[10px] text-red-500 font-bold ml-1"></span>
                    </div>
                </div>

                <div class="mt-8 p-6 bg-blue-50 rounded-3xl flex items-start gap-4">
                    <div class="p-2 bg-white rounded-xl shadow-sm text-blue-600">
                        <i data-lucide="info" class="w-5 h-5"></i>
                    </div>
                    <div>
                        <p class="text-xs font-bold text-slate-700">Privacy Assurance</p>
                        <p class="text-[11px] text-slate-500 leading-relaxed mt-1">Your personal information is securely encrypted and only shared with verified healthcare providers during your scheduled consultations.</p>
                    </div>
                </div>

                <div class="pt-8 flex items-center justify-between gap-6">
                    <div class="hidden md:block">
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em]">Step 1 of 3</p>
                        <div class="h-1.5 w-32 bg-slate-100 rounded-full mt-2 overflow-hidden">
                            <div class="h-full w-1/3 bg-blue-600 rounded-full"></div>
                        </div>
                    </div>

                    <button type="submit"
                            class="flex-1 md:flex-none py-4 px-12 bg-blue-600 text-white font-black rounded-2xl shadow-xl shadow-blue-100 hover:bg-blue-700 hover:-translate-y-1 transition-all active:scale-[0.98] flex items-center justify-center gap-3 group">
                        Continue to Step 2
                        <i data-lucide="arrow-right" class="w-5 h-5 group-hover:translate-x-1 transition-transform"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>