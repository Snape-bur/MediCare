@model IEnumerable<MediCare.Models.Doctor>
@{
    ViewData["Title"] = "Find a Doctor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto px-4 py-12">

    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-12">
        <div>
            <h2 class="text-4xl font-black text-gray-900 tracking-tight">
                Find a <span class="text-blue-600">Doctor</span>
            </h2>
            <p class="text-gray-500 mt-2 font-medium">Search for specialized healthcare professionals near you.</p>
        </div>
        <a asp-area="Patient" asp-controller="Dashboard" asp-action="Index"
           class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-gray-50 text-gray-700 font-bold border border-gray-200 hover:bg-gray-100 hover:text-blue-600 transition-all shadow-sm">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
            Back to Dashboard
        </a>
    </div>

    <div class="bg-white rounded-3xl shadow-xl shadow-blue-900/5 border border-gray-100 p-2 mb-12">
        <form method="get" asp-action="Index" class="grid grid-cols-1 md:grid-cols-7 gap-2">
            <div class="md:col-span-3 p-4">
                <label class="flex items-center gap-2 text-xs font-bold text-gray-400 uppercase tracking-widest mb-2 ml-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" /></svg>
                    Specialty
                </label>
                <select name="specialtyId" class="w-full bg-gray-50 border-none rounded-xl focus:ring-2 focus:ring-blue-500 font-medium text-gray-700 p-3">
                    <option value="">All Specialties</option>
                    @foreach (var s in ViewBag.Specialties)
                    {
                        <option value="@s.SpecialtyId">@s.Name</option>
                    }
                </select>
            </div>

            <div class="md:col-span-3 p-4">
                <label class="flex items-center gap-2 text-xs font-bold text-gray-400 uppercase tracking-widest mb-2 ml-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" /></svg>
                    Clinic Location
                </label>
                <select name="clinicId" class="w-full bg-gray-50 border-none rounded-xl focus:ring-2 focus:ring-blue-500 font-medium text-gray-700 p-3">
                    <option value="">All Clinics</option>
                    @foreach (var c in ViewBag.Clinics)
                    {
                        <option value="@c.ClinicId">@c.Name</option>
                    }
                </select>
            </div>

            <div class="md:col-span-1 p-2 flex">
                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white rounded-2xl transition-all flex items-center justify-center shadow-lg shadow-blue-200 group">
                    <svg class="w-6 h-6 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
                </button>
            </div>
        </form>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-20 bg-gray-50 rounded-3xl border-2 border-dashed border-gray-200">
            <div class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4 text-gray-400">
                <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 9.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900">No doctors found</h3>
            <p class="text-gray-500 mt-1">Try adjusting your filters or search criteria.</p>
        </div>
    }
    else
    {
        <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
            @foreach (var doctor in Model)
            {
                <div class="group bg-white rounded-3xl border border-gray-100 shadow-sm hover:shadow-2xl transition-all duration-500 overflow-hidden flex flex-col">
                    <div class="h-2 bg-gradient-to-r from-blue-600 to-cyan-400"></div>

                    <div class="p-8 flex-1">
                        <div class="flex items-start justify-between mb-6">
                            <div class="w-16 h-16 rounded-2xl bg-blue-50 flex items-center justify-center text-blue-600 text-2xl font-bold shadow-inner group-hover:bg-blue-600 group-hover:text-white transition-colors duration-300">
                                @doctor.AppUser.FullName.Substring(0, 1)
                            </div>
                            <div class="text-right">
                                <span class="block text-xs font-black text-gray-400 uppercase">Consultation</span>
                                <span class="text-xl font-bold text-blue-600">฿ @doctor.ConsultationFee.ToString("N0")</span>
                            </div>
                        </div>

                        <h5 class="text-xl font-bold text-gray-900 mb-1 group-hover:text-blue-600 transition-colors"> @doctor.AppUser.FullName</h5>
                        <p class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-blue-50 text-blue-700 mb-6">
                            @doctor.Specialty?.Name
                        </p>

                        <div class="space-y-3 mb-6">
                            <div class="flex items-center gap-3 text-sm text-gray-600">
                                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" /></svg>
                                @doctor.Clinic?.Name
                            </div>
                        </div>

                        <p class="text-sm text-gray-500 line-clamp-2 italic leading-relaxed">
                            "@doctor.ProfileInfo"
                        </p>
                    </div>

                    <div class="px-8 pb-8">
                        <a asp-action="Details" asp-route-id="@doctor.DoctorId"
                           class="w-full flex items-center justify-center gap-2 py-4 bg-gray-900 group-hover:bg-blue-600 text-white font-bold rounded-2xl transition-all shadow-lg shadow-gray-200">
                            View Doctor Profile
                            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" /></svg>
                        </a>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-16 text-center">
        <a asp-area="Patient" asp-controller="Dashboard" asp-action="Index"
           class="text-sm font-bold text-gray-400 hover:text-gray-600 transition-colors uppercase tracking-widest flex items-center justify-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
            Cancel and Return
        </a>
    </div>
</div>