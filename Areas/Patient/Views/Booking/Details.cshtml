@model MediCare.Models.Doctor
@{
    ViewData["Title"] = "Doctor Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var availabilities = ViewBag.Availabilities as List<MediCare.Models.Availability>;
}

<div class="max-w-4xl mx-auto mt-12 bg-white shadow-lg rounded-3xl p-8">
    <div class="flex flex-col md:flex-row gap-6 items-center">
        <img src="https://cdn-icons-png.flaticon.com/512/3774/3774299.png"
             alt="Doctor" class="w-32 h-32 object-contain" />
        <div>
            <h2 class="text-2xl font-semibold text-blue-700">@Model.AppUser.FullName</h2>
            <p class="text-gray-700"><span class="font-semibold">Specialty:</span> @Model.Specialty?.Name</p>
            <p class="text-gray-700"><span class="font-semibold">Clinic:</span> @Model.Clinic?.Name </p>
            <p class="text-gray-700"><span class="font-semibold">Address:</span> @Model.Clinic?.Address </p>
            <p class="text-gray-700">
                <span class="font-semibold">Consultation Fee:</span>
                <span class="text-green-600 font-bold">฿@Model.ConsultationFee.ToString("N2")</span>
            </p>
            <p class="text-gray-500 mt-2">@Model.ProfileInfo</p>
        </div>
    </div>

    <hr class="my-6 border-gray-200" />

    <h3 class="text-lg font-semibold text-gray-800 mb-3 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-600" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10 2a8 8 0 100 16 8 8 0 000-16zm.75 4v4.25l2.5 1.5-.75 1.25-3.25-2V6h1.5z" />
        </svg>
        Available Slots
    </h3>

    @if (availabilities == null || !availabilities.Any())
    {
        <div class="bg-yellow-50 border border-yellow-300 text-yellow-700 px-4 py-3 rounded-md text-center">
            No available slots found for this doctor.
        </div>
    }
    else
    {
        <div class="overflow-x-auto">
            <table class="min-w-full text-sm text-center border border-gray-200 rounded-lg">
                <thead class="bg-gray-100 text-gray-600 uppercase">
                    <tr>
                        <th class="px-4 py-2">Day</th>
                        <th class="px-4 py-2">Start Time</th>
                        <th class="px-4 py-2">End Time</th>
                        <th class="px-4 py-2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var slot in availabilities)
                    {
                        <tr class="border-t hover:bg-gray-50">
                            <td class="py-2">
                                @slot.Day
                                <br />
                                <span class="text-xs text-gray-500">
                                    @NextDate(slot.Day).ToString("dd MMM yyyy")
                                </span>
                            </td>

                            <td>@slot.StartTime.ToString(@"hh\:mm")</td>
                            <td>@slot.EndTime.ToString(@"hh\:mm")</td>
                            <td>
                                <form asp-action="Book" method="post">
                                    <input type="hidden" name="doctorId" value="@Model.DoctorId" />
                                    <input type="hidden" name="day" value="@slot.Day" />
                                    <input type="hidden" name="date" value="@NextDate(slot.Day).ToString("yyyy-MM-dd")" />
                                    <input type="hidden" name="start" value="@slot.StartTime" />
                                    <input type="hidden" name="end" value="@slot.EndTime" />
                                    <button type="submit"
                                            class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-4 py-1.5 rounded-full transition">
                                        Book This Slot
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="text-center mt-6">
        <a asp-action="Index" asp-controller="Appointments"
           class="inline-block bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium px-5 py-2 rounded-full transition">
            ← Back to Find Doctors
        </a>
    </div>
</div>

@functions {
    DateTime NextDate(DayOfWeek day)
    {
        var today = DateTime.Today;
        int daysToAdd = ((int)day - (int)today.DayOfWeek + 7) % 7;
        if (daysToAdd == 0)
            daysToAdd = 7; // Always future day
        return today.AddDays(daysToAdd);
    }
}
