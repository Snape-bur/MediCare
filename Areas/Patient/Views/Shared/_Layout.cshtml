<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MediCare</title>

    <!-- ✅ Add Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- (Optional) Customize Tailwind theme -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        brand: {
                            900: '#1e3a8a',
                            800: '#1e40af',
                        },
                        accent: '#facc15', // yellow
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 text-gray-900">

    <header>
        <!-- Your site header / nav bar -->
    </header>

    <main class="min-h-screen">
        @RenderBody()
    </main>

    <footer class="bg-gray-100 p-4 text-center text-sm text-gray-500">
        &copy; 2025 - MediCare
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
