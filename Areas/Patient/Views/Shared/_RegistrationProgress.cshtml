@model MediCare.Areas.Patient.Models.RegistrationProgressViewModel

<div class="mb-8">
    <div class="flex items-center justify-between">
        <!-- Step 1 -->
        <div class="flex-1 flex items-center">
            <div class="flex flex-col items-center text-center w-1/3">
                <div class="w-10 h-10 rounded-full flex items-center justify-center
                    @(Model.CurrentStep >= 1 ? "bg-blue-600 text-white" : "bg-gray-300 text-gray-600")">
                    1
                </div>
                <span class="mt-2 text-sm font-medium
                    @(Model.CurrentStep >= 1 ? "text-blue-600" : "text-gray-500")">
                    Personal Info
                </span>
            </div>

            <!-- Line between step 1 and 2 -->
            <div class="flex-1 h-1
                @(Model.CurrentStep >= 2 ? "bg-blue-600" : "bg-gray-300")">
            </div>

            <!-- Step 2 -->
            <div class="flex flex-col items-center text-center w-1/3">
                <div class="w-10 h-10 rounded-full flex items-center justify-center
                    @(Model.CurrentStep >= 2 ? "bg-blue-600 text-white" : "bg-gray-300 text-gray-600")">
                    2
                </div>
                <span class="mt-2 text-sm font-medium
                    @(Model.CurrentStep >= 2 ? "text-blue-600" : "text-gray-500")">
                    Contact Info
                </span>
            </div>

            <!-- Line between step 2 and 3 -->
            <div class="flex-1 h-1
                @(Model.CurrentStep >= 3 ? "bg-blue-600" : "bg-gray-300")">
            </div>

            <!-- Step 3 -->
            <div class="flex flex-col items-center text-center w-1/3">
                <div class="w-10 h-10 rounded-full flex items-center justify-center
                    @(Model.CurrentStep >= 3 ? "bg-blue-600 text-white" : "bg-gray-300 text-gray-600")">
                    3
                </div>
                <span class="mt-2 text-sm font-medium
                    @(Model.CurrentStep >= 3 ? "text-blue-600" : "text-gray-500")">
                    Medical Info
                </span>
            </div>
        </div>
    </div>
</div>
