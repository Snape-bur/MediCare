@model MediCare.Models.Payment

@{
    ViewData["Title"] = "Secure Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-[85vh] flex items-center justify-center px-4 py-12 bg-[#F8FAFC]">
    <div class="w-full max-w-lg">

        <div class="mb-6 flex items-center justify-between px-2">
            <a asp-area="Patient" asp-controller="Appointments" asp-action="Index"
               class="inline-flex items-center gap-2 text-xs font-black text-slate-400 hover:text-blue-600 transition-colors uppercase tracking-widest">
                <i data-lucide="arrow-left" class="w-4 h-4"></i>
                Back to Appointments
            </a>
            <div class="flex items-center gap-2">
                <i data-lucide="shield-check" class="w-4 h-4 text-emerald-500"></i>
                <span class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Secure SSL</span>
            </div>
        </div>

        <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-2xl shadow-slate-900/5 overflow-hidden">

            <div class="bg-slate-900 p-10 text-white relative overflow-hidden">
                <i data-lucide="credit-card" class="absolute -right-6 -bottom-6 w-32 h-32 text-white/5 -rotate-12"></i>

                <div class="relative z-10 flex flex-col md:flex-row md:items-end justify-between gap-6">
                    <div>
                        <p class="text-[10px] font-black text-blue-400 uppercase tracking-[0.2em] mb-2">Final Step</p>
                        <h2 class="text-3xl font-black tracking-tight">Payment <span class="text-slate-400">Confirmation</span></h2>
                        <div class="mt-4 flex flex-col gap-1">
                            <p class="text-sm font-bold flex items-center gap-2">
                                <i data-lucide="user" class="w-4 h-4 text-slate-500"></i>
                                 @Model.Appointment?.Doctor?.AppUser?.FullName
                            </p>
                            <p class="text-xs text-slate-400 font-medium flex items-center gap-2">
                                <i data-lucide="calendar" class="w-4 h-4 text-slate-500"></i>
                                @Model.Appointment?.DateTime.ToString("dddd, dd MMM yyyy")
                            </p>
                        </div>
                    </div>
                    <div class="text-right">
                        <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest mb-1">Total Payable</p>
                        <p class="text-4xl font-black text-blue-500 tracking-tighter">฿@Model.Amount.ToString("N0")</p>
                    </div>
                </div>
            </div>

            <div class="p-10">
                <form asp-action="Confirm" method="post" class="space-y-8">
                    <input type="hidden" name="appointmentId" value="@Model.AppointmentId" />

                    <div class="space-y-2">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Cardholder Name</label>
                        <div class="relative group">
                            <i data-lucide="user-square" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300 group-focus-within:text-blue-600 transition-colors"></i>
                            <input type="text" placeholder="e.g. Johnathan Doe"
                                   class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-600 p-4 pl-12 font-bold text-slate-900 placeholder-slate-300 shadow-inner transition-all" required />
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Card Number</label>
                        <div class="relative group">
                            <i data-lucide="hash" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300 group-focus-within:text-blue-600 transition-colors"></i>
                            <input type="text" maxlength="19" placeholder="0000 0000 0000 0000"
                                   class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-600 p-4 pl-12 font-bold text-slate-900 placeholder-slate-300 shadow-inner tracking-widest transition-all" required />
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-8">
                        <div class="space-y-2">
                            <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Expiry Date</label>
                            <input type="text" placeholder="MM / YY"
                                   class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-600 p-4 font-bold text-slate-900 placeholder-slate-300 shadow-inner text-center transition-all" required />
                        </div>
                        <div class="space-y-2">
                            <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">CVC / CVV</label>
                            <div class="relative">
                                <input type="password" maxlength="4" placeholder="•••"
                                       class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-600 p-4 font-bold text-slate-900 placeholder-slate-300 shadow-inner text-center transition-all" required />
                                <i data-lucide="help-circle" class="absolute right-4 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-300 cursor-help"></i>
                            </div>
                        </div>
                    </div>

                    <div class="pt-4">
                        <button type="submit"
                                class="w-full py-5 bg-blue-600 text-white font-black rounded-2xl shadow-xl shadow-blue-100 hover:bg-blue-700 hover:-translate-y-1 transition-all active:scale-[0.98] flex items-center justify-center gap-3">
                            <i data-lucide="lock" class="w-5 h-5"></i>
                            Authorize Payment
                        </button>
                        <p class="text-[9px] text-center text-slate-400 font-bold uppercase tracking-widest mt-6 leading-relaxed">
                            By clicking authorize, you agree to the <br /> healthcare service terms & conditions.
                        </p>
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-10 flex items-center justify-center gap-8 opacity-40 grayscale group-hover:grayscale-0 transition-all">
            <i data-lucide="landmark" class="w-6 h-6"></i>
            <i data-lucide="shield-check" class="w-6 h-6"></i>
            <i data-lucide="wallet" class="w-6 h-6"></i>
        </div>
    </div>
</div>