@model MediCare.Models.Appointment

@{
    ViewData["Title"] = "Payment Successful";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-[85vh] flex items-center justify-center px-4 py-12 bg-[#F8FAFC]">
    <div class="w-full max-w-lg text-center animate-in fade-in zoom-in-95 duration-500">

        <div class="mb-8 relative inline-block">
            <div class="w-24 h-24 bg-emerald-50 rounded-[2.5rem] flex items-center justify-center text-emerald-500 shadow-lg shadow-emerald-100 relative z-10">
                <i data-lucide="check-circle-2" class="w-12 h-12 stroke-[2.5px]"></i>
            </div>
            <div class="absolute inset-0 bg-emerald-400 opacity-20 blur-2xl rounded-full animate-pulse"></div>
        </div>

        <h2 class="text-4xl font-black text-slate-900 tracking-tight mb-2">Transaction <span class="text-emerald-600">Verified</span></h2>
        <p class="text-slate-500 font-medium mb-10 uppercase text-[10px] tracking-[0.2em]">Thank you for choosing MediCare</p>

        <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-2xl shadow-slate-900/5 overflow-hidden mb-8">
            <div class="p-8 border-b border-dashed border-slate-200 bg-slate-50/50">
                <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Transaction Reference</p>
                <p class="font-mono text-sm font-bold text-slate-900">#@ViewBag.TransactionId</p>
            </div>

            <div class="p-10 space-y-6 text-left">
                <div class="flex justify-between items-start gap-4">
                    <div>
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Medical Provider</p>
                        <p class="text-lg font-bold text-slate-900"> @Model.Doctor?.AppUser?.FullName</p>
                        <p class="text-xs font-bold text-blue-600 uppercase tracking-tighter">@Model.Doctor?.Specialty?.Name Specialist</p>
                    </div>
                    <div class="text-right">
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Amount Paid</p>
                        <p class="text-2xl font-black text-slate-900 tracking-tighter">฿@Model.Payment?.Amount.ToString("N0")</p>
                    </div>
                </div>

                <div class="pt-6 border-t border-slate-100">
                    <div class="flex items-center gap-4">
                        <div class="p-3 bg-slate-50 rounded-xl text-slate-400">
                            <i data-lucide="calendar-check" class="w-5 h-5"></i>
                        </div>
                        <div>
                            <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Scheduled Appointment</p>
                            <p class="text-sm font-bold text-slate-900">@Model.DateTime.ToString("dddd, dd MMM yyyy")</p>
                            <p class="text-xs font-medium text-slate-500">Time Slot: @Model.DateTime.ToString("hh:mm tt")</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="px-10 py-6 bg-emerald-500 text-white flex items-center justify-center gap-2">
                <i data-lucide="shield-check" class="w-4 h-4"></i>
                <span class="text-[10px] font-black uppercase tracking-widest">Securely Processed & Logged</span>
            </div>
        </div>

        <div class="space-y-4">
            <div class="inline-flex items-center gap-3 px-4 py-2 bg-slate-100 rounded-full text-slate-500">
                <div class="w-2 h-2 bg-blue-600 rounded-full animate-bounce"></div>
                <p class="text-[10px] font-black uppercase tracking-widest">Redirecting in <span id="countdown" class="text-blue-600">3</span>s</p>
            </div>
            <br />
            <a asp-area="Patient" asp-controller="Appointments" asp-action="Index"
               class="inline-block text-xs font-black text-blue-600 hover:text-blue-700 uppercase tracking-widest transition-all">
                Manual Return →
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Countdown timer for redirect
        let seconds = 3;
        const countdown = document.getElementById("countdown");

        const interval = setInterval(() => {
            seconds--;
            if (countdown) countdown.textContent = seconds;
            if (seconds <= 0) {
                clearInterval(interval);
                window.location.href = "/Patient/Appointments";
            }
        }, 1000);
    </script>
}