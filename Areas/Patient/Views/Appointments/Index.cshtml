@model IEnumerable<MediCare.Models.Appointment>

@{
    ViewData["Title"] = "My Appointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-6xl mx-auto mt-10 bg-white rounded-3xl shadow-lg p-8">

 
    <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-blue-700">🩺 My Appointments</h2>

        <a asp-area="Patient"
           asp-controller="Dashboard"
           asp-action="Index"
           class="px-5 py-2.5 rounded-xl bg-gradient-to-r from-blue-800 via-blue-600 to-cyan-400 text-white font-semibold shadow-md hover:shadow-xl hover:scale-[1.02] transition-all duration-300">
            ⬅ Back to Dashboard
        </a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="bg-green-100 border border-green-300 text-green-800 px-4 py-3 rounded mb-4">
            @TempData["Message"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="bg-red-100 border border-red-300 text-red-800 px-4 py-3 rounded mb-4">
            @TempData["Error"] 
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center text-gray-500 py-6">
            You have not booked any appointments yet.
        </div>
    }
    else
    {
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-gray-700 border-collapse">
                <thead class="bg-blue-50 text-blue-700 text-xs uppercase tracking-wide">
                    <tr>
                        <th class="px-4 py-3 text-left font-semibold">Doctor</th>
                        <th class="px-4 py-3 text-left font-semibold">Specialty</th>
                        <th class="px-4 py-3 text-left font-semibold">Date & Time</th>
                        <th class="px-4 py-3 text-left font-semibold">Status</th>
                        <th class="px-4 py-3 text-center font-semibold">Action</th>
                    </tr>
                </thead>

                <tbody class="divide-y divide-gray-100">
                    @foreach (var appt in Model)
                    {
                        <tr class="hover:bg-blue-50 transition">
                            <td class="px-4 py-3 font-medium">@appt.Doctor?.AppUser?.FullName</td>
                            <td class="px-4 py-3">@appt.Doctor?.Specialty?.Name</td>
                            <td class="px-4 py-3">
                                @appt.DateTime.ToString("ddd, dd MMM yyyy • hh:mm tt")

                                @if (appt.RescheduledAt != null)
                                {
                                    <div class="text-xs text-amber-600 font-medium mt-1">
                                        🔄 Rescheduled by doctor on @appt.RescheduledAt?.ToString("dd MMM yyyy, hh:mm tt")
                                    </div>
                                }
                            </td>


                            <td class="px-4 py-3">
                                @switch (appt.Status)
                                {
                                    case "Pending":
                                        <span class="px-2.5 py-0.5 bg-yellow-100 text-yellow-700 rounded-full text-xs font-medium">Pending</span>
                                        ;
                                        break;
                                    case "Confirmed":
                                        <span class="px-2.5 py-0.5 bg-emerald-100 text-emerald-700 rounded-full text-xs font-medium">Confirmed</span>
                                        ;
                                        break;
                                    case "Paid":
                                        <span class="px-2.5 py-0.5 bg-green-100 text-green-700 rounded-full text-xs font-medium">Paid</span>
                                        ;
                                        break;
                                    case "Completed":
                                        <span class="px-2.5 py-0.5 bg-blue-100 text-blue-700 rounded-full text-xs font-medium">Completed</span>
                                        ;
                                        break;
                                    case "Cancelled":
                                        <span class="px-2.5 py-0.5 bg-red-100 text-red-700 rounded-full text-xs font-medium">Cancelled</span>
                                        ;
                                        break;
                                }
                            </td>
                            <td class="px-4 py-3 text-center space-x-2">
                                <!-- 🔍 View Details -->
                                <a asp-area="Patient"
                                   asp-controller="Appointments"
                                   asp-action="Details"
                                   asp-route-id="@appt.AppointmentId"
                                   class="inline-block px-3.5 py-1.5 rounded-lg bg-gradient-to-r from-blue-700 via-blue-500 to-cyan-400
                      text-white text-xs font-medium shadow-md hover:shadow-lg hover:scale-[1.04] transition-all duration-300">
                                    View
                                </a>

                                @if (appt.Status == "Confirmed")
                                {
                                    <!-- 💳 Pay Now -->
                                    <a asp-area="Patient"
                                       asp-controller="Payments"
                                       asp-action="Index"
                                       asp-route-appointmentId="@appt.AppointmentId"
                                       class="inline-block px-3.5 py-1.5 rounded-lg bg-gradient-to-r from-emerald-700 via-emerald-500 to-teal-400
                              text-white text-xs font-medium shadow-md hover:shadow-lg hover:scale-[1.04] transition-all duration-300">
                                        Pay
                                    </a>
                                }
                                else if (appt.Status == "Completed")
                                {
                                    var feedback = appt.Feedbacks?.FirstOrDefault();
                                    if (feedback == null)
                                    {
                                        <!-- 📝 Leave Feedback -->
                                        <a asp-area="Patient"
                                           asp-controller="Feedback"
                                           asp-action="Create"
                                           asp-route-appointmentId="@appt.AppointmentId"
                                           class="inline-block px-3.5 py-1.5 rounded-lg bg-gradient-to-r from-indigo-700 via-indigo-500 to-purple-400
                                      text-white text-xs font-medium shadow-md hover:shadow-lg hover:scale-[1.04] transition-all duration-300">
                                            Feedback
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-blue-700 text-xs font-semibold">✔ Reviewed</span>
                                    }
                                }
                      
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
