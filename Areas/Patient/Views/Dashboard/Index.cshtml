@model MediCare.Models.Patient

@{
    ViewData["Title"] = "Patient Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string initials = string.Join("", Model.AppUser.FullName
        .Split(" ", StringSplitOptions.RemoveEmptyEntries)
        .Take(2)
        .Select(n => n[0])).ToUpper();

    var totalAppointments = ViewBag.TotalAppointments ?? 0;
    var completedAppointments = ViewBag.CompletedAppointments ?? 0;
    var upcomingAppointments = ViewBag.UpcomingAppointments ?? 0;
}

<div class="max-w-6xl mx-auto px-4 py-10">

    <div class="bg-white rounded-3xl shadow-sm border border-gray-100 overflow-hidden mb-8">
        <div class="bg-gradient-to-r from-blue-700 to-indigo-600 h-32 w-full"></div>
        <div class="px-8 pb-8 -mt-12 flex flex-col md:flex-row items-end gap-6">
            <div class="relative">
                <div class="w-32 h-32 rounded-2xl bg-white p-1 shadow-xl">
                    <div class="w-full h-full rounded-xl bg-gradient-to-br from-blue-500 to-cyan-400 flex items-center justify-center text-3xl font-bold text-white shadow-inner">
                        @initials
                    </div>
                </div>
                <div class="absolute -bottom-2 -right-2 bg-green-500 border-4 border-white w-6 h-6 rounded-full shadow-sm"></div>
            </div>

            <div class="flex-1 pb-2">
                <h1 class="text-3xl font-bold text-gray-900">@Model.AppUser.FullName</h1>
                <div class="flex flex-wrap items-center gap-4 mt-2 text-sm text-gray-500 font-medium">
                    <span class="flex items-center gap-1.5">
                        <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
                        @Model.Gender
                    </span>
                    <span class="flex items-center gap-1.5">
                        <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                        @Model.DateOfBirth.ToString("dd MMM yyyy")
                    </span>
                </div>
            </div>

            <div class="flex gap-3 pb-2 w-full md:w-auto">
                <a asp-area="Patient" asp-controller="Booking" asp-action="Index"
                   class="flex-1 md:flex-none inline-flex items-center justify-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-xl transition-all shadow-md shadow-blue-200">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
                    New Booking
                </a>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

        <div class="lg:col-span-2 space-y-8">

            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                <div class="bg-white p-6 rounded-2xl border border-gray-100 shadow-sm transition-hover hover:shadow-md">
                    <div class="w-10 h-10 rounded-lg bg-blue-50 flex items-center justify-center text-blue-600 mb-4">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" /></svg>
                    </div>
                    <p class="text-sm font-medium text-gray-500 uppercase tracking-wider">Total</p>
                    <p class="text-3xl font-bold text-gray-900 mt-1">@totalAppointments</p>
                </div>

                <div class="bg-white p-6 rounded-2xl border border-gray-100 shadow-sm transition-hover hover:shadow-md">
                    <div class="w-10 h-10 rounded-lg bg-green-50 flex items-center justify-center text-green-600 mb-4">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                    </div>
                    <p class="text-sm font-medium text-gray-500 uppercase tracking-wider">Completed</p>
                    <p class="text-3xl font-bold text-gray-900 mt-1">@completedAppointments</p>
                </div>

                <div class="bg-white p-6 rounded-2xl border border-gray-100 shadow-sm transition-hover hover:shadow-md">
                    <div class="w-10 h-10 rounded-lg bg-orange-50 flex items-center justify-center text-orange-600 mb-4">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                    </div>
                    <p class="text-sm font-medium text-gray-500 uppercase tracking-wider">Upcoming</p>
                    <p class="text-3xl font-bold text-gray-900 mt-1">@upcomingAppointments</p>
                </div>
            </div>

            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-xl font-bold text-gray-900 flex items-center gap-3">
                        <span class="p-2 bg-blue-600 rounded-lg text-white">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                        </span>
                        Next Scheduled Visit
                    </h3>
                </div>

                @if (ViewBag.NextAppointment != null)
                {
                    var next = (MediCare.Models.Appointment)ViewBag.NextAppointment;
                    <div class="relative group p-6 rounded-2xl bg-gray-50 border border-gray-200 transition-all hover:bg-white hover:border-blue-300 hover:shadow-lg">
                        <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
                            <div class="flex items-center gap-4">
                                <div class="w-14 h-14 rounded-full bg-blue-100 flex items-center justify-center text-blue-700 font-bold">
                                    Dr
                                </div>
                                <div>
                                    <h4 class="text-lg font-bold text-gray-900">Dr. @next.Doctor.AppUser.FullName</h4>
                                    <p class="text-blue-600 font-medium text-sm">@next.Doctor.Specialty.Name</p>
                                </div>
                            </div>
                            <div class="flex flex-col md:items-end gap-2 text-left md:text-right">
                                <p class="text-sm font-semibold text-gray-900">@next.DateTime.ToString("dddd, dd MMMM")</p>
                                <p class="text-2xl font-black text-blue-700">@next.DateTime.ToString("hh:mm tt")</p>
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-blue-100 text-blue-700 uppercase">@next.Status</span>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-10 border-2 border-dashed border-gray-200 rounded-2xl">
                        <p class="text-gray-400 font-medium">No upcoming appointments found.</p>
                        <a asp-action="Index" asp-controller="Booking" class="text-blue-600 font-bold hover:underline mt-2 inline-block">Book one now →</a>
                    </div>
                }
            </div>

            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
                <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center gap-2">
                    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" /></svg>
                    Medical History & Notes
                </h3>
                <div class="prose prose-blue text-gray-600">
                    <p class="bg-gray-50 p-6 rounded-xl italic leading-relaxed border-l-4 border-blue-500">
                        @(string.IsNullOrWhiteSpace(Model.MedicalHistory) ? "Your medical history record is currently empty." : Model.MedicalHistory)
                    </p>
                </div>
            </div>
        </div>

        <div class="space-y-8">
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                <h3 class="font-bold text-gray-900 mb-6 px-2">Contact Information</h3>
                <div class="space-y-6">
                    <div class="flex items-start gap-4 p-2">
                        <div class="mt-1 text-blue-600">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
                        </div>
                        <div>
                            <p class="text-xs font-bold text-gray-400 uppercase tracking-widest">Phone</p>
                            <p class="text-gray-900 font-medium">@Model.PhoneNumber</p>
                        </div>
                    </div>
                    <div class="flex items-start gap-4 p-2">
                        <div class="mt-1 text-blue-600">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                        </div>
                        <div>
                            <p class="text-xs font-bold text-gray-400 uppercase tracking-widest">Home Address</p>
                            <p class="text-gray-900 font-medium">@Model.Address</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-gray-900 rounded-2xl p-6 text-white shadow-xl shadow-gray-200">
                <h3 class="font-bold mb-4">Quick Links</h3>
                <div class="grid gap-3">
                    <a asp-area="Patient" asp-controller="Appointments" asp-action="Index"
                       class="w-full flex items-center justify-between p-4 rounded-xl bg-white/10 hover:bg-white/20 transition-all group">
                        <span class="font-medium">My Appointments</span>
                        <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
                    </a>
                    <button class="w-full flex items-center justify-between p-4 rounded-xl bg-white/10 hover:bg-white/20 transition-all group opacity-50 cursor-not-allowed">
                        <span class="font-medium">Medical Reports</span>
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" /></svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>