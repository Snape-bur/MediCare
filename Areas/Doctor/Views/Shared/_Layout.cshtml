@using Microsoft.AspNetCore.Identity
@inject SignInManager<MediCare.Models.AppUser> SignInManager
@inject UserManager<MediCare.Models.AppUser> UserManager
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MediCare Practitioner</title>

    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>
    <script src="https://cdn.tailwindcss.com"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: { sans: ['Plus Jakarta Sans', 'sans-serif'] },
                    colors: {
                        brand: {
                            50: '#f0fdf4',
                            500: '#10b981',
                            600: '#059669',
                            700: '#047857',
                            900: '#064e3b'
                        }
                    }
                }
            }
        }
    </script>

    <style type="text/tailwindcss">
        @@layer components {
            .nav-link {
                @@apply flex items-center gap-3 px-4 py-3 rounded-2xl text-sm font-bold transition-all duration-300;
            }

            .nav-link-active {
                @@apply bg-emerald-600 text-white shadow-lg shadow-emerald-200/50;
            }

            .nav-link-inactive {
                @@apply text-slate-500 hover:bg-slate-50 hover:text-emerald-600;
            }
        }
        /* Custom scrollbar for clinical look */
        ::-webkit-scrollbar {
            width: 5px;
        }

        ::-webkit-scrollbar-track {
            background: transparent;
        }

        ::-webkit-scrollbar-thumb {
            background: #e2e8f0;
            border-radius: 10px;
        }
    </style>
</head>

<body class="bg-[#F8FAFC] text-slate-900 antialiased font-sans">

    <div class="flex min-h-screen">
        <aside class="w-72 bg-white border-r border-slate-200 flex flex-col sticky top-0 h-screen z-50">
            <div class="p-8 pb-10">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-2xl bg-emerald-600 flex items-center justify-center text-white shadow-xl shadow-emerald-100">
                        <i data-lucide="activity" class="w-6 h-6"></i>
                    </div>
                    <div>
                        <h1 class="text-xl font-black tracking-tight text-slate-900">Medi<span class="text-emerald-600">Care</span></h1>
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Practitioner</p>
                    </div>
                </div>
            </div>

            <nav class="flex-1 px-4 space-y-2 overflow-y-auto">
                <p class="px-4 text-[10px] font-black text-slate-300 uppercase tracking-[0.2em] mb-4">Practice Management</p>

                <a asp-area="Doctor" asp-controller="Dashboard" asp-action="Index"
                   class="nav-link @(ViewData["Title"]?.ToString() == "Doctor Dashboard" ? "nav-link-active" : "nav-link-inactive")">
                    <i data-lucide="layout-grid" class="w-5 h-5"></i> Dashboard
                </a>

                <a asp-area="Doctor" asp-controller="Appointments" asp-action="Index"
                   class="nav-link @(ViewData["Title"]?.ToString() == "Visit Schedule" || ViewData["Title"]?.ToString()?.Contains("Appointment") == true ? "nav-link-active" : "nav-link-inactive")">
                    <i data-lucide="calendar" class="w-5 h-5"></i> Visit Schedule
                </a>

                <a asp-area="Doctor" asp-controller="Patients" asp-action="Index"
                   class="nav-link @(ViewData["Title"]?.ToString()?.Contains("Patient") == true ? "nav-link-active" : "nav-link-inactive")">
                    <i data-lucide="users" class="w-5 h-5"></i> My Patients
                </a>

                <p class="px-4 pt-8 text-[10px] font-black text-slate-300 uppercase tracking-[0.2em] mb-4">Professional Setup</p>

                <a asp-area="Doctor" asp-controller="Availabilities" asp-action="Edit"
                   class="nav-link @(ViewData["Title"]?.ToString()?.Contains("Availability") == true ? "nav-link-active" : "nav-link-inactive")">
                    <i data-lucide="clock" class="w-5 h-5"></i> Availability
                </a>

                <a asp-area="Doctor" asp-controller="Profile" asp-action="Edit"
                   class="nav-link @(ViewData["Title"]?.ToString()?.Contains("Profile") == true ? "nav-link-active" : "nav-link-inactive")">
                    <i data-lucide="user-cog" class="w-5 h-5"></i> My Profile
                </a>
            </nav>

            <div class="p-4 border-t border-slate-100 bg-slate-50/50">
                <div class="p-4 rounded-3xl bg-white border border-slate-200 mb-4 shadow-sm">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-xl bg-slate-900 flex items-center justify-center text-white font-black text-xs">
                            @User.Identity?.Name?.Substring(0, 1).ToUpper()
                        </div>
                        <div class="min-w-0">
                            <p class="text-xs font-black text-slate-900 truncate">Dr. @User.Identity?.Name</p>
                            <p class="text-[9px] font-bold text-emerald-600 uppercase tracking-tighter">Practitioner</p>
                        </div>
                    </div>
                </div>

                <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                    <button type="submit" class="w-full flex items-center justify-center gap-2 py-3.5 rounded-2xl text-[10px] font-black uppercase tracking-widest text-slate-500 hover:text-red-600 hover:bg-red-50 transition-all">
                        <i data-lucide="log-out" class="w-4 h-4"></i> Sign Out
                    </button>
                </form>
            </div>
        </aside>

        <div class="flex-1 flex flex-col h-screen overflow-y-auto">
            <header class="bg-white/80 backdrop-blur-md border-b border-slate-200 px-10 py-5 sticky top-0 z-40 flex justify-between items-center">
                <div>
                    <h2 class="text-xs font-black text-slate-400 uppercase tracking-[0.2em]">Medical Portal</h2>
                    <p class="text-sm font-bold text-slate-900">@ViewData["Title"]</p>
                </div>

                <div class="flex items-center gap-6">
                    <button class="p-2.5 text-slate-400 hover:text-emerald-600 bg-slate-50 rounded-xl transition-all">
                        <i data-lucide="bell" class="w-5 h-5"></i>
                    </button>
                    <div class="h-8 w-[1px] bg-slate-200"></div>
                    <div class="flex items-center gap-3">
                        <img src="https://ui-avatars.com/api/?name=Doctor+@User.Identity?.Name&background=059669&color=fff"
                             class="w-10 h-10 rounded-2xl shadow-lg border-2 border-white" alt="Doctor" />
                    </div>
                </div>
            </header>

            <main class="p-10 pb-20">
                @RenderBody()
            </main>

            <footer class="mt-auto px-10 py-8 border-t border-slate-200 bg-white flex justify-between items-center">
                <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">© 2025 MediCare Practitioner Cloud</p>
                <div class="flex gap-6">
                    <a href="#" class="text-[10px] font-black text-slate-300 hover:text-emerald-600 uppercase tracking-widest transition-colors text-xs">Privacy Protocol</a>
                    <a href="#" class="text-[10px] font-black text-slate-300 hover:text-emerald-600 uppercase tracking-widest transition-colors text-xs">Clinical Terms</a>
                </div>
            </footer>
        </div>
    </div>

    <script>
        lucide.createIcons();
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>