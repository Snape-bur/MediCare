@model MediCare.Models.Appointment

@{
    ViewData["Title"] = "Appointment Details";
    Layout = "~/Areas/Doctor/Views/Shared/_Layout.cshtml";
}

<h2>Appointment Details</h2>

<div class="card p-3 mb-3">
    <h4>Patient Info</h4>
    <p><strong>Name:</strong> @Model.Patient?.AppUser?.FullName</p>
    <p><strong>Email:</strong> @Model.Patient?.AppUser?.Email</p>
</div>

<div class="card p-3 mb-3">
    <h4>Appointment Info</h4>
    <p><strong>Date/Time:</strong> @Model.DateTime</p>
    <p><strong>Status:</strong> @Model.Status</p>
</div>

<form asp-action="Details" method="post">
    <input type="hidden" name="id" value="@Model.AppointmentId" />

    <div class="form-group">
        <label>Consultation Notes</label>
        <textarea name="notes" class="form-control">@Model.Notes</textarea>
    </div>

    <div class="form-group mt-3">
        <label>Prescription</label>
        <textarea name="prescription" class="form-control">@Model.Prescription</textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
</form>
