@model IEnumerable<MediCare.Models.Appointment>
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@{
    ViewData["Title"] = "Visit Schedule";
    Layout = "~/Areas/Doctor/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto px-6 py-12 space-y-10 animate-in fade-in duration-700">

    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <h1 class="text-4xl font-black text-slate-900 tracking-tight">Visit <span class="text-emerald-600">Schedule</span></h1>
            <p class="text-slate-500 font-medium mt-1">Detailed operational log of all clinical consultations and patient bookings.</p>
        </div>
        <div class="flex items-center gap-3">
            <span class="px-4 py-2 bg-blue-50 text-blue-700 text-[10px] font-black rounded-full uppercase tracking-tighter shadow-sm border border-blue-100">
                @Model?.Count() Active Entries
            </span>
        </div>
    </div>

    @if (TempData["Message"] != null || TempData["Error"] != null)
    {
        var isError = TempData["Error"] != null;
        <div class="p-4 rounded-2xl flex items-center gap-3 border animate-in slide-in-from-top-4 @(isError ? "bg-rose-50 border-rose-100 text-rose-700" : "bg-emerald-50 border-emerald-100 text-emerald-700")">
            <i data-lucide="@(isError ? "alert-circle" : "check-circle")" class="w-5 h-5"></i>
            <span class="text-sm font-bold">@(TempData["Message"] ?? TempData["Error"])</span>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="bg-white rounded-[3rem] border border-slate-200 shadow-xl shadow-slate-900/5 p-20 text-center">
            <div class="w-20 h-20 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-6">
                <i data-lucide="calendar-x" class="w-10 h-10 text-slate-200"></i>
            </div>
            <h3 class="text-xl font-black text-slate-900">Schedule Clear</h3>
            <p class="text-slate-500 font-medium mt-1">You currently have no scheduled appointments in the registry.</p>
        </div>
    }
    else
    {
        <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-xl shadow-slate-900/5 overflow-hidden">
            <div class="p-8 border-b border-slate-100 bg-slate-50/50 flex items-center justify-between">
                <h3 class="font-black text-slate-900 uppercase tracking-widest text-xs">Patient Visit Log</h3>
                <div class="flex items-center gap-2 text-slate-400">
                    <i data-lucide="clock" class="w-4 h-4 text-emerald-500"></i>
                    <span class="text-[10px] font-black uppercase tracking-widest">Chronological Order</span>
                </div>
            </div>

            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] bg-white">
                            <th class="px-8 py-5">Patient Holder</th>
                            <th class="px-6 py-5">Schedule Details</th>
                            <th class="px-6 py-5">Workflow Status</th>
                            <th class="px-8 py-5 text-right">Clinical Actions</th>
                        </tr>
                    </thead>

                    <tbody class="divide-y divide-slate-100">
                        @foreach (var appt in Model.OrderBy(a => a.DateTime))
                        {
                            var status = appt.Status?.Trim() ?? "";

                            <tr class="group hover:bg-slate-50/80 transition-all">
                                <td class="px-8 py-6">
                                    <div class="flex items-center gap-4">
                                        <div class="w-10 h-10 rounded-xl bg-slate-100 flex items-center justify-center text-slate-400 font-bold group-hover:bg-blue-600 group-hover:text-white transition-all">
                                            @appt.Patient?.AppUser?.FullName.Substring(0, 1)
                                        </div>
                                        <p class="font-bold text-slate-900">@appt.Patient?.AppUser?.FullName</p>
                                    </div>
                                </td>

                                <td class="px-6 py-6">
                                    <div class="flex flex-col">
                                        <span class="text-sm font-bold text-slate-700">@appt.DateTime.ToString("ddd, dd MMM yyyy")</span>
                                        <span class="text-[10px] font-black text-blue-600 uppercase tracking-tighter">@appt.DateTime.ToString("hh:mm tt")</span>
                                        @if (appt.RescheduledAt != null)
                                        {
                                            <span class="inline-flex items-center gap-1 mt-1 text-[9px] font-black text-amber-600 uppercase tracking-tighter">
                                                <i data-lucide="refresh-cw" class="w-3 h-3"></i> Rescheduled
                                            </span>
                                        }
                                    </div>
                                </td>

                                <td class="px-6 py-6">
                                    @{
                                        var badgeColor = status switch
                                        {
                                            "Pending" => "bg-amber-50 text-amber-600 border-amber-100",
                                            "Confirmed" => "bg-emerald-50 text-emerald-600 border-emerald-100",
                                            "Paid" => "bg-blue-50 text-blue-600 border-blue-100",
                                            "Completed" => "bg-indigo-50 text-indigo-600 border-indigo-100",
                                            "Cancelled" => "bg-rose-50 text-rose-600 border-rose-100",
                                            _ => "bg-slate-50 text-slate-500 border-slate-100"
                                        };
                                    }
                                    <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-lg border @badgeColor text-[10px] font-black uppercase tracking-widest shadow-sm">
                                        <span class="w-1 h-1 bg-current rounded-full"></span>
                                        @status
                                    </span>
                                </td>

                                <td class="px-8 py-6 text-right">
                                    <div class="flex justify-end items-center gap-2">

                                        @if (status.Equals("Pending", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <form method="post" action="/Doctor/Appointments/Confirm/@appt.AppointmentId" class="inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="p-2.5 bg-emerald-50 text-emerald-600 rounded-xl hover:bg-emerald-600 hover:text-white transition-all shadow-sm border border-emerald-100" title="Confirm Appointment">
                                                    <i data-lucide="check" class="w-4 h-4"></i>
                                                </button>
                                            </form>
                                            <a href="/Doctor/Appointments/Reschedule/@appt.AppointmentId" class="p-2.5 bg-amber-50 text-amber-600 rounded-xl hover:bg-amber-600 hover:text-white transition-all shadow-sm border border-amber-100" title="Reschedule">
                                                <i data-lucide="calendar-range" class="w-4 h-4"></i>
                                            </a>
                                            <form method="post" action="/Doctor/Appointments/Cancel/@appt.AppointmentId" class="inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="p-2.5 bg-rose-50 text-rose-600 rounded-xl hover:bg-rose-600 hover:text-white transition-all shadow-sm border border-rose-100" title="Cancel">
                                                    <i data-lucide="x" class="w-4 h-4"></i>
                                                </button>
                                            </form>
                                        }
                                        else if (status.Equals("Confirmed", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <a href="/Doctor/Appointments/Reschedule/@appt.AppointmentId" class="p-2.5 bg-amber-50 text-amber-600 rounded-xl hover:bg-amber-600 hover:text-white transition-all shadow-sm border border-amber-100" title="Reschedule">
                                                <i data-lucide="calendar-range" class="w-4 h-4"></i>
                                            </a>
                                            <form method="post" action="/Doctor/Appointments/Cancel/@appt.AppointmentId" class="inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="p-2.5 bg-rose-50 text-rose-600 rounded-xl hover:bg-rose-600 hover:text-white transition-all shadow-sm border border-rose-100" title="Cancel">
                                                    <i data-lucide="x" class="w-4 h-4"></i>
                                                </button>
                                            </form>
                                        }
                                        else if (status.Equals("Paid", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <a href="@Url.Action("EditNotes", "Appointments", new { area = "Doctor", id = appt.AppointmentId })"
                                               class="flex items-center gap-2 px-4 py-2 bg-slate-900 text-white font-black text-[10px] uppercase tracking-widest rounded-xl hover:bg-blue-600 transition-all shadow-lg">
                                                <i data-lucide="pencil" class="w-3.5 h-3.5"></i> Notes
                                            </a>
                                            <form method="post" action="/Doctor/Appointments/Complete/@appt.AppointmentId">
                                                @Html.AntiForgeryToken()
                                                <button class="p-2.5 bg-emerald-50 text-emerald-600 rounded-xl hover:bg-emerald-600 hover:text-white transition-all shadow-sm border border-emerald-100" title="Mark Completed">
                                                    <i data-lucide="check-circle-2" class="w-4 h-4"></i>
                                                </button>
                                            </form>
                                        }

                                        <a href="@Url.Action("Details", "Appointments", new { area = "Doctor", id = appt.AppointmentId })"
                                           class="p-2.5 bg-slate-100 text-slate-500 rounded-xl hover:bg-slate-900 hover:text-white transition-all" title="View Full Details">
                                            <i data-lucide="eye" class="w-4 h-4"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>