@model MediCare.Models.Appointment

@{
    ViewData["Title"] = "Update Consultation Notes";
    Layout = "~/Areas/Doctor/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto px-4 py-12">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-10">
        <div class="flex items-center gap-5">
            <div class="w-16 h-16 bg-emerald-600 rounded-2xl flex items-center justify-center text-white shadow-xl shadow-emerald-200">
                <i data-lucide="file-edit" class="w-8 h-8"></i>
            </div>
            <div>
                <h2 class="text-3xl font-black text-slate-900 tracking-tight">Clinical <span class="text-emerald-600">Documentation</span></h2>
                <p class="text-slate-500 font-medium mt-1">Recording patient observations and prescription details for the session.</p>
            </div>
        </div>
        <a asp-area="Doctor" asp-controller="Appointments" asp-action="Index"
           class="inline-flex items-center gap-2 text-xs font-black text-slate-400 uppercase tracking-widest hover:text-emerald-600 transition-colors">
            <i data-lucide="arrow-left" class="w-4 h-4"></i>
            Discard & Return
        </a>
    </div>

    <form asp-action="EditNotes" asp-route-id="@Model.AppointmentId" method="post" class="space-y-8">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="AppointmentId" />

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2 space-y-8">

                <div class="bg-slate-900 rounded-3xl p-6 text-white shadow-xl flex items-center justify-between relative overflow-hidden">
                    <i data-lucide="user" class="absolute -right-4 -bottom-4 w-24 h-24 text-white/5 rotate-12"></i>
                    <div class="relative z-10">
                        <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest mb-1">Active Patient</p>
                        <p class="text-lg font-bold">@Model.Patient?.AppUser?.FullName</p>
                    </div>
                    <div class="text-right relative z-10">
                        <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest mb-1">Session Date</p>
                        <p class="text-xs font-bold text-blue-400 uppercase">@Model.DateTime.ToString("dd MMM yyyy")</p>
                    </div>
                </div>

                <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-xl shadow-slate-900/5 overflow-hidden">
                    <div class="p-8 border-b border-slate-100 bg-slate-50/50 flex items-center gap-3">
                        <div class="p-2 bg-emerald-600 rounded-lg text-white">
                            <i data-lucide="stethoscope" class="w-5 h-5"></i>
                        </div>
                        <h3 class="font-black text-slate-900 uppercase tracking-widest text-xs">Consultation Notes</h3>
                    </div>
                    <div class="p-8">
                        <textarea asp-for="Notes" rows="6"
                                  class="w-full bg-slate-50 border-none rounded-[2rem] focus:ring-2 focus:ring-emerald-600 p-6 font-semibold text-slate-900 placeholder-slate-300 shadow-inner transition-all leading-relaxed"
                                  placeholder="Document symptoms, findings, and clinical reasoning here..."></textarea>
                    </div>
                </div>

                <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-xl shadow-slate-900/5 overflow-hidden">
                    <div class="p-8 border-b border-slate-100 bg-slate-50/50 flex items-center gap-3">
                        <div class="p-2 bg-blue-600 rounded-lg text-white">
                            <i data-lucide="pill" class="w-5 h-5"></i>
                        </div>
                        <h3 class="font-black text-slate-900 uppercase tracking-widest text-xs">Prescription Details</h3>
                    </div>
                    <div class="p-8">
                        <textarea asp-for="Prescription" rows="4"
                                  class="w-full bg-slate-50 border-none rounded-[2rem] focus:ring-2 focus:ring-blue-600 p-6 font-semibold text-slate-900 placeholder-slate-300 shadow-inner transition-all leading-relaxed"
                                  placeholder="List medications, dosage, and frequency instructions..."></textarea>
                    </div>
                </div>
            </div>

            <div class="space-y-6">
                <div class="p-8 bg-white border border-slate-200 rounded-[2.5rem] shadow-sm">
                    <h4 class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] mb-6">Documentation Guide</h4>
                    <div class="space-y-6">
                        <div class="flex gap-4">
                            <div class="w-8 h-8 rounded-lg bg-slate-50 flex items-center justify-center text-slate-400 shrink-0">
                                <span class="text-xs font-black">1</span>
                            </div>
                            <p class="text-[11px] text-slate-500 font-medium leading-relaxed">Be specific regarding dosage and titration for prescriptions.</p>
                        </div>
                        <div class="flex gap-4">
                            <div class="w-8 h-8 rounded-lg bg-slate-50 flex items-center justify-center text-slate-400 shrink-0">
                                <span class="text-xs font-black">2</span>
                            </div>
                            <p class="text-[11px] text-slate-500 font-medium leading-relaxed">Notes are visible to the patient upon completion of the visit.</p>
                        </div>
                    </div>
                </div>

                <div class="p-8 bg-emerald-900 rounded-[2.5rem] text-white shadow-2xl relative overflow-hidden">
                    <i data-lucide="shield-check" class="absolute -right-4 -bottom-4 w-24 h-24 text-white/5 rotate-12"></i>
                    <p class="text-[9px] font-black text-emerald-500 uppercase tracking-widest mb-2 relative z-10">Data Integrity</p>
                    <p class="text-xs font-bold leading-relaxed relative z-10">Changes are timestamped and logged in the patient's longitudinal record.</p>
                </div>
            </div>
        </div>

        <div class="flex items-center gap-4 pt-6 pb-20">
            <button type="submit"
                    class="flex-1 py-5 bg-gradient-to-r from-emerald-600 to-green-500 text-white font-black rounded-[2rem] shadow-xl shadow-emerald-100 hover:-translate-y-1 transition-all active:scale-[0.98] flex items-center justify-center gap-3 group">
                <i data-lucide="save" class="w-5 h-5 group-hover:scale-110 transition-transform"></i>
                Save Clinical Records
            </button>
            <a asp-area="Doctor" asp-controller="Appointments" asp-action="Index"
               class="px-12 py-5 bg-white text-slate-400 font-black rounded-[2rem] border border-slate-200 hover:text-slate-900 transition-all uppercase text-[10px] tracking-widest">
                Cancel
            </a>
        </div>
    </form>
</div>