@model MediCare.Models.Appointment

@{
    ViewData["Title"] = "Reschedule Appointment";
    Layout = "~/Areas/Doctor/Views/Shared/_Layout.cshtml";
}

<h2>Reschedule Appointment</h2>

<form asp-action="Reschedule" method="post">
    <input type="hidden" name="id" value="@Model.AppointmentId" />

    <div class="form-group">
        <label>New Date/Time</label>
        <input type="datetime-local" name="newDateTime" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>
