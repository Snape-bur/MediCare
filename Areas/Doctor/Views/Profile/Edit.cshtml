@model MediCare.Areas.Doctor.ViewModels.DoctorProfileEditViewModel
@{
    ViewData["Title"] = "Professional Profile Editor";
    Layout = "~/Areas/Doctor/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto px-4 py-12">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-10">
        <div>
            <h2 class="text-3xl font-black text-slate-900 tracking-tight">Professional <span class="text-blue-600">Identity</span></h2>
            <p class="text-slate-500 font-medium mt-1">Update the clinical details that patients see when booking with you.</p>
        </div>
        <a asp-area="Doctor" asp-controller="Dashboard" asp-action="Index"
           class="inline-flex items-center gap-2 text-xs font-black text-slate-400 uppercase tracking-widest hover:text-blue-600 transition-colors">
            <i data-lucide="arrow-left" class="w-4 h-4"></i>
            Exit Editor
        </a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="bg-emerald-50 border border-emerald-200 text-emerald-700 px-6 py-4 rounded-2xl mb-8 flex items-center gap-3 animate-in fade-in slide-in-from-top-4">
            <i data-lucide="check-circle" class="w-5 h-5"></i>
            <span class="font-bold text-sm">@Html.Raw(TempData["Message"])</span>
        </div>
    }

    <form asp-action="Edit" method="post" class="space-y-8">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="p-4 bg-red-50 text-red-600 rounded-2xl text-[10px] font-black uppercase tracking-widest mb-6"></div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2 space-y-8">

                <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-xl shadow-slate-900/5 overflow-hidden">
                    <div class="p-8 border-b border-slate-100 bg-slate-50/50 flex items-center gap-3">
                        <div class="p-2 bg-blue-600 rounded-lg text-white shadow-lg shadow-blue-200">
                            <i data-lucide="user" class="w-5 h-5"></i>
                        </div>
                        <h3 class="font-black text-slate-900 uppercase tracking-widest text-xs">Identity Records</h3>
                    </div>

                    <div class="p-10 space-y-8">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="space-y-2">
                                <label asp-for="FullName" class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1"></label>
                                <div class="relative group">
                                    <i data-lucide="signature" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300 group-focus-within:text-blue-600 transition-colors"></i>
                                    <input asp-for="FullName" class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-600 p-4 pl-12 font-bold text-slate-900 transition-all shadow-inner" />
                                </div>
                                <span asp-validation-for="FullName" class="text-[10px] text-red-500 font-bold ml-1"></span>
                            </div>

                            <div class="space-y-2">
                                <label asp-for="PhoneNumber" class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1"></label>
                                <div class="relative group">
                                    <i data-lucide="phone" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300 group-focus-within:text-blue-600 transition-colors"></i>
                                    <input asp-for="PhoneNumber" class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-600 p-4 pl-12 font-bold text-slate-900 transition-all shadow-inner" />
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-[10px] text-red-500 font-bold ml-1"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-xl shadow-slate-900/5 overflow-hidden">
                    <div class="p-8 border-b border-slate-100 bg-slate-50/50 flex items-center gap-3">
                        <div class="p-2 bg-indigo-600 rounded-lg text-white shadow-lg shadow-indigo-200">
                            <i data-lucide="briefcase" class="w-5 h-5"></i>
                        </div>
                        <h3 class="font-black text-slate-900 uppercase tracking-widest text-xs">Practice Configuration</h3>
                    </div>

                    <div class="p-10 space-y-8">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="space-y-2">
                                <label asp-for="ConsultationFee" class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1"></label>
                                <div class="relative group">
                                    <i data-lucide="banknote" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300 group-focus-within:text-indigo-600 transition-colors"></i>
                                    <input asp-for="ConsultationFee" class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-indigo-600 p-4 pl-12 font-bold text-slate-900 transition-all shadow-inner" />
                                </div>
                            </div>

                            <div class="space-y-2">
                                <label asp-for="ExperienceYears" class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1"></label>
                                <div class="relative group">
                                    <i data-lucide="award" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300 group-focus-within:text-indigo-600 transition-colors"></i>
                                    <input asp-for="ExperienceYears" class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-indigo-600 p-4 pl-12 font-bold text-slate-900 transition-all shadow-inner" />
                                </div>
                            </div>
                        </div>

                        <div class="space-y-2">
                            <label asp-for="ProfileInfo" class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1"></label>
                            <textarea asp-for="ProfileInfo" rows="4" maxlength="500" class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-indigo-600 p-4 font-semibold text-slate-900 leading-relaxed shadow-inner" placeholder="Tell your patients about your methodology..."></textarea>
                            <p class="text-[9px] text-slate-400 font-bold uppercase tracking-widest text-right mt-1">Maximum 500 characters allowed</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="space-y-6">
                <div class="bg-slate-900 rounded-[2.5rem] p-8 text-white shadow-2xl relative overflow-hidden">
                    <i data-lucide="shield-check" class="absolute -right-4 -bottom-4 w-24 h-24 text-white/5 rotate-12"></i>
                    <h3 class="font-black text-slate-500 uppercase tracking-widest text-[10px] mb-8 relative z-10">Provider Status</h3>

                    <div class="space-y-6 relative z-10">
                        <div class="flex items-center gap-4 p-4 bg-white/5 rounded-2xl border border-white/10">
                            <div class="w-2 h-2 bg-emerald-400 rounded-full animate-pulse shadow-[0_0_10px_rgba(52,211,153,0.5)]"></div>
                            <p class="text-xs font-bold uppercase tracking-widest">Active Practitioner</p>
                        </div>
                        <p class="text-[11px] text-slate-400 leading-relaxed italic">Changes to your fee or experience will update your public profile instantly upon saving.</p>
                    </div>
                </div>

                <div class="p-8 bg-blue-50 rounded-[2rem] border border-blue-100">
                    <p class="text-[10px] font-black text-blue-600 uppercase tracking-widest mb-2">Editor Tip</p>
                    <p class="text-[11px] text-slate-600 font-bold leading-relaxed">Ensure your phone number is correct to receive automated appointment notifications from the MediCare system.</p>
                </div>
            </div>
        </div>

        <div class="flex items-center gap-4 pt-6 pb-20">
            <button type="submit"
                    class="flex-1 py-5 bg-gradient-to-r from-blue-700 to-blue-500 text-white font-black rounded-[2rem] shadow-xl shadow-blue-100 hover:-translate-y-1 transition-all active:scale-[0.98] flex items-center justify-center gap-3 group">
                <i data-lucide="save" class="w-5 h-5 group-hover:scale-110 transition-transform"></i>
                Synchronize Records
            </button>
            <a asp-area="Doctor" asp-controller="Dashboard" asp-action="Index"
               class="px-12 py-5 bg-white text-slate-400 font-black rounded-[2rem] border border-slate-200 hover:text-red-500 hover:bg-red-50 transition-all uppercase text-[10px] tracking-widest">
                Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}