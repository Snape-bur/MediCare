@model MediCare.Areas.Doctor.ViewModels.DoctorProfileEditViewModel
@{
    ViewData["Title"] = "Edit My Profile";
    Layout = "~/Areas/Doctor/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto bg-white rounded-3xl shadow p-8 mt-10 border border-gray-100">
    <h2 class="text-2xl font-bold text-blue-700 mb-2 flex items-center gap-2">
        <span>🩺</span><span>Edit My Profile</span>
    </h2>
    <p class="text-gray-600 mb-6">Update your personal and professional details shown to patients and admins.</p>

    @if (TempData["Message"] != null)
    {
        <div class="mb-5 rounded-lg border border-green-300 bg-green-50 text-green-800 px-4 py-3">
            @Html.Raw(TempData["Message"])
        </div>
    }

    <form asp-action="Edit" method="post" class="space-y-6">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-red-600"></div>

        <!-- Personal Info -->
        <div class="bg-gray-50 rounded-2xl p-4">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">👤 Personal Information</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="FullName" class="w-full rounded-xl border-gray-300 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="FullName" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="PhoneNumber" class="w-full rounded-xl border-gray-300 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="PhoneNumber" class="text-red-600 text-sm"></span>
                </div>
            </div>
        </div>

        <!-- Professional Info -->
        <div class="bg-gray-50 rounded-2xl p-4">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">💼 Professional Details</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label asp-for="ConsultationFee" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="ConsultationFee" class="w-full rounded-xl border-gray-300 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="ConsultationFee" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="ExperienceYears" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="ExperienceYears" class="w-full rounded-xl border-gray-300 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="ExperienceYears" class="text-red-600 text-sm"></span>
                </div>

                <div class="md:col-span-3">
                    <label asp-for="ProfileInfo" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <textarea asp-for="ProfileInfo" rows="4" class="w-full rounded-2xl border-gray-300 focus:ring-blue-500 focus:border-blue-500"></textarea>
                    <div class="text-xs text-gray-500 mt-1">Max 500 characters.</div>
                    <span asp-validation-for="ProfileInfo" class="text-red-600 text-sm"></span>
                </div>
            </div>
        </div>

        <div class="flex justify-between pt-6 border-t border-gray-100">
            <a asp-area="Doctor" asp-controller="Dashboard" asp-action="Index"
               class="px-5 py-2 rounded-lg border border-gray-300 text-gray-700 font-medium hover:bg-gray-100 transition">
                ⬅ Back to Dashboard
            </a>
            <button type="submit"
                    class="px-6 py-2 bg-gradient-to-r from-blue-700 to-cyan-500 text-white font-semibold rounded-xl shadow hover:shadow-lg transition">
                💾 Save Changes
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
