@model IEnumerable<MediCare.Models.Patient>

@{
    ViewData["Title"] = "My Patients";
    Layout = "~/Areas/Doctor/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto px-6 py-12 animate-in fade-in duration-700">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-12">
        <div>
            <h1 class="text-4xl font-black text-slate-900 tracking-tight">Clinical <span class="text-emerald-600">Registry</span></h1>
            <p class="text-slate-500 font-medium mt-1">Manage and review medical profiles for patients under your direct care.</p>
        </div>
        <div class="flex items-center gap-3">
            <span class="px-4 py-2 bg-emerald-50 text-emerald-700 text-[10px] font-black rounded-full uppercase tracking-tighter">
                @Model?.Count() Active Patients
            </span>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="bg-emerald-50 border border-emerald-100 text-emerald-700 px-6 py-4 rounded-[1.5rem] shadow-sm mb-8 flex items-center gap-3">
            <i data-lucide="check-circle" class="w-5 h-5"></i>
            <span class="font-bold text-sm">@TempData["Message"]</span>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="bg-white rounded-[3rem] border border-slate-200 shadow-xl shadow-slate-900/5 p-20 text-center">
            <div class="w-20 h-20 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-6">
                <i data-lucide="users-2" class="w-10 h-10 text-slate-200"></i>
            </div>
            <h3 class="text-xl font-black text-slate-900">No Patient Assignments</h3>
            <p class="text-slate-500 font-medium mt-1 italic">You currently have no registered patients linked to your practice.</p>
        </div>
    }
    else
    {
        <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-xl shadow-slate-900/5 overflow-hidden">
            <div class="p-8 border-b border-slate-100 bg-slate-50/50 flex items-center justify-between">
                <h3 class="font-black text-slate-900 uppercase tracking-widest text-xs">Patient Master List</h3>
                <div class="flex items-center gap-2 text-slate-400">
                    <i data-lucide="shield-check" class="w-4 h-4 text-emerald-500"></i>
                    <span class="text-[10px] font-black uppercase tracking-widest">Confidential Data</span>
                </div>
            </div>

            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] bg-white">
                            <th class="px-8 py-5">Patient Identity</th>
                            <th class="px-6 py-5">Communication</th>
                            <th class="px-6 py-5">Last Consultation</th>
                            <th class="px-8 py-5 text-right">Actions</th>
                        </tr>
                    </thead>

                    <tbody class="divide-y divide-slate-100">
                        @foreach (var patient in Model)
                        {
                            <tr class="group hover:bg-slate-50/80 transition-all">
                                <td class="px-8 py-6">
                                    <div class="flex items-center gap-4">
                                        <div class="w-12 h-12 rounded-2xl bg-emerald-50 flex items-center justify-center text-emerald-600 font-black text-lg group-hover:bg-emerald-600 group-hover:text-white transition-all shadow-inner">
                                            @patient.AppUser?.FullName.Substring(0, 1)
                                        </div>
                                        <div>
                                            <p class="font-bold text-slate-900 text-base">@patient.AppUser?.FullName</p>
                                            <p class="text-[10px] font-black text-emerald-600 uppercase tracking-tighter bg-emerald-50 self-start px-2 py-0.5 rounded">Verified Patient</p>
                                        </div>
                                    </div>
                                </td>

                                <td class="px-6 py-6">
                                    <div class="space-y-1">
                                        <div class="flex items-center gap-2 text-sm font-semibold text-slate-700">
                                            <i data-lucide="mail" class="w-3.5 h-3.5 text-slate-300"></i>
                                            @patient.AppUser?.Email
                                        </div>
                                        <div class="flex items-center gap-2 text-[11px] font-bold text-slate-400 uppercase">
                                            <i data-lucide="phone" class="w-3.5 h-3.5 text-slate-300"></i>
                                            @patient.PhoneNumber
                                        </div>
                                    </div>
                                </td>

                                <td class="px-6 py-6">
                                    @{
                                        var lastAppt = patient.Appointments?
                                        .OrderByDescending(a => a.DateTime)
                                        .FirstOrDefault();
                                    }
                                    @if (lastAppt != null)
                                    {
                                        <div class="space-y-1">
                                            <p class="text-sm font-bold text-slate-900">@lastAppt.DateTime.ToString("dd MMM yyyy")</p>
                                            <p class="text-[10px] font-black text-slate-400 uppercase tracking-tighter">at @lastAppt.DateTime.ToString("hh:mm tt")</p>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-[10px] font-black text-slate-300 uppercase italic tracking-widest">No History</span>
                                    }
                                </td>

                                <td class="px-8 py-6 text-right">
                                    <a href="@Url.Action("Details", "Patients", new { area = "Doctor", id = patient.PatientId })"
                                       class="inline-flex items-center gap-2 px-5 py-2.5 bg-slate-900 text-white font-black text-[10px] uppercase tracking-widest rounded-xl hover:bg-blue-600 transition-all shadow-lg shadow-slate-200">
                                        <i data-lucide="search" class="w-3.5 h-3.5"></i>
                                        Patient Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>