@model IEnumerable<MediCare.Models.Patient>

@{
    ViewData["Title"] = "My Patients";
    Layout = "~/Areas/Doctor/Views/Shared/_Layout.cshtml";
}

<h2 class="text-xl font-bold mb-4">My Patients</h2>

@if (!Model.Any())
{
    <p>No patients have booked appointments with you yet.</p>
}
else
{
    <table class="table table-bordered w-full border-collapse">
        <thead class="bg-gray-100">
            <tr>
                <th class="px-4 py-2 text-left">Full Name</th>
                <th class="px-4 py-2 text-left">Email</th>
                <th class="px-4 py-2 text-left">Insurance</th>
                <th class="px-4 py-2 text-left">Medical History</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model)
            {
                <tr class="border-b">
                    <td class="px-4 py-2">@patient.AppUser?.FullName</td>
                    <td class="px-4 py-2">@patient.AppUser?.Email</td>
                    <td class="px-4 py-2">@patient.InsuranceDetails</td>
                    <td class="px-4 py-2">@patient.MedicalHistory</td>
                </tr>
            }
        </tbody>
    </table>
}
