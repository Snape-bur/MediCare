@model MediCare.Models.Patient

@{
    ViewData["Title"] = "Patient Medical Profile";
    Layout = "~/Areas/Doctor/Views/Shared/_Layout.cshtml";
}

<div class="max-w-6xl mx-auto px-6 py-12 space-y-10 animate-in fade-in duration-700">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div class="flex items-center gap-5">
            <div class="w-16 h-16 bg-emerald-600 rounded-2xl flex items-center justify-center text-white shadow-xl shadow-emerald-200">
                <i data-lucide="user-check" class="w-8 h-8"></i>
            </div>
            <div>
                <h2 class="text-3xl font-black text-slate-900 tracking-tight">Medical <span class="text-emerald-600">Profile</span></h2>
                <p class="text-slate-500 font-medium mt-1">Full clinical overview and longitudinal history for @Model.AppUser?.FullName.</p>
            </div>
        </div>
        <a href="@Url.Action("Index", "Patients", new { area = "Doctor" })"
           class="inline-flex items-center gap-2 px-6 py-3 bg-white border border-slate-200 text-slate-500 font-black rounded-xl hover:text-slate-900 hover:bg-slate-50 transition-all uppercase text-[10px] tracking-widest shadow-sm">
            <i data-lucide="arrow-left" class="w-4 h-4"></i>
            Back to Registry
        </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-1 space-y-6">
            <div class="bg-slate-900 rounded-[2.5rem] p-10 text-white shadow-2xl relative overflow-hidden">
                <i data-lucide="fingerprint" class="absolute -right-4 -bottom-4 w-32 h-32 text-white/5 rotate-12"></i>

                <h3 class="font-black text-slate-500 uppercase tracking-widest text-[10px] mb-8 relative z-10">Patient Identity</h3>

                <div class="space-y-8 relative z-10">
                    <div class="pb-6 border-b border-white/10">
                        <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest mb-1">Legal Name</p>
                        <p class="text-2xl font-black">@Model.AppUser?.FullName</p>
                    </div>

                    <div class="space-y-6">
                        <div class="flex items-start gap-4">
                            <div class="p-2.5 bg-white/10 rounded-xl text-blue-400">
                                <i data-lucide="mail" class="w-4 h-4"></i>
                            </div>
                            <div class="min-w-0">
                                <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest">Email Address</p>
                                <p class="text-sm font-bold truncate">@Model.AppUser?.Email</p>
                            </div>
                        </div>

                        <div class="flex items-start gap-4">
                            <div class="p-2.5 bg-white/10 rounded-xl text-emerald-400">
                                <i data-lucide="phone" class="w-4 h-4"></i>
                            </div>
                            <div>
                                <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest">Contact Number</p>
                                <p class="text-sm font-bold">@Model.PhoneNumber</p>
                            </div>
                        </div>

                        <div class="flex items-start gap-4">
                            <div class="p-2.5 bg-white/10 rounded-xl text-amber-400">
                                <i data-lucide="map-pin" class="w-4 h-4"></i>
                            </div>
                            <div>
                                <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest">Primary Residence</p>
                                <p class="text-sm font-bold leading-relaxed text-slate-300">@Model.Address</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-[2rem] p-8 border border-slate-200">
                <h4 class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-4">Internal Flags</h4>
                <div class="flex flex-wrap gap-2">
                    <span class="px-3 py-1 bg-blue-50 text-blue-600 text-[10px] font-black rounded-lg border border-blue-100 uppercase tracking-tighter">Verified Account</span>
                    <span class="px-3 py-1 bg-emerald-50 text-emerald-600 text-[10px] font-black rounded-lg border border-emerald-100 uppercase tracking-tighter">Regular Patient</span>
                </div>
            </div>
        </div>

        <div class="lg:col-span-2">
            <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-xl shadow-slate-900/5 overflow-hidden">
                <div class="p-8 border-b border-slate-100 bg-slate-50/50 flex items-center justify-between">
                    <h3 class="font-black text-slate-900 uppercase tracking-widest text-xs">Consultation Timeline</h3>
                    <div class="flex items-center gap-2">
                        <i data-lucide="history" class="w-4 h-4 text-slate-400"></i>
                        <span class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Historical Logs</span>
                    </div>
                </div>

                @if (Model.Appointments == null || !Model.Appointments.Any())
                {
                    <div class="p-20 text-center">
                        <div class="w-16 h-16 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-4">
                            <i data-lucide="calendar-x" class="w-8 h-8 text-slate-200"></i>
                        </div>
                        <p class="text-slate-400 font-bold uppercase text-[10px] tracking-widest italic">No clinical history recorded for this profile.</p>
                    </div>
                }
                else
                {
                    <div class="overflow-x-auto">
                        <table class="w-full text-left border-collapse">
                            <thead>
                                <tr class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] bg-white">
                                    <th class="px-8 py-5">Date & Slot</th>
                                    <th class="px-6 py-5">Status</th>
                                    <th class="px-6 py-5">Clinical Notes</th>
                                    <th class="px-8 py-5">Prescription</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-slate-100">
                                @foreach (var appt in Model.Appointments.OrderByDescending(a => a.DateTime))
                                {
                                    <tr class="group hover:bg-slate-50 transition-all">
                                        <td class="px-8 py-6">
                                            <p class="text-sm font-bold text-slate-900">@appt.DateTime.ToString("dd MMM yyyy")</p>
                                            <p class="text-[10px] font-black text-slate-400 uppercase">@appt.DateTime.ToString("hh:mm tt")</p>
                                        </td>
                                        <td class="px-6 py-6">
                                            @{
                                                var s = appt.Status?.Trim() ?? "";
                                                var color = s switch
                                                {
                                                    "Pending" => "bg-amber-50 text-amber-600 border-amber-100",
                                                    "Confirmed" => "bg-emerald-50 text-emerald-600 border-emerald-100",
                                                    "Paid" => "bg-blue-50 text-blue-600 border-blue-100",
                                                    "Completed" => "bg-indigo-50 text-indigo-600 border-indigo-100",
                                                    "Cancelled" => "bg-rose-50 text-rose-600 border-rose-100",
                                                    _ => "bg-slate-50 text-slate-600 border-slate-100"
                                                };
                                            }
                                            <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-lg border @color text-[10px] font-black uppercase tracking-widest shadow-sm">
                                                @s
                                            </span>
                                        </td>
                                        <td class="px-6 py-6">
                                            <p class="text-sm text-slate-600 font-medium italic line-clamp-2 max-w-[200px]" title="@appt.Notes">
                                                @(string.IsNullOrWhiteSpace(appt.Notes) ? "—" : appt.Notes)
                                            </p>
                                        </td>
                                        <td class="px-8 py-6">
                                            @if (!string.IsNullOrWhiteSpace(appt.Prescription))
                                            {
                                                <div class="flex items-center gap-2 text-indigo-600 font-bold text-xs">
                                                    <i data-lucide="pill" class="w-4 h-4"></i>
                                                    View Details
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-slate-300">—</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>