@model MediCare.Models.Doctor

@{
    ViewData["Title"] = "Edit Availability";
    Layout = "~/Areas/Doctor/Views/Shared/_Layout.cshtml";
}

<h2>Edit Availability</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="doctorId" value="@Model.DoctorId" />

    <div class="form-group">
        <label for="availabilitySchedule">Weekly Schedule</label>
        <textarea name="availabilitySchedule" class="form-control" rows="5">@Model.AvailabilitySchedule</textarea>
        <small class="form-text text-muted">
            Example: Mon–Fri: 9 AM – 3 PM<br />
            Sat: 10 AM – 1 PM<br />
            Sun: Off
        </small>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
    <a asp-area="Doctor" asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>
