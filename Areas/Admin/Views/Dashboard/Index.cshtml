@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto mt-10 px-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-8">📊 Admin Dashboard</h1>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-6 mb-10">

        <!-- Doctors -->
        <div class="bg-gradient-to-r from-blue-600 to-blue-400 text-white rounded-2xl shadow-lg p-6 flex flex-col justify-between hover:scale-[1.02] transition-transform">
            <div>
                <h3 class="text-lg font-semibold mb-1">Total Doctors</h3>
                <p class="text-blue-100 text-sm">Registered specialists</p>
            </div>
            <div class="flex justify-between items-center mt-6">
                <span class="text-4xl font-bold">@ViewBag.DoctorCount</span>
                <a asp-area="Admin" asp-controller="Users" asp-action="Doctors"
                   class="bg-white text-blue-600 px-3 py-1.5 rounded-lg font-medium hover:bg-blue-50 transition">View</a>
            </div>
        </div>

        <!-- Patients -->
        <div class="bg-gradient-to-r from-green-600 to-emerald-400 text-white rounded-2xl shadow-lg p-6 flex flex-col justify-between hover:scale-[1.02] transition-transform">
            <div>
                <h3 class="text-lg font-semibold mb-1">Total Patients</h3>
                <p class="text-green-100 text-sm">Active patient profiles</p>
            </div>
            <div class="flex justify-between items-center mt-6">
                <span class="text-4xl font-bold">@ViewBag.PatientCount</span>
                <a asp-area="Admin" asp-controller="Users" asp-action="Patients"
                   class="bg-white text-green-600 px-3 py-1.5 rounded-lg font-medium hover:bg-green-50 transition">View</a>
            </div>
        </div>

        <!-- Clinics -->
        <div class="bg-gradient-to-r from-indigo-600 to-purple-500 text-white rounded-2xl shadow-lg p-6 flex flex-col justify-between hover:scale-[1.02] transition-transform">
            <div>
                <h3 class="text-lg font-semibold mb-1">Clinics</h3>
                <p class="text-indigo-100 text-sm">Registered locations</p>
            </div>
            <div class="flex justify-between items-center mt-6">
                <span class="text-4xl font-bold">@ViewBag.ClinicCount</span>
                <a asp-area="Admin" asp-controller="Clinics" asp-action="Index"
                   class="bg-white text-indigo-600 px-3 py-1.5 rounded-lg font-medium hover:bg-indigo-50 transition">Manage</a>
            </div>
        </div>

        <!-- Appointments -->
        <div class="bg-gradient-to-r from-pink-600 to-rose-400 text-white rounded-2xl shadow-lg p-6 flex flex-col justify-between hover:scale-[1.02] transition-transform">
            <div>
                <h3 class="text-lg font-semibold mb-1">Appointments</h3>
                <p class="text-pink-100 text-sm">Upcoming & completed</p>
            </div>
            <div class="flex justify-between items-center mt-6">
                <span class="text-4xl font-bold">@ViewBag.AppointmentCount</span>
                <a asp-area="Admin" asp-controller="Reports" asp-action="Index"
                   class="bg-white text-pink-600 px-3 py-1.5 rounded-lg font-medium hover:bg-pink-50 transition">Reports</a>
            </div>
        </div>
    </div>

    <!-- Quick Access Links -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-white shadow-lg rounded-2xl p-6 hover:shadow-xl transition">
            <h3 class="text-xl font-semibold mb-3 text-gray-800">⚙️ Manage Users</h3>
            <p class="text-gray-600 mb-4">Access and control doctors and patients accounts within the system.</p>
            <a asp-area="Admin" asp-controller="Users" asp-action="Index"
               class="inline-block bg-gradient-to-r from-indigo-600 to-purple-500 text-white font-medium px-5 py-2.5 rounded-xl shadow hover:shadow-lg hover:scale-[1.02] transition">Go to Users →</a>
        </div>

        <div class="bg-white shadow-lg rounded-2xl p-6 hover:shadow-xl transition">
            <h3 class="text-xl font-semibold mb-3 text-gray-800">🏥 Manage Clinics</h3>
            <p class="text-gray-600 mb-4">Add or update clinic information, contact details, and addresses.</p>
            <a asp-area="Admin" asp-controller="Clinics" asp-action="Index"
               class="inline-block bg-gradient-to-r from-indigo-600 to-purple-500 text-white font-medium px-5 py-2.5 rounded-xl shadow hover:shadow-lg hover:scale-[1.02] transition">Go to Clinics →</a>
        </div>
    </div>
</div>
