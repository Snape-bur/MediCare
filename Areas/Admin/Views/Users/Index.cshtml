@{
    ViewData["Title"] = "User Management Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto mt-10 px-6">
    <h2 class="text-3xl font-bold text-gray-800 mb-6">👥 User Management Dashboard</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">

        <!-- 👨‍⚕️ Doctors Card -->
        <div class="bg-gradient-to-r from-blue-600 to-blue-400 text-white rounded-2xl shadow-lg p-6 flex flex-col justify-between transition-transform hover:scale-[1.02]">
            <div>
                <h3 class="text-xl font-semibold mb-2">Doctors</h3>
                <p class="text-blue-100">View and manage all registered doctors, including their specialties and profiles.</p>
            </div>
            <div class="mt-6 flex justify-between items-center">
                <span class="text-5xl font-bold">@ViewBag.DoctorCount</span>
                <a asp-action="Doctors" class="bg-white text-blue-600 px-4 py-2 rounded-lg font-medium shadow hover:bg-blue-50 transition">
                    View List →
                </a>
            </div>
        </div>

        <!-- 🧑‍🤝‍🧑 Patients Card -->
        <div class="bg-gradient-to-r from-green-600 to-emerald-400 text-white rounded-2xl shadow-lg p-6 flex flex-col justify-between transition-transform hover:scale-[1.02]">
            <div>
                <h3 class="text-xl font-semibold mb-2">Patients</h3>
                <p class="text-green-100">Access all registered patients and their linked user accounts.</p>
            </div>
            <div class="mt-6 flex justify-between items-center">
                <span class="text-5xl font-bold">@ViewBag.PatientCount</span>
                <a asp-action="Patients" class="bg-white text-green-600 px-4 py-2 rounded-lg font-medium shadow hover:bg-green-50 transition">
                    View List →
                </a>
            </div>
        </div>

        <!-- 🏥 Clinics Card -->
        <div class="bg-gradient-to-r from-indigo-600 to-purple-500 text-white rounded-2xl shadow-lg p-6 flex flex-col justify-between transition-transform hover:scale-[1.02]">
            <div>
                <h3 class="text-xl font-semibold mb-2">Clinics</h3>
                <p class="text-indigo-100">Manage clinic branches, addresses, and contact details.</p>
            </div>
            <div class="mt-6 flex justify-between items-center">
                <span class="text-5xl font-bold">@ViewBag.ClinicCount</span>
                <a asp-controller="Clinics" asp-action="Index" class="bg-white text-indigo-600 px-4 py-2 rounded-lg font-medium shadow hover:bg-indigo-50 transition">
                    Manage →
                </a>
            </div>
        </div>
    </div>
</div>
