@{
    ViewData["Title"] = "User Registry Control";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto px-6 py-12">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-12">
        <div>
            <h1 class="text-4xl font-black text-slate-900 tracking-tight">User <span class="text-blue-600">Registry</span></h1>
            <p class="text-slate-500 font-medium mt-1">Manage global accounts, healthcare providers, and clinical branches.</p>
        </div>
        <div class="flex items-center gap-2">
            <span class="px-3 py-1 bg-blue-50 text-blue-600 text-[10px] font-black rounded-full uppercase tracking-tighter">System Administrator Mode</span>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">

        <div class="group relative bg-white rounded-[2.5rem] p-10 border border-slate-200 shadow-xl shadow-slate-900/5 overflow-hidden transition-all duration-500 hover:shadow-2xl hover:-translate-y-1">
            <i data-lucide="stethoscope" class="absolute -right-4 -bottom-4 w-32 h-32 text-slate-50 group-hover:text-blue-50 transition-colors duration-500"></i>

            <div class="relative z-10">
                <div class="w-14 h-14 bg-blue-50 rounded-2xl flex items-center justify-center text-blue-600 mb-6 group-hover:bg-blue-600 group-hover:text-white transition-all duration-300">
                    <i data-lucide="user-cog" class="w-7 h-7"></i>
                </div>

                <h3 class="text-2xl font-black text-slate-900 mb-2">Physicians</h3>
                <p class="text-slate-500 text-sm font-medium mb-10 leading-relaxed">Modify specialist credentials, manage profiles, and update medical designations.</p>

                <div class="flex items-end justify-between">
                    <div>
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Total Active</p>
                        <p class="text-4xl font-black text-slate-900">@ViewBag.DoctorCount</p>
                    </div>
                    <a asp-action="Doctors" class="px-6 py-3 bg-slate-900 text-white font-black text-xs rounded-xl hover:bg-blue-600 transition-all shadow-lg shadow-slate-200 uppercase tracking-widest">
                        Manage List
                    </a>
                </div>
            </div>
        </div>

        <div class="group relative bg-white rounded-[2.5rem] p-10 border border-slate-200 shadow-xl shadow-slate-900/5 overflow-hidden transition-all duration-500 hover:shadow-2xl hover:-translate-y-1">
            <i data-lucide="heart" class="absolute -right-4 -bottom-4 w-32 h-32 text-slate-50 group-hover:text-emerald-50 transition-colors duration-500"></i>

            <div class="relative z-10">
                <div class="w-14 h-14 bg-emerald-50 rounded-2xl flex items-center justify-center text-emerald-600 mb-6 group-hover:bg-emerald-600 group-hover:text-white transition-all duration-300">
                    <i data-lucide="users" class="w-7 h-7"></i>
                </div>

                <h3 class="text-2xl font-black text-slate-900 mb-2">Patient Base</h3>
                <p class="text-slate-500 text-sm font-medium mb-10 leading-relaxed">Review registered individuals, verify accounts, and monitor health record links.</p>

                <div class="flex items-end justify-between">
                    <div>
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Total Registered</p>
                        <p class="text-4xl font-black text-slate-900">@ViewBag.PatientCount</p>
                    </div>
                    <a asp-action="Patients" class="px-6 py-3 bg-slate-900 text-white font-black text-xs rounded-xl hover:bg-emerald-600 transition-all shadow-lg shadow-slate-200 uppercase tracking-widest">
                        Manage List
                    </a>
                </div>
            </div>
        </div>

        <div class="group relative bg-slate-900 rounded-[2.5rem] p-10 shadow-2xl overflow-hidden transition-all duration-500 hover:-translate-y-1">
            <i data-lucide="map" class="absolute -right-4 -bottom-4 w-32 h-32 text-white/5 group-hover:text-white/10 transition-colors duration-500"></i>

            <div class="relative z-10">
                <div class="w-14 h-14 bg-white/10 rounded-2xl flex items-center justify-center text-white mb-6 group-hover:bg-blue-600 transition-all duration-300">
                    <i data-lucide="building-2" class="w-7 h-7"></i>
                </div>

                <h3 class="text-2xl font-black text-white mb-2">Clinic Hubs</h3>
                <p class="text-slate-400 text-sm font-medium mb-10 leading-relaxed">Update branch locations, facility communication, and physical HQ addresses.</p>

                <div class="flex items-end justify-between">
                    <div>
                        <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest">Total Branches</p>
                        <p class="text-4xl font-black text-white">@ViewBag.ClinicCount</p>
                    </div>
                    <a asp-controller="Clinics" asp-action="Index" class="px-6 py-3 bg-white text-slate-900 font-black text-xs rounded-xl hover:bg-blue-600 hover:text-white transition-all shadow-lg uppercase tracking-widest">
                        Manage List
                    </a>
                </div>
            </div>
        </div>

    </div>

    <div class="mt-12 p-8 bg-blue-50 rounded-[2rem] border border-blue-100 flex items-center gap-6">
        <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center text-blue-600 shadow-sm flex-shrink-0">
            <i data-lucide="shield-check" class="w-6 h-6"></i>
        </div>
        <div>
            <h4 class="text-sm font-black text-slate-900 uppercase tracking-tight">Administrative Security</h4>
            <p class="text-xs text-slate-600 font-medium leading-relaxed">All user modifications are logged in the system audit trail. Password resets and email changes will trigger a notification to the account holder.</p>
        </div>
    </div>
</div>