@model IEnumerable<MediCare.Models.Doctor>

@{
    ViewData["Title"] = "Physician Registry";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto px-6 py-12">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-12">
        <div>
            <h2 class="text-4xl font-black text-slate-900 tracking-tight">Physician <span class="text-blue-600">Registry</span></h2>
            <p class="text-slate-500 font-medium mt-1">Manage professional credentials and account status for all medical staff.</p>
        </div>

        <div class="flex items-center gap-3">
            <a asp-action="Index"
               class="px-5 py-3 rounded-xl bg-white border border-slate-200 text-slate-500 font-black text-[10px] uppercase tracking-widest hover:text-blue-600 transition-all flex items-center gap-2">
                <i data-lucide="layout-dashboard" class="w-4 h-4"></i> Registry Home
            </a>
            <div class="h-10 w-[1px] bg-slate-200 mx-2 hidden md:block"></div>
            <span class="px-4 py-2 bg-blue-50 text-blue-700 text-[10px] font-black rounded-full uppercase tracking-tighter">
                @Model?.Count() Total Staff
            </span>
        </div>
    </div>

    <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-xl shadow-slate-900/5 overflow-hidden animate-in fade-in slide-in-from-bottom-4 duration-700">
        <div class="p-8 border-b border-slate-100 bg-slate-50/50 flex items-center justify-between">
            <h3 class="font-black text-slate-900 uppercase tracking-widest text-xs">Medical Practitioner Database</h3>
            <div class="flex items-center gap-2 text-slate-400">
                <i data-lucide="shield-check" class="w-4 h-4"></i>
                <span class="text-[10px] font-black uppercase tracking-widest">Verified Accounts</span>
            </div>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] bg-white">
                        <th class="px-8 py-5">Physician Details</th>
                        <th class="px-6 py-5">Medical Designation</th>
                        <th class="px-6 py-5">Facility Hub</th>
                        <th class="px-6 py-5 text-right">Consultation Rate</th>
                        <th class="px-8 py-5 text-center">Status</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var doctor in Model)
                        {
                            <tr class="group hover:bg-slate-50/80 transition-all">
                                <td class="px-8 py-6">
                                    <div class="flex items-center gap-4">
                                        <div class="w-12 h-12 rounded-2xl bg-blue-50 flex items-center justify-center text-blue-600 font-black text-lg group-hover:bg-blue-600 group-hover:text-white transition-all shadow-inner">
                                            @doctor.AppUser.FullName.Substring(0, 1)
                                        </div>
                                        <div>
                                            <p class="font-bold text-slate-900 text-base">@doctor.AppUser.FullName</p>
                                            <div class="flex items-center gap-1.5 text-[11px] font-medium text-slate-400">
                                                <i data-lucide="mail" class="w-3 h-3"></i>
                                                @doctor.AppUser.Email
                                            </div>
                                        </div>
                                    </div>
                                </td>

                                <td class="px-6 py-6">
                                    <div class="flex flex-col gap-1">
                                        <span class="text-sm font-bold text-slate-700">@doctor.Specialty?.Name</span>
                                        <span class="text-[10px] font-black text-blue-600 uppercase tracking-tighter bg-blue-50 self-start px-2 py-0.5 rounded">Specialist</span>
                                    </div>
                                </td>

                                <td class="px-6 py-6">
                                    <div class="flex items-center gap-2 text-sm font-semibold text-slate-500">
                                        <i data-lucide="building-2" class="w-4 h-4 text-slate-300"></i>
                                        @doctor.Clinic?.Name
                                    </div>
                                </td>

                                <td class="px-6 py-6 text-right">
                                    <p class="text-base font-black text-slate-900 tracking-tighter">@doctor.ConsultationFee.ToString("C")</p>
                                    <p class="text-[9px] font-bold text-slate-400 uppercase tracking-widest">Base Rate</p>
                                </td>

                                <td class="px-8 py-6">
                                    <div class="flex justify-center">
                                        <span class="inline-flex items-center gap-1.5 px-3 py-1 bg-emerald-50 text-emerald-600 border border-emerald-100 text-[10px] font-black rounded-full uppercase tracking-widest shadow-sm">
                                            <span class="w-1 h-1 bg-emerald-500 rounded-full animate-pulse"></span>
                                            Active
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="px-8 py-20 text-center">
                                <div class="w-16 h-16 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-4">
                                    <i data-lucide="users-round" class="w-8 h-8 text-slate-300"></i>
                                </div>
                                <p class="text-slate-500 font-bold uppercase text-xs tracking-widest">No medical practitioners found in the registry.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>