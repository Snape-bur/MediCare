@model MediCare.Models.Clinic

@{
    ViewData["Title"] = "Clinic Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-5xl mx-auto px-4 py-8">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-10">
        <div class="flex items-center gap-5">
            <div class="w-16 h-16 bg-blue-600 rounded-2xl flex items-center justify-center text-white shadow-xl shadow-blue-200">
                <i data-lucide="building-2" class="w-8 h-8"></i>
            </div>
            <div>
                <h2 class="text-3xl font-black text-slate-900 tracking-tight">Facility <span class="text-blue-600">Profile</span></h2>
                <p class="text-slate-500 font-medium">Viewing administrative details for @Model.Name</p>
            </div>
        </div>
        <div class="flex items-center gap-3">
            <a asp-action="Index"
               class="px-6 py-3 bg-white border border-slate-200 text-slate-500 font-black rounded-xl hover:bg-slate-50 transition-all uppercase text-[10px] tracking-widest flex items-center gap-2">
                <i data-lucide="chevron-left" class="w-4 h-4"></i>
                Back to Registry
            </a>
            <a asp-action="Edit" asp-route-id="@Model.ClinicId"
               class="px-6 py-3 bg-slate-900 text-white font-black rounded-xl hover:bg-blue-600 transition-all uppercase text-[10px] tracking-widest flex items-center gap-2 shadow-lg shadow-slate-200">
                <i data-lucide="edit-3" class="w-4 h-4"></i>
                Edit Profile
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2 space-y-6">
            <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-xl shadow-slate-900/5 p-10">
                <h3 class="font-black text-slate-900 uppercase tracking-widest text-xs mb-8 flex items-center gap-2">
                    <i data-lucide="info" class="w-4 h-4 text-blue-600"></i>
                    General Information
                </h3>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="p-6 bg-slate-50 rounded-2xl border border-slate-100">
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2">Clinic Official Name</p>
                        <p class="text-lg font-bold text-slate-900">@Model.Name</p>
                    </div>

                    <div class="p-6 bg-slate-50 rounded-2xl border border-slate-100">
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2">Internal Facility ID</p>
                        <p class="text-lg font-bold text-slate-900">#FAC-00@Model.ClinicId</p>
                    </div>

                    <div class="p-6 bg-slate-50 rounded-2xl border border-slate-100 md:col-span-2">
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2">Physical Location</p>
                        <div class="flex items-start gap-3">
                            <i data-lucide="map-pin" class="w-5 h-5 text-blue-500 mt-1"></i>
                            <p class="text-slate-700 font-semibold leading-relaxed">@Model.Address</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="p-8 bg-blue-50 rounded-[2rem] border border-blue-100 flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <div class="p-3 bg-white rounded-xl shadow-sm">
                        <i data-lucide="users" class="w-6 h-6 text-blue-600"></i>
                    </div>
                    <div>
                        <p class="text-sm font-black text-slate-900">Assigned Specialists</p>
                        <p class="text-xs font-medium text-slate-500">Manage doctors assigned to this specific facility.</p>
                    </div>
                </div>
                <button class="px-4 py-2 bg-white text-blue-600 text-[10px] font-black uppercase rounded-lg border border-blue-200 hover:bg-blue-600 hover:text-white transition-all">
                    View List
                </button>
            </div>
        </div>

        <div class="space-y-6">
            <div class="bg-slate-900 rounded-[2.5rem] p-10 text-white shadow-2xl relative overflow-hidden">
                <i data-lucide="contact-2" class="absolute -right-4 -bottom-4 w-32 h-32 text-white/5 rotate-12"></i>

                <h3 class="font-black text-slate-400 uppercase tracking-widest text-[10px] mb-10 relative z-10">Communications Hub</h3>

                <div class="space-y-10 relative z-10">
                    <div class="flex items-start gap-5">
                        <div class="p-3 bg-blue-600/20 rounded-xl text-blue-400">
                            <i data-lucide="phone-forwarded" class="w-5 h-5"></i>
                        </div>
                        <div>
                            <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest">Main Reception</p>
                            <p class="text-lg font-bold">@Model.PhoneNumber</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-5">
                        <div class="p-3 bg-blue-600/20 rounded-xl text-blue-400">
                            <i data-lucide="mail-check" class="w-5 h-5"></i>
                        </div>
                        <div class="min-w-0">
                            <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest">Admin Email</p>
                            <p class="text-lg font-bold truncate">@Model.Email</p>
                        </div>
                    </div>

                    <div class="pt-6 border-t border-white/10">
                        <div class="flex items-center justify-between">
                            <span class="text-[10px] font-black text-slate-500 uppercase">Operational Status</span>
                            <span class="px-3 py-1 bg-green-500/10 text-green-400 text-[10px] font-black rounded-full border border-green-500/20 uppercase">Active</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>