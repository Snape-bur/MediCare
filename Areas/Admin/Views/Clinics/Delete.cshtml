@model MediCare.Models.Clinic

@{
    ViewData["Title"] = "Delete Clinic";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-2xl font-bold text-red-600 mb-6">🗑️ Delete Clinic</h2>

<div class="bg-white shadow rounded-2xl p-8 max-w-3xl">
    <h3 class="text-lg font-semibold text-gray-700 mb-4">Are you sure you want to delete this clinic?</h3>

    <dl class="divide-y divide-gray-200 mb-6">
        <div class="py-3 grid grid-cols-3">
            <dt class="font-semibold text-gray-600">Clinic Name</dt>
            <dd class="col-span-2">@Model.Name</dd>
        </div>
        <div class="py-3 grid grid-cols-3">
            <dt class="font-semibold text-gray-600">Address</dt>
            <dd class="col-span-2">@Model.Address</dd>
        </div>
        <div class="py-3 grid grid-cols-3">
            <dt class="font-semibold text-gray-600">Phone</dt>
            <dd class="col-span-2">@Model.PhoneNumber</dd>
        </div>
        <div class="py-3 grid grid-cols-3">
            <dt class="font-semibold text-gray-600">Email</dt>
            <dd class="col-span-2">@Model.Email</dd>
        </div>
    </dl>

    <form asp-action="Delete" method="post" class="flex justify-between items-center">
        <input type="hidden" asp-for="ClinicId" />
        <a asp-action="Index"
           class="px-5 py-2 rounded-lg border border-gray-300 text-gray-700 font-medium hover:bg-gray-100 transition">
            ⬅ Cancel
        </a>
        <button type="submit"
                class="px-6 py-2 bg-gradient-to-r from-red-600 to-rose-400 text-white font-semibold rounded-xl shadow hover:shadow-lg transition">
            🗑️ Confirm Delete
        </button>
    </form>
</div>
