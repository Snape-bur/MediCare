@model MediCare.Models.Clinic

@{
    ViewData["Title"] = "Delete Clinic";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto px-4 py-8">
    <div class="mb-10 text-center">
        <div class="w-20 h-20 bg-red-50 text-red-600 rounded-[2rem] flex items-center justify-center mx-auto mb-4 shadow-inner animate-pulse">
            <i data-lucide="alert-octagon" class="w-10 h-10"></i>
        </div>
        <h2 class="text-3xl font-black text-slate-900 tracking-tight">Remove <span class="text-red-600">Facility</span></h2>
        <p class="text-slate-500 font-medium mt-1">Danger: This action is irreversible. All records for this clinic will be purged.</p>
    </div>

    <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-2xl shadow-red-900/5 overflow-hidden">
        <div class="h-3 bg-gradient-to-r from-red-600 via-rose-500 to-red-600"></div>

        <div class="p-10">
            <h3 class="font-black text-slate-900 uppercase tracking-widest text-xs mb-8 flex items-center gap-2">
                <i data-lucide="info" class="w-4 h-4 text-red-500"></i>
                Verify Record Details
            </h3>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div class="p-6 bg-slate-50 rounded-2xl border border-slate-100 group transition-all hover:bg-white hover:shadow-md">
                    <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2">Clinic Official Name</p>
                    <div class="flex items-center gap-3">
                        <i data-lucide="building-2" class="w-5 h-5 text-slate-300 group-hover:text-red-500 transition-colors"></i>
                        <p class="text-lg font-bold text-slate-900">@Model.Name</p>
                    </div>
                </div>

                <div class="p-6 bg-slate-50 rounded-2xl border border-slate-100 group transition-all hover:bg-white hover:shadow-md">
                    <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2">Primary Contact Email</p>
                    <div class="flex items-center gap-3">
                        <i data-lucide="mail" class="w-5 h-5 text-slate-300 group-hover:text-red-500 transition-colors"></i>
                        <p class="text-lg font-bold text-slate-900">@Model.Email</p>
                    </div>
                </div>

                <div class="p-6 bg-slate-50 rounded-2xl border border-slate-100 group transition-all hover:bg-white hover:shadow-md md:col-span-2">
                    <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2">Full Address Location</p>
                    <div class="flex items-center gap-3">
                        <i data-lucide="map-pin" class="w-5 h-5 text-slate-300 group-hover:text-red-500 transition-colors"></i>
                        <p class="text-slate-700 font-semibold leading-relaxed">@Model.Address</p>
                    </div>
                </div>

                <div class="p-6 bg-slate-50 rounded-2xl border border-slate-100 group transition-all hover:bg-white hover:shadow-md md:col-span-2">
                    <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2">Facility Phone Number</p>
                    <div class="flex items-center gap-3">
                        <i data-lucide="phone-call" class="w-5 h-5 text-slate-300 group-hover:text-red-500 transition-colors"></i>
                        <p class="text-lg font-bold text-slate-900">@Model.PhoneNumber</p>
                    </div>
                </div>
            </div>

            <div class="mt-12 pt-8 border-t border-slate-100">
                <form asp-action="Delete" method="post" class="flex flex-col md:flex-row items-center gap-4">
                    <input type="hidden" asp-for="ClinicId" />

                    <button type="submit"
                            class="w-full md:flex-1 py-5 bg-red-600 text-white font-black rounded-[2rem] shadow-xl shadow-red-200 hover:bg-red-700 hover:-translate-y-1 transition-all active:scale-[0.98] flex items-center justify-center gap-2">
                        <i data-lucide="trash-2" class="w-5 h-5"></i>
                        Confirm Permanent Deletion
                    </button>

                    <a asp-action="Index"
                       class="w-full md:w-auto px-10 py-5 bg-white text-slate-400 font-black rounded-[2rem] border border-slate-200 hover:text-slate-900 hover:bg-slate-50 transition-all text-center">
                        Cancel & Return
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>