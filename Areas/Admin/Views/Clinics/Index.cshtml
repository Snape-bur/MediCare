@model IEnumerable<MediCare.Models.Clinic>

@{
    ViewData["Title"] = "Clinic Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-3xl font-bold text-gray-700 mb-6">🏥 Clinic Management</h2>

<div class="bg-white shadow rounded-2xl p-6">
    <div class="flex justify-between items-center mb-6">
        <h3 class="text-lg font-semibold text-gray-600">All Registered Clinics</h3>
        <a asp-action="Create"
           class="px-5 py-2 bg-gradient-to-r from-blue-600 to-blue-400 text-white rounded-lg font-semibold shadow hover:shadow-lg transition">
            ➕ Add New Clinic
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="overflow-x-auto">
            <table class="min-w-full text-sm text-left border border-gray-200 rounded-lg">
                <thead class="bg-blue-50 text-gray-700 font-semibold">
                    <tr>
                        <th class="px-4 py-3">Clinic Name</th>
                        <th class="px-4 py-3">Address</th>
                        <th class="px-4 py-3">Phone</th>
                        <th class="px-4 py-3">Email</th>
                        <th class="px-4 py-3 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50 transition">
                            <td class="px-4 py-3">@item.Name</td>
                            <td class="px-4 py-3">@item.Address</td>
                            <td class="px-4 py-3">@item.PhoneNumber</td>
                            <td class="px-4 py-3">@item.Email</td>
                            <td class="px-4 py-3 text-center space-x-3">
                                <a asp-action="Edit" asp-route-id="@item.ClinicId"
                                   class="text-blue-600 hover:text-blue-800 font-medium">Edit</a>
                                <span class="text-gray-300">|</span>
                                <a asp-action="Details" asp-route-id="@item.ClinicId"
                                   class="text-green-600 hover:text-green-800 font-medium">View</a>
                                <span class="text-gray-300">|</span>
                                <a asp-action="Delete" asp-route-id="@item.ClinicId"
                                   class="text-red-600 hover:text-red-800 font-medium">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center text-gray-500 py-10">
            <p class="text-lg">No clinics have been registered yet.</p>
            <a asp-action="Create"
               class="inline-block mt-4 px-5 py-2 bg-gradient-to-r from-blue-600 to-blue-400 text-white rounded-lg font-semibold shadow hover:shadow-lg transition">
                ➕ Add Your First Clinic
            </a>
        </div>
    }
</div>
