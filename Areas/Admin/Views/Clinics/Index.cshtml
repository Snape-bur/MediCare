@model IEnumerable<MediCare.Models.Clinic>

@{
    ViewData["Title"] = "Clinic Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-8">
    <div>
        <h2 class="text-3xl font-black text-slate-900 tracking-tight">Facility <span class="text-blue-600">Centers</span></h2>
        <p class="text-slate-500 font-medium">Manage physical clinic locations and contact headquarters.</p>
    </div>
    <a asp-action="Create"
       class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 text-white font-black rounded-xl shadow-lg shadow-blue-100 hover:bg-blue-700 hover:-translate-y-0.5 transition-all">
        <i data-lucide="plus-circle" class="w-5 h-5"></i>
        Add New Clinic
    </a>
</div>

<div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-xl shadow-slate-900/5 overflow-hidden">
    <div class="p-8 border-b border-slate-100 flex items-center justify-between bg-slate-50/50">
        <h3 class="font-black text-slate-900 uppercase tracking-widest text-xs">Active Locations</h3>
        <span class="px-3 py-1 bg-blue-100 text-blue-700 text-[10px] font-black rounded-full uppercase">@Model.Count() Facilities</span>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em]">
                        <th class="px-8 py-5">Clinic Name</th>
                        <th class="px-6 py-5">Address</th>
                        <th class="px-6 py-5">Contact Details</th>
                        <th class="px-8 py-5 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    @foreach (var item in Model)
                    {
                        <tr class="group hover:bg-slate-50/80 transition-all">
                            <td class="px-8 py-6">
                                <div class="flex items-center gap-4">
                                    <div class="w-10 h-10 rounded-xl bg-indigo-50 flex items-center justify-center text-indigo-600 font-bold group-hover:bg-indigo-600 group-hover:text-white transition-all">
                                        <i data-lucide="building-2" class="w-5 h-5"></i>
                                    </div>
                                    <p class="font-bold text-slate-900">@item.Name</p>
                                </div>
                            </td>
                            <td class="px-6 py-6 max-w-xs">
                                <p class="text-sm text-slate-500 font-medium truncate hover:whitespace-normal transition-all cursor-help" title="@item.Address">
                                    @item.Address
                                </p>
                            </td>
                            <td class="px-6 py-6">
                                <div class="space-y-1">
                                    <div class="flex items-center gap-2 text-[11px] font-bold text-slate-700">
                                        <i data-lucide="phone" class="w-3.5 h-3.5 text-blue-500"></i>
                                        @item.PhoneNumber
                                    </div>
                                    <div class="flex items-center gap-2 text-[11px] font-bold text-slate-400">
                                        <i data-lucide="mail" class="w-3.5 h-3.5"></i>
                                        @item.Email
                                    </div>
                                </div>
                            </td>
                            <td class="px-8 py-6 text-right">
                                <div class="flex items-center justify-end gap-2">
                                    <a asp-action="Details" asp-route-id="@item.ClinicId" class="p-2.5 text-slate-400 hover:text-green-600 hover:bg-green-50 rounded-xl transition-all"><i data-lucide="eye" class="w-5 h-5"></i></a>
                                    <a asp-action="Edit" asp-route-id="@item.ClinicId" class="p-2.5 text-slate-400 hover:text-blue-600 hover:bg-blue-50 rounded-xl transition-all"><i data-lucide="edit-3" class="w-5 h-5"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.ClinicId" class="p-2.5 text-slate-400 hover:text-red-600 hover:bg-red-50 rounded-xl transition-all"><i data-lucide="trash-2" class="w-5 h-5"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="p-20 text-center">
            <div class="w-20 h-20 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-6">
                <i data-lucide="map-pin-off" class="w-10 h-10 text-slate-300"></i>
            </div>
            <h4 class="text-xl font-black text-slate-900">No Clinics Registered</h4>
            <p class="text-slate-500 mb-8">Establish your first healthcare center location.</p>
            <a asp-action="Create" class="px-8 py-3 bg-blue-600 text-white font-black rounded-xl shadow-lg">Add First Clinic</a>
        </div>
    }
</div>