@model MediCare.Models.Clinic

@{
    ViewData["Title"] = "Add New Clinic";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto px-4 py-8">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-10">
        <div>
            <h2 class="text-3xl font-black text-slate-900 tracking-tight">Register <span class="text-blue-600">Facility</span></h2>
            <p class="text-slate-500 font-medium mt-1">Establish a new healthcare center location in the system.</p>
        </div>
        <a asp-action="Index"
           class="inline-flex items-center gap-2 text-xs font-black text-slate-400 uppercase tracking-widest hover:text-blue-600 transition-colors">
            <i data-lucide="arrow-left" class="w-4 h-4"></i>
            Back to Registry
        </a>
    </div>

    <form asp-action="Create" method="post" class="space-y-8">
        <div asp-validation-summary="ModelOnly" class="p-4 bg-red-50 text-red-600 rounded-2xl text-xs font-bold mb-6"></div>

        <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-xl shadow-slate-900/5 overflow-hidden">
            <div class="p-8 border-b border-slate-100 bg-slate-50/50 flex items-center gap-3">
                <div class="p-2 bg-blue-600 rounded-lg text-white shadow-lg shadow-blue-200">
                    <i data-lucide="building" class="w-5 h-5"></i>
                </div>
                <h3 class="font-black text-slate-900 uppercase tracking-widest text-xs">Facility Information</h3>
            </div>

            <div class="p-10 space-y-8">
                <div class="space-y-2">
                    <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Official Clinic Name</label>
                    <div class="relative group">
                        <i data-lucide="home" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300 group-focus-within:text-blue-600 transition-colors"></i>
                        <input asp-for="Name"
                               class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-600 p-4 pl-12 font-bold text-slate-900 placeholder-slate-300 transition-all shadow-inner"
                               placeholder="e.g. MediCare Central Hub" />
                    </div>
                    <span asp-validation-for="Name" class="text-[10px] text-red-500 font-bold ml-1"></span>
                </div>

                <div class="space-y-2">
                    <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Physical Address</label>
                    <div class="relative group">
                        <textarea asp-for="Address" rows="3"
                                  class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-600 p-4 font-semibold text-slate-900 placeholder-slate-300 transition-all shadow-inner"
                                  placeholder="Enter full street address, district, and province..."></textarea>
                    </div>
                    <span asp-validation-for="Address" class="text-[10px] text-red-500 font-bold ml-1"></span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="space-y-2">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Reception Phone</label>
                        <div class="relative group">
                            <i data-lucide="phone-call" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300 group-focus-within:text-blue-600 transition-colors"></i>
                            <input asp-for="PhoneNumber"
                                   class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-600 p-4 pl-12 font-bold text-slate-900 placeholder-slate-300 transition-all shadow-inner"
                                   placeholder="+66 80 000 0000" />
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-[10px] text-red-500 font-bold ml-1"></span>
                    </div>

                    <div class="space-y-2">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Official Email</label>
                        <div class="relative group">
                            <i data-lucide="mail" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300 group-focus-within:text-blue-600 transition-colors"></i>
                            <input asp-for="Email" type="email"
                                   class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-600 p-4 pl-12 font-bold text-slate-900 placeholder-slate-300 transition-all shadow-inner"
                                   placeholder="contact@medicare.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-[10px] text-red-500 font-bold ml-1"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex items-center gap-4 pt-6">
            <button type="submit"
                    class="flex-1 py-5 bg-blue-600 text-white font-black rounded-[2rem] shadow-xl shadow-blue-100 hover:bg-blue-700 hover:-translate-y-1 transition-all active:scale-[0.98] flex items-center justify-center gap-2">
                <i data-lucide="save" class="w-5 h-5"></i>
                Save Facility Record
            </button>
            <a asp-action="Index"
               class="px-10 py-5 bg-white text-slate-400 font-black rounded-[2rem] border border-slate-200 hover:text-red-500 hover:bg-red-50 transition-all">
                Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}