@model MediCare.Models.Clinic

@{
    ViewData["Title"] = "Add New Clinic";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-2xl font-bold text-gray-700 mb-6">➕ Add New Clinic</h2>

<div class="bg-white shadow rounded-2xl p-8 max-w-2xl">
    <form asp-action="Create" method="post" class="space-y-5">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

        <div>
            <label asp-for="Name" class="block text-sm font-semibold mb-1">Clinic Name</label>
            <input asp-for="Name" class="w-full border rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none"
                   placeholder="Enter clinic name" />
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Address" class="block text-sm font-semibold mb-1">Address</label>
            <textarea asp-for="Address" rows="2" class="w-full border rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none"
                      placeholder="Enter full address"></textarea>
            <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="PhoneNumber" class="block text-sm font-semibold mb-1">Phone Number</label>
            <input asp-for="PhoneNumber" class="w-full border rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none"
                   placeholder="e.g. +66 812345678" />
            <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Email" class="block text-sm font-semibold mb-1">Email</label>
            <input asp-for="Email" type="email" class="w-full border rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none"
                   placeholder="clinic@example.com" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex justify-between pt-6">
            <a asp-action="Index"
               class="px-5 py-2 rounded-lg border border-gray-300 text-gray-700 font-medium hover:bg-gray-100 transition">
                ⬅ Back
            </a>
            <button type="submit"
                    class="px-6 py-2 bg-gradient-to-r from-blue-600 to-blue-400 text-white font-semibold rounded-xl shadow hover:shadow-lg transition">
                💾 Save Clinic
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
