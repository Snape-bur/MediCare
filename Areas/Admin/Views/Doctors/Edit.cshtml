@model MediCare.Models.Doctor

@{
    ViewData["Title"] = "Edit Doctor";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-2xl font-bold text-gray-700 mb-6">✏️ Edit Doctor</h2>

<div class="bg-white shadow rounded-2xl p-8 max-w-2xl">
    <form asp-action="Edit" method="post" class="space-y-5">
        @* Hidden field for DoctorId *@
        <input type="hidden" asp-for="DoctorId" />

        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

        <!-- Specialty Dropdown -->
        <div>
            <label asp-for="SpecialtyId" class="block text-sm font-semibold mb-1">Specialty</label>
            <select asp-for="SpecialtyId" asp-items="ViewBag.SpecialtyId"
                    class="w-full border rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none">
                <option value="">-- Choose Specialty --</option>
            </select>
            <span asp-validation-for="SpecialtyId" class="text-red-500 text-sm"></span>
        </div>

        <!-- Clinic Dropdown -->
        <div>
            <label asp-for="ClinicId" class="block text-sm font-semibold mb-1">Clinic</label>
            <select asp-for="ClinicId" asp-items="ViewBag.ClinicId"
                    class="w-full border rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none">
                <option value="">-- Choose Clinic --</option>
            </select>
            <span asp-validation-for="ClinicId" class="text-red-500 text-sm"></span>
        </div>

        <!-- Consultation Fee -->
        <div>
            <label asp-for="ConsultationFee" class="block text-sm font-semibold mb-1">Consultation Fee</label>
            <input asp-for="ConsultationFee" type="number" step="0.01"
                   class="w-full border rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none"
                   placeholder="Enter consultation fee" />
            <span asp-validation-for="ConsultationFee" class="text-red-500 text-sm"></span>
        </div>

        <!-- 🕒 Availability Section -->
        <div class="bg-blue-50 border border-blue-200 text-blue-700 p-4 rounded-lg">
            <p class="mb-2 font-semibold">📅 Availability Schedule</p>

            @if (Model.Availabilities != null && Model.Availabilities.Any())
            {
                <!-- 🟢 Display existing availability list -->
                <ul class="list-disc ml-5 space-y-1">
                    @foreach (var slot in Model.Availabilities.OrderBy(a => a.Day))
                    {
                        <li>
                            <strong>@slot.Day</strong>:
                            @slot.StartTime.ToString(@"hh\:mm") – @slot.EndTime.ToString(@"hh\:mm")
                        </li>
                    }
                </ul>


                <!-- ✏️ Manage button -->
                <div class="mt-3">
                    <a asp-area="Admin" asp-controller="Availabilities" asp-action="Edit" asp-route-id="@Model.DoctorId"
                       class="inline-block mt-2 text-sm text-indigo-600 hover:underline">
                        ✏️ Edit Availability
                    </a>
                </div>
            }
            else
            {
                <!-- 🔵 If no availability yet -->
                <p class="text-sm text-blue-600 italic">No availability set yet.</p>
                <div class="mt-2">
                    <a asp-area="Admin" asp-controller="Availabilities" asp-action="Edit" asp-route-id="@Model.DoctorId"
                       class="inline-block mt-1 text-sm text-indigo-600 hover:underline">
                        ➕ Add Availability
                    </a>
                </div>
            }
        </div>


        <!-- Profile Info -->
        <div>
            <label asp-for="ProfileInfo" class="block text-sm font-semibold mb-1">Profile Info</label>
            <textarea asp-for="ProfileInfo" rows="3"
                      class="w-full border rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none"
                      placeholder="Brief introduction about the doctor"></textarea>
            <span asp-validation-for="ProfileInfo" class="text-red-500 text-sm"></span>
        </div>

        <!-- Experience Years -->
        <div>
            <label asp-for="ExperienceYears" class="block text-sm font-semibold mb-1">Experience (Years)</label>
            <input asp-for="ExperienceYears" type="number" min="0"
                   class="w-full border rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none"
                   placeholder="Years of experience" />
            <span asp-validation-for="ExperienceYears" class="text-red-500 text-sm"></span>
        </div>

        <!-- Qualification -->
        <div>
            <label asp-for="Qualification" class="block text-sm font-semibold mb-1">Qualification</label>
            <input asp-for="Qualification"
                   class="w-full border rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none"
                   placeholder="e.g. MBBS, MD" />
            <span asp-validation-for="Qualification" class="text-red-500 text-sm"></span>
        </div>

        <!-- Phone Number -->
        <div>
            <label asp-for="PhoneNumber" class="block text-sm font-semibold mb-1">Phone Number</label>
            <input asp-for="PhoneNumber" type="tel"
                   class="w-full border rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none"
                   placeholder="e.g. +66 812345678" />
            <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
        </div>

        <!-- Buttons -->
        <div class="flex justify-between pt-6">
            <a asp-action="Index"
               class="px-5 py-2 rounded-lg border border-gray-300 text-gray-700 font-medium hover:bg-gray-100 transition">
                ⬅ Back
            </a>
            <button type="submit"
                    class="px-6 py-2 bg-gradient-to-r from-green-600 to-emerald-400 text-white font-semibold rounded-xl shadow hover:shadow-lg transition">
                💾 Save Changes
            </button>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
