@model MediCare.Models.Doctor

@{
    ViewData["Title"] = "Edit Doctor Profile";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto">
    <div class="mb-10 flex items-center justify-between">
        <div>
            <h2 class="text-3xl font-black text-slate-900 tracking-tight">Update <span class="text-blue-600">Profile</span></h2>
            <p class="text-slate-500 font-medium">Modifying details for Dr. @Model.AppUser?.FullName</p>
        </div>
        <a asp-action="Index" class="text-xs font-black text-slate-400 uppercase tracking-widest hover:text-red-500 transition-colors">Discard Changes</a>
    </div>

    <form asp-action="Edit" method="post" class="space-y-8">
        <input type="hidden" asp-for="DoctorId" />
        <div asp-validation-summary="ModelOnly" class="p-4 bg-red-50 text-red-600 rounded-2xl text-sm font-bold mb-6"></div>

        <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-xl shadow-slate-900/5 p-10">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div class="space-y-2">
                    <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Specialty</label>
                    <select asp-for="SpecialtyId" asp-items="ViewBag.SpecialtyId" class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-600 p-4 font-semibold text-slate-900"></select>
                </div>
                <div class="space-y-2">
                    <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Clinic</label>
                    <select asp-for="ClinicId" asp-items="ViewBag.ClinicId" class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-600 p-4 font-semibold text-slate-900"></select>
                </div>

                <div class="space-y-2">
                    <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Consultation Fee (THB)</label>
                    <input asp-for="ConsultationFee" type="number" step="0.01" class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-600 p-4 font-semibold text-slate-900" />
                </div>
                <div class="space-y-2">
                    <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Years of Experience</label>
                    <input asp-for="ExperienceYears" type="number" class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-600 p-4 font-semibold text-slate-900" />
                </div>

                <div class="space-y-2">
                    <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Qualifications</label>
                    <input asp-for="Qualification" class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-600 p-4 font-semibold text-slate-900" />
                </div>
                <div class="space-y-2">
                    <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Phone Number</label>
                    <input asp-for="PhoneNumber" class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-600 p-4 font-semibold text-slate-900" />
                </div>

                <div class="md:col-span-2 space-y-2">
                    <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Profile Info</label>
                    <textarea asp-for="ProfileInfo" rows="4" class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-blue-600 p-4 font-semibold text-slate-900 shadow-inner"></textarea>
                </div>
            </div>
        </div>

        <div class="p-6 bg-slate-50 rounded-[2rem] border border-slate-100 flex items-center justify-between">
            <div class="flex items-center gap-4">
                <div class="w-10 h-10 bg-white rounded-xl flex items-center justify-center text-blue-600 shadow-sm">
                    <i data-lucide="calendar" class="w-5 h-5"></i>
                </div>
                <p class="text-sm font-bold text-slate-600">Need to update weekly hours?</p>
            </div>
            <a asp-area="Admin" asp-controller="Availabilities" asp-action="Edit" asp-route-id="@Model.DoctorId" class="px-5 py-2 bg-white text-blue-600 text-xs font-black uppercase rounded-lg border border-slate-200 hover:bg-blue-50">Manage Schedule</a>
        </div>

        <div class="flex items-center gap-4 pt-6 pb-20">
            <button type="submit" class="flex-1 py-5 bg-blue-600 text-white font-black rounded-[2rem] shadow-xl shadow-blue-200 hover:bg-blue-700 hover:-translate-y-1 transition-all active:scale-[0.98]">
                Save Profile Updates
            </button>
            <a asp-action="Index" class="px-10 py-5 bg-white text-slate-400 font-black rounded-[2rem] border border-slate-200 hover:text-red-500 hover:bg-red-50 transition-all">
                Cancel
            </a>
        </div>
    </form>
</div>