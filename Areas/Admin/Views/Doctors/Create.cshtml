@{
    ViewData["Title"] = "Add Doctor";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto bg-white p-8 rounded-2xl shadow-md">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">➕ Add Doctor</h2>

    <form asp-action="Create" method="post" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-500"></div>

        <!-- 🔐 Doctor Login Info -->
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">📧 Email (Username)</label>
            <input type="email" name="email" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" required />
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">👤 Full Name</label>
            <input type="text" name="fullName" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" required />
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">🔑 Password</label>
            <input type="password" name="password" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" required />
        </div>

        <!-- 🩺 Doctor Profile Info -->
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">🏥 Specialty</label>
            <select name="specialtyId" asp-items="ViewBag.SpecialtyId"
                    class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
            </select>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">🏢 Clinic</label>
            <select name="clinicId" asp-items="ViewBag.ClinicId"
                    class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                <option value="">-- Select Clinic --</option>
            </select>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">💰 Consultation Fee ($)</label>
            <input type="number" step="0.01" name="consultationFee"
                   class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                   required />
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">🎓 Qualification</label>
            <input type="text" name="qualification" placeholder="e.g. MBBS, MD"
                   class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">📞 Phone Number</label>
            <input type="tel" name="phoneNumber" placeholder="e.g. +66 987654321"
                   class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">⌛ Experience (Years)</label>
            <input type="number" min="0" name="experienceYears"
                   class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">📝 Profile Info</label>
            <textarea name="profileInfo" rows="3" placeholder="Short bio or additional info..."
                      class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"></textarea>
        </div>

        <!-- 🕒 Availability Notice -->
        <div class="bg-blue-50 border border-blue-200 text-blue-700 p-4 rounded-lg">
            <p>
                🗓️ You can set the doctor’s availability after creating their profile from the
                <strong>“Manage Availability”</strong> page.
            </p>
        </div>

        <!-- 💾 Buttons -->
        <div class="flex items-center gap-4 pt-4">
            <button type="submit"
                    class="px-6 py-2.5 bg-indigo-600 text-white rounded-lg shadow hover:bg-indigo-700 focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                💾 Save Doctor
            </button>
            <a asp-action="Index"
               class="px-6 py-2.5 bg-gray-200 text-gray-800 rounded-lg shadow hover:bg-gray-300">
                ❌ Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
