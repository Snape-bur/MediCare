@model MediCare.Models.Doctor

@{
    ViewData["Title"] = "Delete Doctor";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto">
    <div class="mb-10 text-center">
        <div class="w-20 h-20 bg-red-50 text-red-600 rounded-3xl flex items-center justify-center mx-auto mb-4">
            <i data-lucide="alert-triangle" class="w-10 h-10"></i>
        </div>
        <h2 class="text-3xl font-black text-slate-900 tracking-tight">Remove <span class="text-red-600">Physician</span></h2>
        <p class="text-slate-500 font-medium">This action is permanent and will remove all associated records.</p>
    </div>

    <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-xl shadow-red-900/5 overflow-hidden">
        <div class="p-8 bg-red-50/50 border-b border-red-100">
            <h3 class="font-black text-red-900 uppercase tracking-widest text-xs">Confirm Deletion for:</h3>
            <p class="text-xl font-bold text-slate-900 mt-1">@(Model.AppUser?.FullName ?? "Unknown Specialist")</p>
        </div>

        <div class="p-10 space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div>
                    <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Specialty</p>
                    <p class="font-bold text-slate-900">@(Model.Specialty?.Name ?? "—")</p>
                </div>
                <div>
                    <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Clinic</p>
                    <p class="font-bold text-slate-900">@(Model.Clinic?.Name ?? "—")</p>
                </div>
            </div>

            <div class="pt-8 flex flex-col md:flex-row gap-4">
                <form asp-action="Delete" method="post" class="flex-1">
                    <input type="hidden" asp-for="DoctorId" />
                    <button type="submit" class="w-full py-4 bg-red-600 text-white font-black rounded-2xl shadow-lg shadow-red-200 hover:bg-red-700 transition-all">
                        Confirm Permanent Deletion
                    </button>
                </form>
                <a asp-action="Index" class="flex-1 py-4 bg-slate-100 text-slate-600 text-center font-black rounded-2xl hover:bg-slate-200 transition-all">
                    Cancel & Keep Record
                </a>
            </div>
        </div>
    </div>
</div>