@model MediCare.Models.Specialty

@{
    ViewData["Title"] = "Delete Specialty";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto px-6 py-10">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
        <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">🗑️ Delete Specialty</h1>
        <a asp-action="Index"
           class="inline-flex items-center gap-2 px-5 py-2.5 text-sm font-medium text-indigo-600 border border-indigo-300 rounded-xl hover:bg-indigo-50 transition">
            ← Back to List
        </a>
    </div>

    <!-- Confirmation Card -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
        <h3 class="text-xl font-semibold text-red-600 mb-4">Are you sure you want to delete this specialty?</h3>

        <div class="bg-red-50 border border-red-200 rounded-xl p-5 mb-6">
            <dl class="divide-y divide-gray-200">
                <div class="py-3">
                    <dt class="text-sm font-medium text-gray-700">Specialty Name</dt>
                    <dd class="text-gray-900 mt-1">@Model.Name</dd>
                </div>
                <div class="py-3">
                    <dt class="text-sm font-medium text-gray-700">Description</dt>
                    <dd class="text-gray-900 mt-1">@Model.Description</dd>
                </div>
            </dl>
        </div>

        <!-- Delete Form -->
        <form asp-action="Delete" method="post" class="flex items-center justify-end gap-4">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="SpecialtyId" />

            <a asp-action="Index"
               class="px-5 py-2.5 text-sm font-medium text-gray-600 bg-gray-100 rounded-xl hover:bg-gray-200 transition">
                Cancel
            </a>

            <button type="submit"
                    class="px-6 py-2.5 text-sm font-medium text-white bg-gradient-to-r from-red-600 to-pink-500 rounded-xl shadow-md hover:from-red-700 hover:to-pink-600 focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition">
                Confirm Delete
            </button>
        </form>
    </div>
</div>
