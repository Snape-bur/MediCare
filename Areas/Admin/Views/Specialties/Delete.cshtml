@model MediCare.Models.Specialty

@{
    ViewData["Title"] = "Delete Specialty";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto px-4 py-8">
    <div class="mb-10 text-center">
        <div class="w-20 h-20 bg-red-50 text-red-600 rounded-[2rem] flex items-center justify-center mx-auto mb-4 shadow-inner">
            <i data-lucide="trash-2" class="w-10 h-10 animate-bounce"></i>
        </div>
        <h2 class="text-3xl font-black text-slate-900 tracking-tight">Remove <span class="text-red-600">Specialty</span></h2>
        <p class="text-slate-500 font-medium mt-1">Caution: All physician associations with this category will be detached.</p>
    </div>

    <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-2xl shadow-red-900/5 overflow-hidden">
        <div class="h-3 bg-gradient-to-r from-red-600 via-pink-500 to-red-600"></div>

        <div class="p-10">
            <h3 class="font-black text-slate-900 uppercase tracking-widest text-xs mb-8 flex items-center gap-2">
                <i data-lucide="alert-triangle" class="w-4 h-4 text-red-500"></i>
                Verify Specialty Record
            </h3>

            <div class="bg-red-50/50 border-2 border-dashed border-red-100 rounded-[2rem] p-8 space-y-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="space-y-1">
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Category Name</p>
                        <div class="flex items-center gap-3">
                            <div class="p-2 bg-white rounded-lg shadow-sm text-red-600">
                                <i data-lucide="heart-pulse" class="w-5 h-5"></i>
                            </div>
                            <p class="text-xl font-black text-slate-900">@Model.Name</p>
                        </div>
                    </div>

                    <div class="space-y-1">
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Internal ID</p>
                        <p class="text-lg font-bold text-slate-600">#SPC-00@Model.SpecialtyId</p>
                    </div>

                    <div class="space-y-1 md:col-span-2">
                        <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Field Description</p>
                        <p class="text-slate-700 font-medium italic leading-relaxed">
                            "@Model.Description"
                        </p>
                    </div>
                </div>
            </div>

            <div class="mt-12 pt-8 border-t border-slate-100">
                <form asp-action="Delete" method="post" class="flex flex-col md:flex-row items-center gap-4">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="SpecialtyId" />

                    <button type="submit"
                            class="w-full md:flex-1 py-5 bg-red-600 text-white font-black rounded-[2rem] shadow-xl shadow-red-200 hover:bg-red-700 hover:-translate-y-1 transition-all active:scale-[0.98] flex items-center justify-center gap-2">
                        <i data-lucide="trash-2" class="w-5 h-5"></i>
                        Confirm Permanent Removal
                    </button>

                    <a asp-action="Index"
                       class="w-full md:w-auto px-10 py-5 bg-white text-slate-400 font-black rounded-[2rem] border border-slate-200 hover:text-slate-900 hover:bg-slate-50 transition-all text-center uppercase text-[10px] tracking-widest">
                        Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>