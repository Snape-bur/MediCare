@model MediCare.Models.Specialty

@{
    ViewData["Title"] = "Edit Specialty";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto px-6 py-10">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
        <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">✏️ Edit Specialty</h1>
        <a asp-action="Index"
           class="inline-flex items-center gap-2 px-5 py-2.5 text-sm font-medium text-indigo-600 border border-indigo-300 rounded-xl hover:bg-indigo-50 transition">
            ← Back to List
        </a>
    </div>

    <!-- Edit Form -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
        <form asp-action="Edit" method="post" class="space-y-6">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="SpecialtyId" />
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

            <!-- Name -->
            <div>
                <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">Specialty Name</label>
                <input asp-for="Name"
                       class="w-full rounded-xl border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 text-sm px-4 py-2.5 shadow-sm"
                       placeholder="Enter specialty name" />
                <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
            </div>

            <!-- Description -->
            <div>
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                <textarea asp-for="Description"
                          rows="4"
                          class="w-full rounded-xl border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 text-sm px-4 py-2.5 shadow-sm"
                          placeholder="Describe the specialty briefly..."></textarea>
                <span asp-validation-for="Description" class="text-red-600 text-sm"></span>
            </div>

            <!-- Buttons -->
            <div class="flex items-center justify-end gap-4 pt-4">
                <a asp-action="Index"
                   class="px-5 py-2.5 text-sm font-medium text-gray-600 bg-gray-100 rounded-xl hover:bg-gray-200 transition">
                    Cancel
                </a>
                <button type="submit"
                        class="px-6 py-2.5 text-sm font-medium text-white bg-gradient-to-r from-indigo-600 to-blue-500 rounded-xl shadow-md hover:from-indigo-700 hover:to-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
