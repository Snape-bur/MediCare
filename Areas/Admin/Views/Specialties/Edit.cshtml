@model MediCare.Models.Specialty

@{
    ViewData["Title"] = "Edit Specialty";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-5xl mx-auto px-4 py-8">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-10">
        <div>
            <h2 class="text-3xl font-black text-slate-900 tracking-tight">Update <span class="text-indigo-600">Category</span></h2>
            <p class="text-slate-500 font-medium mt-1">Modifying properties for the @Model.Name specialty.</p>
        </div>
        <a asp-action="Index"
           class="inline-flex items-center gap-2 text-xs font-black text-slate-400 uppercase tracking-widest hover:text-indigo-600 transition-colors">
            <i data-lucide="arrow-left" class="w-4 h-4"></i>
            Discard & Return
        </a>
    </div>

    <form asp-action="Edit" method="post" class="space-y-8">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="SpecialtyId" />
        <div asp-validation-summary="ModelOnly" class="p-4 bg-red-50 text-red-600 rounded-2xl text-[10px] font-black uppercase tracking-widest mb-6"></div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2 space-y-8">
                <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-xl shadow-slate-900/5 overflow-hidden">
                    <div class="p-8 border-b border-slate-100 bg-slate-50/50 flex items-center gap-3">
                        <div class="p-2 bg-indigo-600 rounded-lg text-white shadow-lg shadow-indigo-200">
                            <i data-lucide="edit-3" class="w-5 h-5"></i>
                        </div>
                        <h3 class="font-black text-slate-900 uppercase tracking-widest text-xs">Specialty Configuration</h3>
                    </div>

                    <div class="p-10 space-y-8">
                        <div class="space-y-2">
                            <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Specialty Label</label>
                            <div class="relative group">
                                <i data-lucide="tag" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300 group-focus-within:text-indigo-600 transition-colors"></i>
                                <input asp-for="Name"
                                       class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-indigo-600 p-4 pl-12 font-bold text-slate-900 transition-all shadow-inner" />
                            </div>
                            <span asp-validation-for="Name" class="text-[10px] text-red-500 font-bold ml-1"></span>
                        </div>

                        <div class="space-y-2">
                            <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Field Definition</label>
                            <textarea asp-for="Description" rows="5"
                                      class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-indigo-600 p-4 font-semibold text-slate-900 transition-all shadow-inner leading-relaxed"></textarea>
                            <span asp-validation-for="Description" class="text-[10px] text-red-500 font-bold ml-1"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="space-y-6">
                <div class="bg-slate-900 rounded-[2.5rem] p-8 text-white shadow-2xl relative overflow-hidden">
                    <i data-lucide="fingerprint" class="absolute -right-4 -bottom-4 w-24 h-24 text-white/5 rotate-12"></i>
                    <h3 class="font-black text-slate-500 uppercase tracking-widest text-[10px] mb-8 relative z-10">Database Meta</h3>

                    <div class="space-y-6 relative z-10">
                        <div>
                            <p class="text-[9px] font-black text-slate-500 uppercase tracking-widest">Entry ID</p>
                            <p class="font-bold text-lg font-mono tracking-tighter text-indigo-400">#SPC-00@Model.SpecialtyId</p>
                        </div>
                        <div class="pt-6 border-t border-white/10 flex items-center justify-between">
                            <div>
                                <p class="text-[9px] font-black text-slate-500 uppercase">Indexing</p>
                                <p class="text-xs font-bold text-green-400">ACTIVE</p>
                            </div>
                            <div class="h-2 w-2 bg-green-400 rounded-full animate-pulse shadow-[0_0_10px_rgba(74,222,128,0.5)]"></div>
                        </div>
                    </div>
                </div>

                <div class="p-8 bg-indigo-50 rounded-[2rem] border border-indigo-100 flex flex-col gap-3">
                    <p class="text-[10px] font-black text-indigo-600 uppercase tracking-widest">System Effect</p>
                    <p class="text-xs text-slate-600 font-medium leading-relaxed">Changes to the specialty name will update the categories on the patient-facing "Find a Doctor" page instantly.</p>
                </div>
            </div>
        </div>

        <div class="flex items-center gap-4 pt-6 pb-20">
            <button type="submit"
                    class="flex-1 py-5 bg-gradient-to-r from-indigo-600 to-blue-500 text-white font-black rounded-[2rem] shadow-xl shadow-indigo-100 hover:shadow-indigo-200 hover:-translate-y-1 transition-all active:scale-[0.98] flex items-center justify-center gap-2 group">
                <i data-lucide="check-circle" class="w-5 h-5 group-hover:scale-110 transition-transform"></i>
                Commit Changes
            </button>
            <a asp-action="Index"
               class="px-12 py-5 bg-white text-slate-400 font-black rounded-[2rem] border border-slate-200 hover:text-slate-900 transition-all">
                Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}