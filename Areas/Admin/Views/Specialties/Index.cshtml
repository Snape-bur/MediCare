@model IEnumerable<MediCare.Models.Specialty>

@{
    ViewData["Title"] = "Medical Specialties";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-7xl mx-auto px-6 py-10">
    <!-- Page Header -->
    <div class="flex items-center justify-between mb-8">
        <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">Medical Specialties</h1>
        <a asp-action="Create"
           class="inline-flex items-center gap-2 px-5 py-2.5 text-sm font-medium text-white
                  bg-gradient-to-r from-indigo-600 to-blue-500 rounded-xl shadow-lg
                  hover:from-indigo-700 hover:to-blue-600 focus:outline-none
                  focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition">
            + Add Specialty
        </a>
    </div>

    <!-- Search (optional) -->
    <div class="mb-6">
        <input type="text" placeholder="Search specialties..."
               class="w-full md:w-1/3 rounded-xl border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm px-4 py-2" />
    </div>

    <!-- Specialties Grid -->
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        @foreach (var item in Model)
        {
            <div class="bg-white rounded-2xl shadow-sm hover:shadow-lg transition-all duration-300 border border-gray-100 p-6 flex flex-col">
                <!-- Icon + Title -->
                <div class="flex items-center mb-4">
                    <div class="h-12 w-12 flex items-center justify-center rounded-xl bg-indigo-100 text-indigo-600">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-6 w-6">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M12 11c0-1.657-1.343-3-3-3S6 9.343 6 11s1.343 3 3 3 3-1.343 3-3zM6 11h.01M9 11h6m0 0c0-1.657-1.343-3-3-3s-3 1.343-3 3 1.343 3 3 3 3-1.343 3-3z" />
                        </svg>
                    </div>
                    <h2 class="ml-3 text-lg font-semibold text-gray-900">@item.Name</h2>
                </div>

                <!-- Description -->
                <p class="text-sm text-gray-600 flex-grow">@item.Description</p>

             
                <!-- Actions -->
                <div class="mt-4 flex justify-end gap-3">
                    <a asp-action="Edit" asp-route-id="@item.SpecialtyId"
                       class="text-sm font-medium text-indigo-600 hover:text-indigo-800">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.SpecialtyId"
                       class="text-sm font-medium text-green-600 hover:text-green-800">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.SpecialtyId"
                       class="text-sm font-medium text-red-600 hover:text-red-800">Delete</a>
                </div>
            </div>
        }
    </div>
</div>
