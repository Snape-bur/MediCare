@model MediCare.Models.Specialty

@{
    ViewData["Title"] = "Add New Specialty";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto px-4 py-8">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-10">
        <div>
            <h2 class="text-3xl font-black text-slate-900 tracking-tight">Define <span class="text-indigo-600">Specialty</span></h2>
            <p class="text-slate-500 font-medium mt-1">Add a new medical category to the healthcare directory.</p>
        </div>
        <a asp-action="Index"
           class="inline-flex items-center gap-2 text-xs font-black text-slate-400 uppercase tracking-widest hover:text-indigo-600 transition-colors">
            <i data-lucide="arrow-left" class="w-4 h-4"></i>
            Back to Specialties
        </a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="bg-green-50 border border-green-200 text-green-700 px-6 py-4 rounded-2xl mb-8 flex items-center gap-3 animate-in fade-in slide-in-from-top-4">
            <i data-lucide="check-circle" class="w-5 h-5"></i>
            <span class="font-bold text-sm">@TempData["Message"]</span>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="bg-red-50 border border-red-200 text-red-700 px-6 py-4 rounded-2xl mb-8 flex items-center gap-3 animate-in fade-in slide-in-from-top-4">
            <i data-lucide="alert-circle" class="w-5 h-5"></i>
            <span class="font-bold text-sm">@TempData["Error"]</span>
        </div>
    }

    <form asp-action="Create" method="post" class="space-y-8">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="p-4 bg-red-50 text-red-600 rounded-2xl text-[10px] font-black uppercase tracking-widest"></div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2 space-y-8">
                <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-xl shadow-slate-900/5 overflow-hidden">
                    <div class="p-8 border-b border-slate-100 bg-slate-50/50 flex items-center gap-3">
                        <div class="p-2 bg-indigo-600 rounded-lg text-white shadow-lg shadow-indigo-200">
                            <i data-lucide="sparkles" class="w-5 h-5"></i>
                        </div>
                        <h3 class="font-black text-slate-900 uppercase tracking-widest text-xs">Category Details</h3>
                    </div>

                    <div class="p-10 space-y-8">
                        <div class="space-y-2">
                            <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Official Name</label>
                            <div class="relative group">
                                <i data-lucide="heart-pulse" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-300 group-focus-within:text-indigo-600 transition-colors"></i>
                                <input asp-for="Name"
                                       class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-indigo-600 p-4 pl-12 font-bold text-slate-900 placeholder-slate-300 transition-all shadow-inner"
                                       placeholder="e.g. Neurology, Dermatology" required />
                            </div>
                            <span asp-validation-for="Name" class="text-[10px] text-red-500 font-bold ml-1"></span>
                        </div>

                        <div class="space-y-2">
                            <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Field Description</label>
                            <textarea asp-for="Description" rows="5"
                                      class="w-full bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-indigo-600 p-4 font-semibold text-slate-900 placeholder-slate-300 transition-all shadow-inner leading-relaxed"
                                      placeholder="Provide a brief overview of this medical specialty..." required></textarea>
                            <span asp-validation-for="Description" class="text-[10px] text-red-500 font-bold ml-1"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="space-y-6">
                <div class="bg-slate-900 rounded-[2.5rem] p-8 text-white shadow-2xl relative overflow-hidden">
                    <i data-lucide="info" class="absolute -right-4 -bottom-4 w-24 h-24 text-white/5 rotate-12"></i>
                    <h3 class="font-black text-slate-500 uppercase tracking-widest text-[10px] mb-6 relative z-10">Admin Note</h3>
                    <p class="text-sm font-medium text-slate-300 leading-relaxed relative z-10">
                        Specialties act as the primary filter for patients. Ensure names are clear and descriptions include common symptoms or conditions treated.
                    </p>
                </div>

                <div class="p-8 bg-indigo-50 rounded-[2rem] border border-indigo-100 flex flex-col items-center text-center">
                    <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center text-indigo-600 shadow-sm mb-4">
                        <i data-lucide="users" class="w-6 h-6"></i>
                    </div>
                    <p class="text-xs font-black text-indigo-600 uppercase tracking-widest mb-1">Impact</p>
                    <p class="text-[11px] text-slate-500 font-bold leading-tight">Doctors can be assigned to this category immediately after saving.</p>
                </div>
            </div>
        </div>

        <div class="flex items-center gap-4 pt-6 pb-20">
            <button type="submit"
                    class="flex-1 py-5 bg-gradient-to-r from-indigo-600 to-blue-500 text-white font-black rounded-[2rem] shadow-xl shadow-indigo-100 hover:shadow-indigo-200 hover:-translate-y-1 transition-all active:scale-[0.98] flex items-center justify-center gap-2">
                <i data-lucide="save" class="w-5 h-5"></i>
                Establish Specialty
            </button>
            <a asp-action="Index"
               class="px-12 py-5 bg-white text-slate-400 font-black rounded-[2rem] border border-slate-200 hover:text-red-500 hover:bg-red-50 transition-all">
                Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}