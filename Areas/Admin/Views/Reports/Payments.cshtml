@model IEnumerable<MediCare.Models.Payment>

@{
    ViewData["Title"] = "Financial Registry";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto px-6 py-12">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-12">
        <div>
            <h2 class="text-4xl font-black text-slate-900 tracking-tight">Financial <span class="text-blue-600">Ledger</span></h2>
            <p class="text-slate-500 font-medium mt-1">Real-time monitoring of all processed consultation transactions.</p>
        </div>

        <div class="flex items-center gap-3">
            <a asp-area="Admin" asp-controller="Reports" asp-action="Index"
               class="px-5 py-3 rounded-xl bg-white border border-slate-200 text-slate-500 font-black text-[10px] uppercase tracking-widest hover:bg-slate-50 transition-all flex items-center gap-2">
                <i data-lucide="layout-dashboard" class="w-4 h-4"></i> Reports Center
            </a>

            <a asp-action="ExportPayments"
               class="px-6 py-3 bg-emerald-600 text-white font-black text-[10px] uppercase tracking-widest rounded-xl shadow-lg shadow-emerald-100 hover:bg-emerald-700 hover:-translate-y-0.5 transition-all flex items-center gap-2">
                <i data-lucide="file-spreadsheet" class="w-4 h-4"></i> Export to Excel
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-10">
        <div class="bg-white p-6 rounded-3xl border border-slate-100 shadow-sm">
            <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Gross Revenue</p>
            <p class="text-2xl font-black text-slate-900">฿@Model.Sum(p => p.Amount).ToString("N0")</p>
        </div>
        <div class="bg-white p-6 rounded-3xl border border-slate-100 shadow-sm">
            <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Transaction Count</p>
            <p class="text-2xl font-black text-slate-900">@Model.Count()</p>
        </div>
        <div class="bg-white p-6 rounded-3xl border border-slate-100 shadow-sm">
            <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Avg. Fee</p>
            <p class="text-2xl font-black text-blue-600">฿@(Model.Any() ? (Model.Average(p => p.Amount)).ToString("N0") : "0")</p>
        </div>
        <div class="bg-slate-900 p-6 rounded-3xl shadow-xl shadow-slate-200 text-white">
            <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest mb-1">Settlement Status</p>
            <p class="text-2xl font-black">All Verified</p>
        </div>
    </div>

    <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-xl shadow-slate-900/5 overflow-hidden">
        <div class="p-8 border-b border-slate-100 bg-slate-50/50 flex items-center justify-between">
            <h3 class="font-black text-slate-900 uppercase tracking-widest text-xs">Transaction Records</h3>
            <div class="flex items-center gap-2">
                <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
                <span class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Live Updates</span>
            </div>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] bg-white">
                        <th class="px-8 py-5"># ID</th>
                        <th class="px-6 py-5">Parties Involved</th>
                        <th class="px-6 py-5">Method & Date</th>
                        <th class="px-6 py-5 text-right">Amount Paid</th>
                        <th class="px-8 py-5 text-center">Status</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    @if (Model != null && Model.Any())
                    {
                        int count = 1;
                        foreach (var p in Model)
                        {
                            <tr class="group hover:bg-slate-50/80 transition-all">
                                <td class="px-8 py-6">
                                    <span class="text-xs font-black text-slate-300">#@count.ToString("D3")</span>
                                </td>
                                <td class="px-6 py-6">
                                    <div class="space-y-1">
                                        <p class="text-sm font-bold text-slate-900">@p.Appointment.Patient.AppUser.FullName</p>
                                        <p class="text-[10px] font-black text-blue-600 uppercase tracking-tighter">Payee: Dr. @p.Appointment.Doctor.AppUser.FullName</p>
                                    </div>
                                </td>
                                <td class="px-6 py-6">
                                    <div class="flex items-center gap-3">
                                        <div class="p-2 bg-slate-100 rounded-lg text-slate-500 group-hover:bg-white transition-colors">
                                            @if (p.Method.Contains("Card"))
                                            {
                                                <i data-lucide="credit-card" class="w-4 h-4"></i>
                                            }
                                            else
                                            {

                                                <i data-lucide="banknote" class="w-4 h-4"></i>
                                            }
                                        </div>
                                        <div>
                                            <p class="text-sm font-semibold text-slate-700">@p.Method</p>
                                            <p class="text-[10px] font-bold text-slate-400 uppercase">@p.PaymentDate.ToString("dd MMM yyyy")</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-6 text-right">
                                    <p class="text-lg font-black text-slate-900 tracking-tighter">฿@p.Amount.ToString("N2")</p>
                                </td>
                                <td class="px-8 py-6">
                                    <div class="flex justify-center">
                                        <span class="inline-flex items-center gap-1.5 px-3 py-1 bg-emerald-50 text-emerald-600 border border-emerald-100 text-[10px] font-black rounded-full uppercase tracking-widest shadow-sm">
                                            <i data-lucide="shield-check" class="w-3 h-3"></i>
                                            @p.Status
                                        </span>
                                    </div>
                                </td>
                            </tr>
                            count++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>