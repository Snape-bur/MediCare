@model IEnumerable<MediCare.Models.Payment>

@{
    ViewData["Title"] = "Payments Report";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto mt-10 px-6">
    <div class="flex items-center justify-between mb-6">
        <h2 class="text-3xl font-bold text-gray-800">💳 Payments Report</h2>
        <a asp-area="Admin" asp-controller="Reports" asp-action="Index"
           class="px-5 py-2.5 rounded-xl bg-gradient-to-r from-blue-700 to-cyan-500 text-white font-semibold shadow hover:shadow-lg hover:scale-[1.02] transition-all">
            ⬅ Back to Reports Center
        </a>
   
    <a asp-action="ExportPayments"
       class="px-5 py-2.5 bg-gradient-to-r from-green-600 to-emerald-500 text-white font-medium rounded-xl shadow hover:scale-105 transition">
        ⬇ Export Payments to Excel
    </a>
</div>

    </div>

    <div class="bg-white shadow-lg rounded-2xl p-8 text-gray-700">
        <p class="mb-4 text-gray-600">Monitor and export all <strong>Paid</strong> transactions.</p>

        @if (!Model.Any())
        {
            <div class="border border-gray-200 rounded-lg p-4 text-center text-gray-500">
                No payment records found.
            </div>
        }
        else
        {
            <div class="overflow-x-auto">
                <table class="min-w-full table-auto border-collapse border border-gray-200">
                    <thead class="bg-blue-600 text-white">
                        <tr>
                            <th class="px-4 py-2 text-left">#</th>
                            <th class="px-4 py-2 text-left">Patient</th>
                            <th class="px-4 py-2 text-left">Doctor</th>
                            <th class="px-4 py-2 text-left">Amount (฿)</th>
                            <th class="px-4 py-2 text-left">Method</th>
                            <th class="px-4 py-2 text-left">Date</th>
                            <th class="px-4 py-2 text-left">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                        }
                        @foreach (var p in Model)
                        {
                            <tr class="border-b border-gray-200 hover:bg-gray-50 transition">
                                <td class="px-4 py-2">@i</td>
                                <td class="px-4 py-2">@p.Appointment.Patient.AppUser.FullName</td>
                                <td class="px-4 py-2">@p.Appointment.Doctor.AppUser.FullName</td>
                                <td class="px-4 py-2">@p.Amount.ToString("N2")</td>
                                <td class="px-4 py-2">@p.Method</td>
                                <td class="px-4 py-2">@p.PaymentDate.ToString("dd MMM yyyy")</td>
                                <td class="px-4 py-2">
                                    <span class="px-3 py-1 rounded-full text-sm font-semibold bg-green-100 text-green-700">@p.Status</span>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
