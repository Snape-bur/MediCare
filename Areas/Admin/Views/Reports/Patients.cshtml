@model IEnumerable<MediCare.Models.Patient>

@{
    ViewData["Title"] = "Patient Analytics";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var total = ViewBag.TotalPatients ?? 0;
}

<div class="max-w-7xl mx-auto px-6 py-12">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-12">
        <div>
            <h2 class="text-4xl font-black text-slate-900 tracking-tight">Patient <span class="text-blue-600">Demographics</span></h2>
            <p class="text-slate-500 font-medium mt-1">Growth metrics and user population insights.</p>
        </div>

        <div class="flex items-center gap-3">
            <a asp-area="Admin" asp-controller="Reports" asp-action="Index"
               class="px-5 py-3 rounded-xl bg-white border border-slate-200 text-slate-500 font-black text-[10px] uppercase tracking-widest hover:bg-slate-50 transition-all flex items-center gap-2">
                <i data-lucide="arrow-left" class="w-4 h-4"></i> Reports Hub
            </a>
            <a asp-action="ExportPatients"
               class="px-5 py-3 bg-emerald-600 text-white font-black text-[10px] uppercase tracking-widest rounded-xl shadow-lg shadow-emerald-100 hover:bg-emerald-700 hover:-translate-y-0.5 transition-all flex items-center gap-2">
                <i data-lucide="file-spreadsheet" class="w-4 h-4"></i> Export Registry
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 mb-12">
        <div class="bg-white rounded-[2.5rem] p-8 border border-slate-100 shadow-xl shadow-slate-900/5 relative overflow-hidden">
            <p class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] mb-1">Total Population</p>
            <h3 class="text-4xl font-black text-slate-900">@total</h3>
            <div class="mt-4 flex items-center gap-2 text-blue-600 font-bold text-xs uppercase tracking-tighter">
                <span class="p-1 bg-blue-50 rounded-md"><i data-lucide="users" class="w-3 h-3"></i></span>
                Active Records
            </div>
            <i data-lucide="users" class="absolute -right-4 -bottom-4 w-24 h-24 text-slate-50"></i>
        </div>

        <div class="bg-white rounded-[2.5rem] p-8 border border-slate-100 shadow-xl shadow-slate-900/5">
            <p class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] mb-1">Male Segment</p>
            <h3 class="text-4xl font-black text-slate-900">@Model.Count(p => p.Gender == "Male")</h3>
            <div class="mt-4 flex items-center gap-2 text-indigo-600 font-bold text-xs uppercase tracking-tighter">
                <span class="p-1 bg-indigo-50 rounded-md"><i data-lucide="user" class="w-3 h-3"></i></span>
                @Math.Round((double)Model.Count(p => p.Gender == "Male") / (total > 0 ? total : 1) * 100)% Share
            </div>
        </div>

        <div class="bg-slate-900 rounded-[2.5rem] p-8 shadow-2xl relative overflow-hidden text-white">
            <p class="text-[10px] font-black text-slate-500 uppercase tracking-[0.2em] mb-1">Female Segment</p>
            <h3 class="text-4xl font-black text-white">@Model.Count(p => p.Gender == "Female")</h3>
            <div class="mt-4 flex items-center gap-2 text-pink-400 font-bold text-xs uppercase tracking-tighter">
                <span class="p-1 bg-pink-500/10 rounded-md"><i data-lucide="user-round" class="w-3 h-3"></i></span>
                @Math.Round((double)Model.Count(p => p.Gender == "Female") / (total > 0 ? total : 1) * 100)% Share
            </div>
            <i data-lucide="heart" class="absolute -right-4 -bottom-4 w-24 h-24 text-white/5"></i>
        </div>
    </div>

    <div class="bg-white rounded-[3rem] border border-slate-200 shadow-xl shadow-slate-900/5 p-10 mb-12">
        <div class="flex items-center justify-between mb-10">
            <h3 class="text-xl font-black text-slate-900 tracking-tight">Growth Velocity</h3>
            <span class="px-3 py-1 bg-blue-50 text-blue-600 text-[10px] font-black rounded-full uppercase">Monthly New Registrations</span>
        </div>
        <div class="h-[300px]">
            <canvas id="patientChart"></canvas>
        </div>
    </div>

    <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-xl shadow-slate-900/5 overflow-hidden">
        <div class="p-8 border-b border-slate-100 bg-slate-50/50 flex items-center justify-between">
            <h3 class="font-black text-slate-900 uppercase tracking-widest text-xs">Patient Directory</h3>
            <div class="flex items-center gap-2 text-slate-400">
                <i data-lucide="database" class="w-4 h-4"></i>
                <span class="text-[10px] font-black uppercase tracking-widest">Master List</span>
            </div>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] bg-white">
                        <th class="px-8 py-5">Profile</th>
                        <th class="px-6 py-5">Communication</th>
                        <th class="px-6 py-5 text-center">Gender</th>
                        <th class="px-8 py-5 text-right">Status</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var p in Model)
                        {
                            <tr class="group hover:bg-slate-50/80 transition-all">
                                <td class="px-8 py-6">
                                    <div class="flex items-center gap-4">
                                        <div class="w-10 h-10 rounded-xl bg-slate-100 flex items-center justify-center text-slate-400 font-bold group-hover:bg-blue-600 group-hover:text-white transition-all">
                                            @p.AppUser.FullName.Substring(0, 1)
                                        </div>
                                        <p class="font-bold text-slate-900 group-hover:text-blue-600 transition-colors">@p.AppUser.FullName</p>
                                    </div>
                                </td>
                                <td class="px-6 py-6">
                                    <p class="text-sm font-semibold text-slate-700">@p.AppUser.Email</p>
                                    <p class="text-[10px] font-bold text-slate-400 uppercase tracking-tighter">@p.AppUser.PhoneNumber</p>
                                </td>
                                <td class="px-6 py-6 text-center">
                                    <span class="px-3 py-1 rounded-lg text-[10px] font-black uppercase tracking-widest border
                                                @(p.Gender == "Male" ? "bg-blue-50 text-blue-600 border-blue-100" : "bg-pink-50 text-pink-600 border-pink-100")">
                                        @p.Gender
                                    </span>
                                </td>
                                <td class="px-8 py-6 text-right">
                                    <span class="inline-flex items-center gap-1.5 px-3 py-1 bg-emerald-50 text-emerald-600 border border-emerald-100 text-[10px] font-black rounded-full uppercase tracking-tighter">
                                        <span class="w-1 h-1 bg-emerald-500 rounded-full"></span>
                                        Verified
                                    </span>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        Chart.defaults.font.family = "'Plus Jakarta Sans', sans-serif";
        Chart.defaults.color = '#94a3b8';

        @{
            var monthlyData = ViewBag.MonthlyData as IEnumerable<dynamic>;
        }
        const monthLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(monthlyData?.Select(m => (string)m.Month).ToList() ?? new List<string>()));
        const monthCounts = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(monthlyData?.Select(m => (int)m.Count).ToList() ?? new List<int>()));

        new Chart(document.getElementById('patientChart'), {
            type: 'line',
            data: {
                labels: monthLabels,
                datasets: [{
                    label: 'New Patients',
                    data: monthCounts,
                    fill: true,
                    borderColor: '#2563eb',
                    backgroundColor: (ctx) => {
                        const gradient = ctx.chart.ctx.createLinearGradient(0, 0, 0, 300);
                        gradient.addColorStop(0, 'rgba(37, 99, 235, 0.1)');
                        gradient.addColorStop(1, 'rgba(37, 99, 235, 0)');
                        return gradient;
                    },
                    tension: 0.4,
                    pointRadius: 5,
                    pointBackgroundColor: '#fff',
                    pointBorderColor: '#2563eb',
                    pointBorderWidth: 2,
                    borderWidth: 3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    x: { grid: { display: false }, border: { display: false } },
                    y: { grid: { color: '#f1f5f9' }, border: { display: false }, beginAtZero: true, ticks: { stepSize: 1 } }
                }
            }
        });
    </script>
}