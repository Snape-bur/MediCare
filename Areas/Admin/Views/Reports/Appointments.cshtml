@model IEnumerable<MediCare.Models.Appointment>

@{
    ViewData["Title"] = "Appointments Report";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto px-6 py-12">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-12">
        <div>
            <h2 class="text-4xl font-black text-slate-900 tracking-tight">Visit <span class="text-blue-600">Registry</span></h2>
            <p class="text-slate-500 font-medium mt-1">Comprehensive audit trail of all clinical consultations.</p>
        </div>

        <div class="flex items-center gap-3">
            <a asp-area="Admin" asp-controller="Reports" asp-action="Index"
               class="px-5 py-3 rounded-xl bg-white border border-slate-200 text-slate-500 font-black text-[10px] uppercase tracking-widest hover:bg-slate-50 transition-all flex items-center gap-2">
                <i data-lucide="layout-dashboard" class="w-4 h-4"></i> Reports Center
            </a>

            <div class="h-10 w-[1px] bg-slate-200 mx-2 hidden md:block"></div>

            <div class="flex items-center gap-2">
                <a asp-action="ExportAppointments"
                   class="px-5 py-3 bg-white border border-slate-200 text-emerald-600 font-black text-[10px] uppercase tracking-widest rounded-xl shadow-sm hover:bg-emerald-50 hover:border-emerald-200 transition-all flex items-center gap-2">
                    <i data-lucide="file-spreadsheet" class="w-4 h-4"></i> Excel
                </a>
                <a asp-action="ExportAppointmentsPdf"
                   class="px-5 py-3 bg-white border border-slate-200 text-rose-600 font-black text-[10px] uppercase tracking-widest rounded-xl shadow-sm hover:bg-rose-50 hover:border-rose-200 transition-all flex items-center gap-2">
                    <i data-lucide="file-text" class="w-4 h-4"></i> PDF
                </a>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-xl shadow-slate-900/5 overflow-hidden animate-in fade-in slide-in-from-bottom-4 duration-700">
        <div class="p-8 border-b border-slate-100 bg-slate-50/50 flex items-center justify-between">
            <h3 class="font-black text-slate-900 uppercase tracking-widest text-xs">Transaction Records</h3>
            <span class="px-3 py-1 bg-blue-100 text-blue-700 text-[10px] font-black rounded-full uppercase tracking-tighter">@Model?.Count() Total Entries</span>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] bg-white">
                        <th class="px-8 py-5">Schedule Details</th>
                        <th class="px-6 py-5">Medical Staff</th>
                        <th class="px-6 py-5">Patient Holder</th>
                        <th class="px-6 py-5">Consultation Status</th>
                        <th class="px-8 py-5 text-right">Financials</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var a in Model)
                        {
                            <tr class="group hover:bg-slate-50/80 transition-all">
                                <td class="px-8 py-6">
                                    <div class="flex items-center gap-4">
                                        <div class="w-10 h-10 rounded-xl bg-slate-100 flex flex-col items-center justify-center group-hover:bg-white transition-colors border border-transparent group-hover:border-slate-200">
                                            <span class="text-[10px] font-black text-blue-600 uppercase">@a.DateTime.ToString("MMM")</span>
                                            <span class="text-sm font-black text-slate-900 leading-none">@a.DateTime.ToString("dd")</span>
                                        </div>
                                        <div>
                                            <p class="font-bold text-slate-900">@a.DateTime.ToString("hh:mm tt")</p>
                                            @if (a.RescheduledAt != null)
                                            {
                                                <div class="flex items-center gap-1 text-[10px] text-amber-600 font-black uppercase mt-0.5 tracking-tighter" title="Originally scheduled: @a.RescheduledAt?.ToString("g")">
                                                    <i data-lucide="refresh-ccw" class="w-3 h-3"></i> Rescheduled
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </td>

                                <td class="px-6 py-6 text-sm font-semibold text-slate-700">
                                    <div class="flex items-center gap-2">
                                        <div class="w-2 h-2 rounded-full bg-blue-400"></div>
                                        Dr. @a.Doctor?.AppUser?.FullName
                                    </div>
                                </td>

                                <td class="px-6 py-6 text-sm font-medium text-slate-500">
                                    @a.Patient?.AppUser?.FullName
                                </td>

                                <td class="px-6 py-6">
                                    @{
                                        var statusClass = a.Status == "Completed" ? "bg-emerald-50 text-emerald-600 border-emerald-100" :
                                        a.Status == "Cancelled" ? "bg-rose-50 text-rose-600 border-rose-100" :
                                        "bg-amber-50 text-amber-600 border-amber-100";
                                    }
                                    <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-lg border @statusClass text-[10px] font-black uppercase tracking-widest shadow-sm">
                                        <span class="w-1.5 h-1.5 rounded-full bg-current opacity-70"></span>
                                        @a.Status
                                    </span>
                                </td>

                                <td class="px-8 py-6 text-right">
                                    @if (a.Payment != null)
                                    {
                                        <p class="text-sm font-black text-slate-900 tracking-tighter">@a.Payment.Amount.ToString("C")</p>
                                        <p class="text-[9px] font-bold text-slate-400 uppercase tracking-widest">Paid via Card</p>
                                    }
                                    else
                                    {
                                        <span class="text-[10px] font-bold text-slate-300 uppercase tracking-widest italic">Pending</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="px-8 py-20 text-center">
                                <div class="w-16 h-16 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-4">
                                    <i data-lucide="calendar-x-2" class="w-8 h-8 text-slate-300"></i>
                                </div>
                                <p class="text-slate-500 font-bold uppercase text-xs tracking-widest">No matching records found in the registry.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>