@model IEnumerable<MediCare.Models.Doctor>
@{
    ViewData["Title"] = "Search Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-secondary/30 py-16 px-6">
    <div class="max-w-7xl mx-auto">

        <div class="flex flex-col md:flex-row md:items-end justify-between gap-6 mb-12">
            <div>
                <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-brand-900/5 border border-brand-900/10 mb-4">
                    <span class="w-2 h-2 rounded-full bg-accent animate-pulse"></span>
                    <span class="text-[10px] font-bold uppercase tracking-widest text-brand-900">Found @Model.Count() Specialists</span>
                </div>
                <h1 class="text-4xl font-black text-brand-900 tracking-tight">Available Doctors</h1>
                <p class="mt-2 text-neutral/60 font-medium">
                    Specializing in <span class="text-brand-900 font-bold border-b-2 border-accent/40">@ViewBag.SpecialtyName</span>
                </p>
            </div>

            <div class="flex items-center gap-3">
                <span class="text-xs font-bold text-neutral/40 uppercase tracking-tighter">Sort by:</span>
                <select class="bg-white border-secondary rounded-xl text-sm font-semibold text-brand-900 px-4 py-2 outline-none focus:ring-2 focus:ring-accent/20">
                    <option>Recommended</option>
                    <option>Fee: Low to High</option>
                </select>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="bg-white rounded-[2rem] border-2 border-dashed border-secondary p-16 text-center">
                <div class="w-20 h-20 bg-secondary/50 rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-10 h-10 text-neutral/30" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
                </div>
                <h3 class="text-xl font-bold text-brand-900">No Specialists Found</h3>
                <p class="text-neutral/50 mt-2 max-w-sm mx-auto">We couldn't find any doctors for this specialty right now. Try searching for a different category.</p>
                <a href="/" class="mt-8 inline-block text-sm font-bold text-accent hover:text-brand-900 transition-colors uppercase tracking-widest">Return to Search</a>
            </div>
        }
        else
        {
            <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
                @foreach (var doctor in Model)
                {
                    <div class="group relative bg-white rounded-[2rem] border border-secondary shadow-[0_10px_40px_-15px_rgba(0,0,0,0.05)] hover:shadow-[0_20px_60px_-10px_rgba(0,0,0,0.1)] transition-all duration-500 overflow-hidden flex flex-col">
                        <div class="h-2 w-full bg-secondary group-hover:bg-accent transition-colors duration-500"></div>

                        <div class="p-8 flex-1 flex flex-col">
                            <div class="flex items-start justify-between mb-6">
                                <div class="w-16 h-16 rounded-2xl bg-secondary/50 flex items-center justify-center text-brand-900 font-black text-xl border-2 border-white shadow-inner group-hover:scale-110 transition-transform">
                                    @{
                                        var initials = string.Concat(doctor.AppUser.FullName.Where(c => char.IsUpper(c)));
                                        @initials
                                    }
                                </div>
                                <div class="px-3 py-1 bg-green-50 rounded-lg">
                                    <span class="text-[10px] font-black text-green-600 uppercase tracking-wider">Available Today</span>
                                </div>
                            </div>

                            <div class="mb-6">
                                <h5 class="text-xl font-extrabold text-brand-900 group-hover:text-accent transition-colors">@doctor.AppUser.FullName</h5>
                                <div class="flex items-center gap-2 mt-1">
                                    <svg class="w-4 h-4 text-accent" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" /></svg>
                                    <span class="text-sm font-bold text-neutral">4.9 <span class="text-neutral/40 font-medium">(120+ Reviews)</span></span>
                                </div>
                            </div>

                            <div class="space-y-3 mb-8">
                                <div class="flex items-center gap-3 text-sm">
                                    <div class="w-8 h-8 rounded-lg bg-secondary/30 flex items-center justify-center">
                                        <svg class="w-4 h-4 text-brand-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-7h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                        </svg>
                                    </div>
                                    <span class="text-neutral font-medium">@doctor.Clinic?.Name</span>
                                </div>

                                <div class="flex items-center gap-3 text-sm">
                                    <div class="w-8 h-8 rounded-lg bg-secondary/30 flex items-center justify-center">
                                        <svg class="w-4 h-4 text-brand-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    </div>
                                    <span class="text-brand-900 font-bold">
                                        ฿@doctor.ConsultationFee.ToString("N0")
                                        <span class="text-neutral/40 font-normal ml-1">per visit</span>
                                    </span>
                                </div>
                            </div>

                            <div class="mt-auto">
                                <a asp-area="Identity"
                                   asp-page="/Account/Register"
                                   asp-route-returnUrl="@Context.Request.Path"
                                   class="block w-full text-center py-4 bg-brand-900 text-white rounded-2xl font-black text-sm transition-all hover:bg-neutral hover:shadow-xl active:scale-95">
                                    Register to Book
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="mt-20 relative overflow-hidden bg-brand-900 rounded-[3rem] p-10 md:p-16 text-center">
                <div class="absolute top-0 right-0 w-64 h-64 bg-accent/10 rounded-full -mr-32 -mt-32 blur-3xl"></div>

                <div class="relative z-10">
                    <h2 class="text-3xl md:text-4xl font-black text-white leading-tight">Can't find your specialist?</h2>
                    <p class="mt-4 text-secondary/60 max-w-2xl mx-auto font-medium">
                        Join MediCare today to get personalized recommendations and unlock 24/7 instant chat with certified medical professionals.
                    </p>
                    <div class="mt-10 flex flex-col sm:flex-row items-center justify-center gap-4">
                        <a asp-area="Identity" asp-page="/Account/Register"
                           class="px-8 py-4 bg-accent text-neutral font-black rounded-2xl shadow-2xl shadow-accent/20 hover:scale-105 transition-transform">
                            Create Free Patient Account
                        </a>
                        <a href="/" class="px-8 py-4 bg-white/5 text-white border border-white/10 rounded-2xl font-bold hover:bg-white/10 transition-all">
                            View All Categories
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>