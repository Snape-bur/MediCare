@model IEnumerable<MediCare.Models.Doctor>
@{
    ViewData["Title"] = "Search Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto px-6 py-12">

    <h2 class="text-3xl font-extrabold text-blue-700 mb-6">
        Search Results
    </h2>

    <p class="text-lg text-gray-600 mb-10">
        Showing available doctors for:
        <span class="font-bold text-blue-700">@ViewBag.SpecialtyName</span>
    </p>

    @if (!Model.Any())
    {
        <div class="text-center bg-yellow-50 border border-yellow-200 text-yellow-700 py-5 rounded-xl shadow-sm font-medium">
            No doctors found for this specialty.
        </div>
    }
    else
    {
        <!-- Doctor Cards -->
        <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
            @foreach (var doctor in Model)
            {
                <div class="bg-white rounded-2xl border border-blue-100 shadow-md hover:shadow-xl transition p-6">
                    <div class="mb-4">
                        <h5 class="font-semibold text-gray-900 text-lg">@doctor.AppUser.FullName</h5>
                        <p class="text-sm text-blue-600">@doctor.Specialty?.Name</p>
                    </div>

                    <p class="text-sm text-gray-700 mb-1">
                        Clinic: @doctor.Clinic?.Name
                    </p>
                    <p class="text-sm text-gray-700 mb-4">
                        Fee: Rs. @doctor.ConsultationFee.ToString("N2")
                    </p>

                    <div class="mt-6 text-center">
                        <a asp-controller="Account" asp-action="Login"
                           class="px-4 py-2 bg-blue-700 text-white rounded-lg shadow font-medium">
                            Sign in to View Details
                        </a>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-10">
            <p class="text-gray-600 text-sm mb-3">
                Want to see real availability & book instantly?
            </p>
            <a asp-controller="Account" asp-action="Register"
               class="px-6 py-3 rounded-xl bg-accent text-neutral font-semibold shadow hover:bg-yellow-500 transition">
                Create Free Account
            </a>
        </div>
    }
</div>
