@* _Hero.cshtml *@
<!-- Hero -->
<section class="relative overflow-hidden">
    <div class="glow"></div>
    <div class="mx-auto max-w-7xl px-4 pt-14 pb-20 md:pt-20 md:pb-28">
        <div class="grid items-center gap-12 md:grid-cols-2">
            <div>
                <div class="inline-flex items-center gap-2 rounded-full bg-secondary px-3 py-1 text-xs font-medium text-neutral ring-1 ring-inset ring-brand-100">
                    <span class="inline-block h-2 w-2 rounded-full bg-accent"></span>
                    Instant online booking • 24/7
                </div>
                <h1 class="mt-4 text-4xl font-extrabold sm:text-5xl">
                    Healthcare appointments,
                    <span class="text-brand-900">simplified</span>.
                </h1>
                <p class="mt-4 text-neutral">
                    Find the right specialist, pick a time, and confirm in under 2
                    minutes. Transparent pricing, reminders, and secure records in one
                    place.
                </p>
                <form method="get" asp-controller="Home" asp-action="Search"
                      class="mt-8 grid gap-3 sm:grid-cols-3">

                    <select name="specialtyId"
                            class="sm:col-span-2 w-full rounded-xl border border-brand-200 px-4 py-3 text-sm">
                        <option value="">Search specialty...</option>
                        @foreach (var s in ViewBag.Specialties)
                        {
                            <option value="@s.SpecialtyId">@s.Name</option>
                        }
                    </select>

                    <button type="submit"
                            class="rounded-xl bg-accent px-5 py-3 text-sm font-semibold text-neutral shadow-soft">
                        Check availability
                    </button>
                </form>


            </div>
            <div class="relative">
                <div class="absolute -inset-4 -z-10 rounded-3xl bg-gradient-to-br from-accent/20 to-white blur-2xl"></div>
                <div class="overflow-hidden rounded-3xl border border-secondary bg-white shadow-soft">
                    <div class="grid grid-cols-3 gap-4 p-6">
                        <div class="col-span-3">
                            <h3 class="text-sm font-semibold text-slate-700">Top-rated specialists</h3>
                            <p class="mt-1 text-sm text-slate-600">
                                Search and book appointments with certified doctors you can trust — anytime.
                            </p>

                        </div>
                        <!-- Calendar preview image -->
                        <img src="https://cdn.pixabay.com/photo/2022/01/08/08/07/dentist-6923507_960_720.jpg"
                             alt="Calendar preview"
                             class="col-span-3 h-40 w-full rounded-xl object-cover" />
                        <!-- Doctor profile images -->
                        <img src="https://images.pexels.com/photos/8460379/pexels-photo-8460379.jpeg"
                             alt="Doctor profile 1"
                             class="h-20 w-full rounded-xl object-cover" />
                        <img src="https://images.pexels.com/photos/8376232/pexels-photo-8376232.jpeg"
                             alt="Doctor profile 2"
                             class="h-20 w-full rounded-xl object-cover" />

                        <img src="https://images.pexels.com/photos/8460159/pexels-photo-8460159.jpeg"
                             alt="Doctor profile 3"
                             class="h-20 w-full rounded-xl object-cover" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>