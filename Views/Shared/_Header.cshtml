@* _Header.cshtml *@
<header class="sticky top-0 z-40 bg-white/90 backdrop-blur supports-[backdrop-filter]:bg-white/70">
    <div class="mx-auto max-w-7xl px-4">
        <div class="flex h-16 items-center justify-between">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-2 font-bold text-neutral">
                <svg xmlns="http://www.w3.org/2000/svg"
                     fill="currentColor"
                     viewBox="0 0 24 24"
                     class="h-6 w-6 text-accent">
                    <path d="M12 2a10 10 0 100 20 10 10 0 000-20zm1 5a1 1 0 00-2 0v4H7a1 1 0 000 2h4v4a1 1 0 002 0v-4h4a1 1 0 000-2h-4V7z" />
                </svg>
                MediCare
            </a>

            <!-- Nav -->
            <nav class="hidden md:flex items-center gap-8 text-sm">
                <a href="#how" class="hover:text-brand-900">How it works</a>
                <a href="#features" class="hover:text-brand-900">Features</a>
                <a href="#pricing" class="hover:text-brand-900">Pricing</a>
                <a href="#faq" class="hover:text-brand-900">FAQ</a>
                <a href="#contact" class="hover:text-brand-900">Contact</a>
            </nav>

            <!-- Desktop Auth Links -->
            <div class="hidden md:flex items-center gap-3">
                @await Html.PartialAsync("_LoginPartial")
            </div>

            <!-- Mobile -->
            <button id="menuBtn"
                    class="md:hidden rounded-xl border px-3 py-2 text-sm">
                Menu
            </button>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobileMenu" class="md:hidden hidden border-t bg-white">
        <div class="mx-auto max-w-7xl px-4 py-3 space-y-2 text-sm">
            <a href="#how" class="block">How it works</a>
            <a href="#features" class="block">Features</a>
            <a href="#pricing" class="block">Pricing</a>
            <a href="#faq" class="block">FAQ</a>
            <a href="#contact" class="block">Contact</a>

            <!-- Reuse LoginPartial for auth links -->
            <div class="pt-2 flex flex-col gap-2">
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </div>
</header>
