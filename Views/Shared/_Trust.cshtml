@* _Trust.cshtml *@
<!-- Trust --><section id="trust" class="py-24 bg-white relative overflow-hidden">
    <div class="mx-auto max-w-7xl px-6">
        <div class="grid md:grid-cols-2 gap-16 items-center">
            <div class="relative">
                <div class="absolute -inset-4 bg-emerald-500/5 blur-3xl rounded-[3rem]"></div>
                <div class="bg-slate-50 rounded-[3rem] border border-slate-100 p-12 relative overflow-hidden group">
                    <i data-lucide="shield-check" class="absolute -right-6 -bottom-6 w-48 h-48 text-emerald-500/10 -rotate-12 transition-transform group-hover:rotate-0 duration-700"></i>

                    <div class="relative z-10 space-y-8">
                        <div class="w-16 h-16 bg-emerald-500 text-white rounded-2xl flex items-center justify-center shadow-xl shadow-emerald-200">
                            <i data-lucide="lock" class="w-8 h-8"></i>
                        </div>
                        <h3 class="text-3xl font-black text-slate-900 tracking-tight leading-tight">Your health data, <br /><span class="text-emerald-600">triple-locked</span>.</h3>
                        <p class="text-slate-500 font-medium leading-relaxed">We employ military-grade AES-256 encryption and strict HIPAA-compliant protocols to ensure your clinical records remain between you and your doctor.</p>

                        <div class="pt-4 flex flex-wrap gap-4">
                            <div class="flex items-center gap-2 px-4 py-2 bg-white rounded-full border border-slate-200 shadow-sm">
                                <span class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"></span>
                                <span class="text-[10px] font-black text-slate-500 uppercase tracking-widest">SSL Secure</span>
                            </div>
                            <div class="flex items-center gap-2 px-4 py-2 bg-white rounded-full border border-slate-200 shadow-sm">
                                <i data-lucide="database" class="w-3.5 h-3.5 text-blue-500"></i>
                                <span class="text-[10px] font-black text-slate-500 uppercase tracking-widest">Encrypted Storage</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="space-y-12">
                <div>
                    <h2 class="text-[10px] font-black text-blue-600 uppercase tracking-[0.3em] mb-4">Patient Protection</h2>
                    <h3 class="text-4xl font-black text-slate-900 tracking-tight">Built on a foundation of <span class="text-slate-400">integrity</span>.</h3>
                </div>

                <div class="space-y-8">
                    <div class="flex gap-6 group">
                        <div class="w-12 h-12 bg-blue-50 text-blue-600 rounded-xl flex items-center justify-center shrink-0 group-hover:bg-blue-600 group-hover:text-white transition-all duration-300 shadow-sm">
                            <i data-lucide="user-check" class="w-6 h-6"></i>
                        </div>
                        <div>
                            <h4 class="text-lg font-black text-slate-900 mb-1 uppercase tracking-tight">Verified Practitioners</h4>
                            <p class="text-sm text-slate-500 font-medium leading-relaxed">Every doctor on our platform undergoes a rigorous multi-step credential verification process.</p>
                        </div>
                    </div>

                    <div class="flex gap-6 group">
                        <div class="w-12 h-12 bg-blue-50 text-blue-600 rounded-xl flex items-center justify-center shrink-0 group-hover:bg-blue-600 group-hover:text-white transition-all duration-300 shadow-sm">
                            <i data-lucide="star" class="w-6 h-6"></i>
                        </div>
                        <div>
                            <h4 class="text-lg font-black text-slate-900 mb-1 uppercase tracking-tight">Transparent Reviews</h4>
                            <p class="text-sm text-slate-500 font-medium leading-relaxed">All feedback is gathered from verified patients only, ensuring 100% authentic ratings and clinical experiences.</p>
                        </div>
                    </div>

                    <div class="flex gap-6 group">
                        <div class="w-12 h-12 bg-blue-50 text-blue-600 rounded-xl flex items-center justify-center shrink-0 group-hover:bg-blue-600 group-hover:text-white transition-all duration-300 shadow-sm">
                            <i data-lucide="credit-card" class="w-6 h-6"></i>
                        </div>
                        <div>
                            <h4 class="text-lg font-black text-slate-900 mb-1 uppercase tracking-tight">Guaranteed Refunds</h4>
                            <p class="text-sm text-slate-500 font-medium leading-relaxed">Easy cancellation and automated refund processing if your appointment is cancelled by the clinic.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>